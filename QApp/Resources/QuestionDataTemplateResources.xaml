<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Extensions="clr-namespace:QApp.Helpers.Extensions"                                       
                    xmlns:local="clr-namespace:QApp.Helpers.DataTemplateSelectors"                    
                    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                    xmlns:View="clr-namespace:DevExpress.RealtorWorld.Xpf.View;assembly=DevExpress.RealtorWorld.Xpf"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:Helpers="clr-namespace:DevExpress.RealtorWorld.Xpf.Helpers;assembly=DevExpress.RealtorWorld.Xpf">

    <Style x:Key="calendarCustom" TargetType="{x:Type Calendar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Calendar}">                    
                    <Grid>
                        <Viewbox Height="300" Width="300">
                            <CalendarItem x:Name="PART_CalendarItem" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"/>                        
                        </Viewbox>                        
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type DatePickerTextBox}">
        <Setter Property="Width" Value="150" />
        <Setter Property="Height" Value="30" />
        <Setter Property="FontSize" Value="18"/>
    </Style>    
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <DataTemplate x:Key="DefaultDataTemplate">
        <ItemsControl ItemsSource="{Binding Answers}" ItemTemplateSelector="{DynamicResource SingleOptionDataTemplateSelector}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>            
        </ItemsControl>
    </DataTemplate>
    <DataTemplate x:Key="DropDownDataTemplate">

                <StackPanel  Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,35,0,0">
                    <Extensions:ComboBoxDropDownCommand Margin="4" Height="50" Width="250" FontSize="16" HorizontalContentAlignment="Left"  VerticalContentAlignment="Center" ItemsSource="{Binding Answers}"  
                        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type View:ModuleView}}, Path=DataContext.SetCurrentAnswerCommand}" SelectedItem="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type View:ModuleView}}, Path=DataContext.SelectedAnswer}">
                        <Extensions:ComboBoxDropDownCommand.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">                                    
                                    <TextBlock Text="{Binding AnswerText}" Margin="4,0"/>                                    
                                </StackPanel>
                            </DataTemplate>
                        </Extensions:ComboBoxDropDownCommand.ItemTemplate>
                    </Extensions:ComboBoxDropDownCommand>
                </StackPanel>

    </DataTemplate>    
    <DataTemplate x:Key="DateTimeDataTemplate">

                <StackPanel  Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,35,0,0">
                    <DatePicker CalendarStyle="{StaticResource calendarCustom}" SelectedDate="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type View:ModuleView}}, Path=DataContext.SelectedAnswer.AnswerText}" Name="MonthlyCalendar" FirstDayOfWeek="Monday" IsTodayHighlighted="True" Foreground="White">                                               
                    </DatePicker>
                    <Button FontSize="20" Margin="5" Content="Save" Padding="10"
                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type View:ModuleView}}, Path=DataContext.SetCurrentAnswerCommand}">
                        <Button.Resources>
                            <Extensions:ChangeObjectMultiConverter x:Key="ChangeObjectMultiConverter"/>
                        </Button.Resources>
                        <Button.CommandParameter>
                            <MultiBinding Converter="{StaticResource ChangeObjectMultiConverter}">
                                <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type StackPanel}}" Path="DataContext"/>
                                <Binding ElementName="MonthlyCalendar" Path="Text"/>
                            </MultiBinding>
                        </Button.CommandParameter>
                    </Button>
                </StackPanel>

    </DataTemplate>
    <DataTemplate x:Key="GpsCoordinatesDataTemplate">

                <StackPanel  Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,35,0,0">
                    <Border BorderThickness="1" BorderBrush="White">
                        <dxe:TextEdit Name="GpsCoordinateText" Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type View:ModuleView}}, Path=DataContext.SelectedAnswer.AnswerText}" 
                                 Width="100" Height="30" Canvas.Top="50" Canvas.Left="20" MaskType="Simple" Mask="00.000000;00.000000" />
                    </Border>
                    <Button FontSize="20" Margin="5" Content="Save" Padding="10"
                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type View:ModuleView}}, Path=DataContext.SetCurrentAnswerCommand}">
                        <Button.Resources>
                            <Extensions:ChangeObjectMultiConverter x:Key="ChangeObjectMultiConverter"/>
                        </Button.Resources>
                        <Button.CommandParameter>
                            <MultiBinding Converter="{StaticResource ChangeObjectMultiConverter}">
                                <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type StackPanel}}" Path="DataContext"/>
                                <Binding ElementName="GpsCoordinateText" Path="Text"/>
                            </MultiBinding>
                        </Button.CommandParameter>
                    </Button>
                </StackPanel>

    </DataTemplate>
    <DataTemplate x:Key="MultyOptionDataTemplate">
        <ItemsControl ItemsSource="{Binding Answers}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>                       
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <dxlc:Tile Background="#FF00ABBA" Content="{Binding}" Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type View:ModuleView}}, Path=DataContext.SetCurrentAnswerCommand}"
                            CommandParameter="{Binding}" Helpers:TileSelectHelper.ComparisonPropertyPath="PublicKey" Padding="2"  Margin="5,5,5,5"
                            Helpers:TileSelectHelper.SelectedValue="{Binding Path=DataContext.SelectedAnswer.PublicKey, RelativeSource={RelativeSource AncestorType={x:Type View:ModuleView}}}">
                            <dxlc:Tile.ContentTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid>
                                            <TextBlock Text="{Binding AnswerText}" Margin="5,5,5,5" FontSize="16" Foreground="#FFFFFFFF" TextWrapping="Wrap" />
                                            <Border BorderBrush="#f78a09" Background="Transparent" BorderThickness="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsHitTestVisible="False" Visibility="{Binding Selected, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </dxlc:Tile.ContentTemplate>
                    </dxlc:Tile>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>     
    </DataTemplate>
    <DataTemplate x:Key="NumericDataTemplate">
        <ContentControl>
            <ContentControl.Content>               
                     <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,35,0,0">
                         <Border BorderThickness="1" BorderBrush="White">                                
                             <dxe:TextEdit Name="txtBox" EditValue="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type View:ModuleView}}, Path=DataContext.SelectedAnswer.AnswerText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                           Width="100" Height="30" Canvas.Top="50" Canvas.Left="20" MaskType="Numeric" MaskUseAsDisplayFormat="True" />                                
                         </Border>
                         <Button FontSize="20" Margin="5" Content="Save" Padding="10"
                             Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type View:ModuleView}}, Path=DataContext.SetCurrentAnswerCommand}">
                             <Button.Resources>
                                 <Extensions:ChangeObjectMultiConverter x:Key="ChangeObjectMultiConverter"/>
                             </Button.Resources>
                             <Button.CommandParameter>
                                 <MultiBinding Converter="{StaticResource ChangeObjectMultiConverter}">
                                     <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type ContentControl}}" Path="DataContext"/>
                                     <Binding ElementName="txtBox" Path="Text"/>
                                 </MultiBinding>
                             </Button.CommandParameter>
                         </Button>
                     </StackPanel>                    
            </ContentControl.Content>
        </ContentControl>
    </DataTemplate>
    <DataTemplate x:Key="TextDataTemplate">
        <ContentControl>
            <ContentControl.Content>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,35,0,0">
                            <Border BorderThickness="1" BorderBrush="White">
                                <dxe:TextEdit Name="txtTextBox" Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type View:ModuleView}}, Path=DataContext.SelectedAnswer.AnswerText}" 
                                              Width="100" Height="30" Canvas.Top="50" Canvas.Left="20" />
                            </Border>
                            <Button FontSize="20" Margin="5" Content="Save" Padding="10"
                                Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type View:ModuleView}}, Path=DataContext.SetCurrentAnswerCommand}">
                                <Button.Resources>
                                    <Extensions:ChangeObjectMultiConverter x:Key="ChangeObjectMultiConverter"/>
                                </Button.Resources>
                                <Button.CommandParameter>
                                    <MultiBinding Converter="{StaticResource ChangeObjectMultiConverter}">
                                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type ContentControl}}" Path="DataContext"/>
                                        <Binding ElementName="txtTextBox" Path="Text"/>
                                    </MultiBinding>
                                </Button.CommandParameter>
                            </Button>
                        </StackPanel>
            </ContentControl.Content>
        </ContentControl>
    </DataTemplate>
    <DataTemplate x:Key="PercentageDataTemplate">
        <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition Width="0.7*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.ColumnSpan="2" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,35,0,0">
                    <!--<Border BorderThickness="1" BorderBrush="White">
                        <TextBox Name="percentText" Text="" Width="100" Height="20" Canvas.Top="50" Canvas.Left="20"/>
                    </Border>
                    <Button Grid.Column="1" FontSize="20" Margin="5" Content="Save" Padding="10"
                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type View:ModuleView}}, Path=DataContext.SetCurrentAnswerCommand}">
                        <Button.Resources>
                            <Extensions:ChangeObjectMultiConverter x:Key="ChangeObjectMultiConverter"/>
                        </Button.Resources>
                        <Button.CommandParameter>
                            <MultiBinding Converter="{StaticResource ChangeObjectMultiConverter}">
                                <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type StackPanel}}" Path="DataContext"/>
                                <Binding ElementName="percentText" Path="Text"/>
                            </MultiBinding>
                        </Button.CommandParameter>
                    </Button>-->
                </StackPanel>
            </Grid>
        </Grid>
    </DataTemplate>

    <local:QuestionDataTemplateSelector x:Key="QuestionDataTemplateSelector"
              DefaultTemplate="{StaticResource DefaultDataTemplate}"
              DropDownTemplate="{StaticResource DropDownDataTemplate}"
              DateTimeTemplate="{StaticResource DateTimeDataTemplate}"
              GpsCoordinatesTemplate="{StaticResource GpsCoordinatesDataTemplate}"
              MultyOptionTemplate="{StaticResource MultyOptionDataTemplate}"
              NumericTemplate="{StaticResource NumericDataTemplate}"
              PercentageTemplate="{StaticResource PercentageDataTemplate}"
              TextTemplate ="{StaticResource TextDataTemplate}"/>

</ResourceDictionary>