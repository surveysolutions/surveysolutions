<views:MvxWpfView x:Class="WB.Tools.CapiDataGenerator.Views.ModeSelectorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Cirrious.MvvmCross.Wpf.Views;assembly=Cirrious.MvvmCross.Wpf"
             xmlns:capiDataGenerator="clr-namespace:CapiDataGenerator" Height="286" Width="349">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="14,10,0,0" TextWrapping="Wrap" Text="Please select mode for data generation:" VerticalAlignment="Top" Width="300" Height="103"/>
        <ComboBox HorizontalAlignment="Center" Margin="14,135,0,0" VerticalAlignment="Top" Width="300" ItemsSource="{Binding WorkingModeList}" SelectedItem="{Binding SelectedWorkingMode}"/>
        <Button Content="Select" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40"  Width="120" Command="{Binding SelectCommand}"  IsEnabled="{Binding CanSelect}" Margin="90,178,88,0"/>

    </Grid>
</views:MvxWpfView>
