@model WB.Core.BoundedContexts.Headquarters.Views.InterviewHistory.InterviewHistoryView
           

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = @Pages.InterviewHistory_Header;
}

<main class="main">
    <div class="container-fluid">
        <div class="row">
            <div class="main-information-no-filter">
                <partial name="_alerts"/>
                <div class="page-header clearfix">
                    <h1>@Pages.InterviewHistory_Header</h1>
                </div>
                <table class="table table-striped table-condensed">
                    <thead>
                    <tr>
                        <th>Action</th>
                        <th>Parameters</th>
                        <th>Originator</th>
                        <th>Role</th>
                        <th>Timestamp</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Records)
                    {
                        <tr>
                            <td>
                                @item.Action
                            </td>
                            <td>
                                @foreach (var parameter in item.Parameters)
                                {
                                    <small>@parameter.Key: </small>@parameter.Value
                                    <br/>
                                }
                            </td>
                            <td>
                                @item.OriginatorName
                            </td>
                            <td>
                                @item.OriginatorRole
                            </td>
                            <td>
                                @(item.Timestamp.HasValue ? item.Timestamp.Value.ToString("s") : "<NULL>")
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
