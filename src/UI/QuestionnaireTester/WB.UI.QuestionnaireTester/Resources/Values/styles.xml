<?xml version="1.0" encoding="utf-8"?>
<resources>
 
  <style name="InterviewToolbarTitle" parent="ToolbarTitle">
    <item name="android:layout_marginLeft">@dimen/margin_Interview_LeftSide</item>
    <item name="android:layout_marginRight">@dimen/margin_Interview_RightSide</item>
  </style>

  <style name="ToolbarTitle" parent="Theme.Light.Base">
    <item name="android:textColor">@color/colorToolbarText</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">18dp</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">25dp</item>
    <item name="android:layout_marginRight">25dp</item>
  </style>

  <style name="Interview_List" parent="Theme.Light.Base">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:orientation">vertical</item>
    <item name="android:smoothScrollbar">true</item>
    <item name="android:scrollingCache">false</item>
    <item name="android:animationCache">false</item>
  </style>

  <style name="PrefilledQuestions_List" parent="Theme.Light.Base">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:orientation">vertical</item>
    <item name="android:smoothScrollbar">true</item>
    <item name="android:scrollingCache">false</item>
    <item name="android:animationCache">false</item>
  </style>

  <style name="PrefilledQuestions_QuestionnaireTitle" parent="Theme.Light.Base">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">sans-serif-thin</item>
    <item name="android:textSize">36dp</item>
    <item name="android:layout_marginLeft">@dimen/margin_Interview_LeftSide</item>
    <item name="android:layout_marginRight">@dimen/margin_Interview_RightSide</item>
    <item name="android:layout_centerVertical">true</item>
  </style>

  <style name="Interview_LeftSidePanel" parent="Theme.Light.Base">
    <item name="android:layout_width">520dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_gravity">left|start</item>
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:background">#FFFFFFFF</item>
  </style>

  <style name="EditTextTheme_Blue_Light" parent="android:Widget.EditText">
    <item name="android:background">@drawable/theme_blue_light_edit_text_holo_light</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="CheckBoxTheme_Blue_Light" parent="android:Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/theme_blue_light_btn_check_holo_light</item>
  </style>

  <style name="ButtonTheme_Blue_Light" parent="android:Widget.Button">
    <item name="android:background">@drawable/theme_blue_light_btn_default_holo_light</item>
    <item name="android:minHeight">64dip</item>
    <item name="android:minWidth">96dip</item>
    <item name="android:textColor">#FFFFFFFF</item>
  </style>

  <style name="ImageButtonTheme_Blue_Light" parent="android:Widget.ImageButton">
    <item name="android:background">@drawable/theme_blue_light_btn_default_holo_light</item>
  </style>

  <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@android:color/white</item>
  </style>
  
</resources>