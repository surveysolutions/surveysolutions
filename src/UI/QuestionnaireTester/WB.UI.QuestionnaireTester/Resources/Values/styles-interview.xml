<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Interview_Entity" parent="VerticalFullWidthWrappingLayout">
    <item name="android:layout_marginLeft">@dimen/margin_Interview_LeftSide</item>
    <item name="android:layout_marginRight">@dimen/margin_Interview_RightSide</item>
    <item name="android:layout_marginTop">@dimen/margin_Interview_Top</item>
    <item name="android:layout_marginBottom">@dimen/margin_Interview_Bottom</item>
  </style>

  <style name="Interview_Entity_BasicFont">
    <item name="android:fontFamily">Arial</item>
    <item name="android:textSize">@dimen/converted_textsize_18pt</item>
  </style>

  <style name="Interview_Entity_Title" parent="Interview_Entity_BasicFont">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/question_title_text</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
  </style>

  <style name="Interview_Entity_Divider" >
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_margin">0dp</item>
    <item name="android:background">#dadada</item>
  </style>  

</resources>