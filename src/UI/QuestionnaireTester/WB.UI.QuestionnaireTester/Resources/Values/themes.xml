<?xml version="1.0" encoding="utf-8" ?>

<resources>

  <!-- Base theme applied no matter what API -->
  <style name="Theme.Light.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowBackground">@color/applicationBackground</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
  </style>

  <style name="Theme.Gray.Light" parent="Theme.Light.Base">
    <item name="colorPrimary">#FF666666</item>
    <item name="android:editTextStyle">@style/EditTextTheme_Blue_Light</item>
    <item name="android:textColorHighlight">#9936aee5</item>
    <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewTheme_Blue_Light</item>
    <item name="android:checkboxStyle">@style/CheckBoxTheme_Blue_Light</item>
    <item name="android:radioButtonStyle">@style/RadioButtonTheme_Blue_Light</item>
    <item name="android:buttonStyle">@style/ButtonTheme_Blue_Light</item>
    <item name="android:imageButtonStyle">@style/ImageButtonTheme_Blue_Light</item>
    <item name="android:spinnerStyle">@style/SpinnerTheme_Blue_Light</item>
    <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemTheme_Blue_Light</item>
    <item name="android:progressBarStyleHorizontal">@style/ProgressBarTheme_Blue_Light</item>
    <item name="android:seekBarStyle">@style/SeekBarTheme_Blue_Light</item>
  </style>

  <style name="Theme.Blue.Light" parent="Theme.Light.Base">
    <item name="colorPrimary">@color/colorBlueThemePrimary</item>
    <item name="android:editTextStyle">@style/EditTextTheme_Blue_Light</item>
    <item name="android:textColorHighlight">#9936aee5</item>
    <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewTheme_Blue_Light</item>
    <item name="android:checkboxStyle">@style/CheckBoxTheme_Blue_Light</item>
    <item name="android:radioButtonStyle">@style/RadioButtonTheme_Blue_Light</item>
    <item name="android:buttonStyle">@style/ButtonTheme_Blue_Light</item>
    <item name="android:imageButtonStyle">@style/ImageButtonTheme_Blue_Light</item>
    <item name="android:spinnerStyle">@style/SpinnerTheme_Blue_Light</item>
    <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemTheme_Blue_Light</item>
    <item name="android:progressBarStyleHorizontal">@style/ProgressBarTheme_Blue_Light</item>
    <item name="android:seekBarStyle">@style/SeekBarTheme_Blue_Light</item>
  </style>

  <style name="Theme.Splash" parent="Theme.Light.Base">
  </style>

</resources>