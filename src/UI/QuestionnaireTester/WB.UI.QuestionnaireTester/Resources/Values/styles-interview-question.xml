<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Interview_QuestionWithDivider" parent="VerticalFullWidthWrappingLayout">
    <item name="android:background">@drawable/question_background</item>
  </style>

  <style name="Interview_Question" parent="Interview_Entity" />

  <style name="Interview_Question_Header" parent="VerticalFullWidthWrappingLayout">
    <item name="android:layout_marginLeft">@dimen/Interview_Entity_Element_margin_horizontal</item>
    <item name="android:layout_marginRight">@dimen/Interview_Entity_Element_margin_horizontal</item>
  </style>

  <style name="Interview_Question_Title" parent="Interview_Entity_Title" />

  <style name="Interview_Question_Instruction" parent="Interview_Question_Header" />

  <style name="Interview_Question_Instruction_Title" parent="VerticalFullWidthWrappingLayout">
    <item name="android:fontFamily">Trebuchet</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/textsize_12</item>
    <item name="android:textColor">#2a81cb</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Instruction_Title_margin_top</item>
  </style>

  <style name="Interview_Question_Instruction_Details" parent="VerticalFullWidthWrappingLayout">
    <item name="android:fontFamily">Arial</item>
    <item name="android:textStyle">bold|italic</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:textColor">@color/btn_default</item>
  </style>

  <style name="Interview_Question_Body" parent="VerticalFullWidthWrappingLayout">
    
  </style>

  <style name="Interview_Question_Answer" parent="FullWidthWrappingLayout">
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Answer_margin_top</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Question_Answer_margin_bottom</item>
  </style>

  <style name="Interview_Question_Answer_Editor" parent="Interview_Entity_BasicFont">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/editorTextColor</item>
    <item name="android:textColorHint">@color/editorHintTextColor</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Interview_Question_Answer_TextEditor" parent="Interview_Question_Answer_Editor">
    <item name="android:maxLines">1</item>
    <item name="android:singleLine">true</item>
    <item name="android:focusable">true</item>
    <item name="android:focusableInTouchMode">true</item>
    <item name="android:background">@drawable/question_text_question</item>
    <item name="android:textCursorDrawable">@null</item>
  </style>
  
  <style name="Interview_Question_Answer_FilteredComboBox" parent="Interview_Question_Answer_TextEditor">
    <item name="android:completionThreshold">1</item>
    <item name="android:drawablePadding">@dimen/Interview_Question_Answer_FilteredComboBox_padding</item>
    <item name="android:popupBackground">@drawable/question_combobox_popup_background</item>
  </style>    
  
  <style name="Interview_Question_Answer_FilteredComboBox_Item" parent="Interview_Entity_BasicFont">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/editorTextColor</item>
    <item name="android:paddingTop">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:paddingBottom">@dimen/Interview_Question_Answer_Input_background_padding</item>
  </style>  
  
  <style name="Interview_Question_Answer_FilteredComboBox_Item_Background">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Interview_Question_Answer_Options" parent="VerticalFullWidthWrappingLayout" />

  <style name="Interview_Question_Answer_Option" parent="Interview_Entity_BasicFont">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Answer_Option_margin_vertical</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Question_Answer_Option_margin_vertical</item>
    <item name="android:layout_marginLeft">@dimen/Interview_Question_Answer_Option_margin_horizontal</item>
    <item name="android:layout_marginRight">@dimen/Interview_Question_Answer_Option_margin_horizontal</item>
    <item name="android:paddingLeft">@dimen/Interview_Question_Answer_Option_padding_left</item>
    <item name="android:paddingRight">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:paddingTop">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:paddingBottom">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:textColor">@drawable/question_option_text_color</item>
    <item name="android:background">@drawable/question_option_background</item>
  </style>

  <style name="Interview_Question_Answer_Option_Background">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Answer_Option_margin_vertical</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Question_Answer_Option_margin_vertical</item>
    <item name="android:layout_marginLeft">@dimen/Interview_Question_Answer_Option_margin_horizontal</item>
    <item name="android:layout_marginRight">@dimen/Interview_Question_Answer_Option_margin_horizontal</item>
    <item name="android:paddingLeft">@dimen/Interview_Question_Answer_Option_padding_left</item>
    <item name="android:background">@drawable/question_option_background</item>
  </style>

  <style name="Interview_Question_Answer_Option_Input" parent="Interview_Entity_BasicFont">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">@dimen/Interview_Question_Answer_Option_padding_left</item>
    <item name="android:paddingRight">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:paddingTop">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:paddingBottom">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:textColor">@drawable/question_option_text_color</item>
    <item name="android:layout_gravity">right</item>
  </style>

  <style name="Interview_Question_MultiOptionOrder" parent="Interview_Entity_BasicFont">
    <item name="android:paddingLeft">@dimen/Interview_Question_Answer_Option_padding_left</item>
    <item name="android:paddingRight">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:paddingTop">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:paddingBottom">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_gravity">left</item>
  </style>

  <style name="Interview_Question_Answer_List_Item">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Answer_Option_margin_vertical</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Question_Answer_Option_margin_vertical</item>
    <item name="android:layout_marginLeft">@dimen/Interview_Question_Answer_Option_margin_horizontal</item>
    <item name="android:layout_marginRight">@dimen/Interview_Question_Answer_Option_margin_horizontal</item>
    <item name="android:background">@drawable/question_list_item_background</item>
  </style>
  
  <style name="Interview_Question_Answer_List_Editor" >
    <item name="android:maxLines">1</item>
    <item name="android:singleLine">true</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:focusable">true</item>
    <item name="android:layout_width">@dimen/Interview_Question_List_Editor_width</item>
    <item name="android:focusableInTouchMode">true</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textCursorDrawable">@null</item>
    <item name="android:background">@drawable/question_list_item_editor_background</item>
  </style>

  <style name="Interview_Question_Answer_List_DeleteButton">
    <item name="android:layout_width">@dimen/Interview_Question_List_DeleteButton_width</item>
    <item name="android:layout_height">@dimen/Interview_Question_List_DeleteButton_height</item>
    <item name="android:layout_gravity">right</item>
    <item name="android:scaleType">fitCenter</item>
    <item name="android:background">@drawable/delete_button</item>
  </style>

  <style name="Interview_Question_Answer_List_NewItem_Editor" parent="Interview_Question_Answer_TextEditor">
    <item name="android:maxLines">1</item>
    <item name="android:singleLine">true</item>
    <item name="android:focusable">true</item>
    <item name="android:focusableInTouchMode">true</item>
    <item name="android:background">@drawable/question_text_question</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Answer_Option_margin_vertical</item>
    <item name="android:textCursorDrawable">@null</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="Interview_Question_ExternalData_Container">
    <item name="android:layout_marginBottom">@dimen/Interview_Question_Answer_MediaBlock_margin_bottom</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="Interview_Question_Multimedia_Picture">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:background">@drawable/media_question_white_border</item>
    <item name="android:layout_height">@dimen/Interview_Question_Answer_Media_height</item>
  </style>


  <style name="Interview_Question_TextAnswer" parent="Interview_Question_Instruction_Details">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_TextAnswer_margin_top</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Question_TextAnswer_margin_bottom</item>
    <item name="android:textStyle">bold|italic</item>
    <item name="android:textColor">#2a81cb</item>
    <item name="android:textSize">@dimen/textsize_14</item>
  </style>

  <style name="Interview_Question_InputButton" parent="AppTheme">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/question_input_button</item>
    <item name="android:fontFamily">Arial</item>
    <item name="android:textSize">@dimen/textsize_18</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textColor">#b2b2b2</item>
    <item name="android:minHeight">@dimen/Theme_Button_min_height</item>
    <item name="android:minWidth">@dimen/Theme_Button_min_width</item>
    <item name="android:gravity">center_vertical|center_horizontal</item>
    <item name="android:paddingRight">@dimen/Interview_Question_InputButton_padding</item>
    <item name="android:paddingLeft">@dimen/Interview_Question_InputButton_padding</item>
    <item name="android:layout_marginLeft">@dimen/Interview_Question_InputButton_margin_LeftRight</item>
    <item name="android:layout_marginRight">@dimen/Interview_Question_InputButton_margin_LeftRight</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Question_InputButton_margin_Bottom</item>
  </style>

  <style name="Interview_Question_Errors" parent="VerticalFullWidthWrappingLayout">
    <item name="android:layout_marginLeft">@dimen/Interview_Entity_Element_margin_horizontal</item>
    <item name="android:layout_marginRight">@dimen/Interview_Entity_Element_margin_horizontal</item>
  </style>

  <style name="Interview_Question_Errors_Title" parent="FullWidthWrappingLayout">
    <item name="android:fontFamily">Trebuchet</item>
    <item name="android:textSize">@dimen/textsize_12</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/errorTextColor</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Errors_Title_margin_top</item>
  </style>

  <style name="Interview_Question_Errors_Details" parent="FullWidthWrappingLayout">
    <item name="android:fontFamily">Arial</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:textStyle">bold|italic</item>
    <item name="android:textColor">@color/errorTextColor</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Errors_Details_margin_top</item>
  </style>

  <style name="Interview_Question_Comments" parent="VerticalFullWidthWrappingLayout">
    <item name="android:layout_marginLeft">@dimen/Interview_Entity_Element_margin_horizontal</item>
    <item name="android:layout_marginRight">@dimen/Interview_Entity_Element_margin_horizontal</item>
  </style>

  <style name="Interview_Question_Comments_InterviewerTitle" parent="FullWidthWrappingLayout">
    <item name="android:fontFamily">Trebuchet</item>
    <item name="android:textSize">@dimen/textsize_12</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/commentInterviewerTextColor</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Comments_Title_margin_bottom</item>
  </style>

  <style name="Interview_Question_Comments_InterviewerDetails" parent="FullWidthWrappingLayout">
    <item name="android:fontFamily">Arial</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:textStyle">bold|italic</item>
    <item name="android:textColor">@color/commentDetailsInterviewerTextColor</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Comments_Details_margin_bottom</item>
  </style>

  <style name="Interview_Question_Comments_InterviewerDetails_Editor" parent="Interview_Question_Answer_TextEditor">
    <item name="android:layout_marginBottom">@dimen/Interview_Comments_Details_margin_bottom</item>
  </style>
  

  <style name="Interview_Question_Divider" parent="Interview_Entity_Divider" />

  <style name="Interview_Question_Progress_Indicator" parent="android:Widget.ProgressBar.Horizontal">
    <item name="android:focusable">false</item>
    <item name="android:layout_height">@dimen/Interview_Question_Progress_Indicator_height</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:keepScreenOn">false</item>    
    <item name="android:progressDrawable">@drawable/question_save_answer_progress_bar_states</item>
    <item name="android:indeterminateDrawable">@drawable/question_save_answer_progress_bar</item>
    <item name="android:minHeight">@dimen/Interview_Question_Progress_Indicator_height</item>
    <item name="android:maxHeight">@dimen/Interview_Question_Progress_Indicator_height</item>
  </style>


  <style name="Interview_Previous_Group_Navigation_Layout">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_marginLeft">@dimen/Interview_Entity_margin_left</item>
    <item name="android:layout_marginRight">@dimen/Interview_Entity_margin_right</item>
    <item name="android:layout_marginTop">@dimen/Interview_Previous_Group_Navigation_Layout_margin_top</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Previous_Group_Navigation_Layout_margin_bottom</item>
  </style>

  <style name="Interview_Previous_Group_Navigation_Button">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:paddingRight">@dimen/Interview_Previous_Group_Navigation_Button_padding</item>
    <item name="android:paddingLeft">@dimen/Interview_Previous_Group_Navigation_Button_padding</item>
  </style>

  <style name="Interview_Previous_Group_Navigation_Note">
    <item name="android:layout_height">fill_parent</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_marginLeft">@dimen/Interview_Previous_Group_Navigation_Note_margin_left</item>
    <item name="android:gravity">center_vertical</item>
  </style>
</resources>