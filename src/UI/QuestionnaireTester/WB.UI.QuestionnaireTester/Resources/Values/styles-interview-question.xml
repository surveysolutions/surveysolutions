<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Interview_QuestionWithDivider" parent="VerticalFullWidthWrappingLayout">
    <item name="android:background">@drawable/question_background</item>
  </style>

  <style name="Interview_Question" parent="Interview_Entity" />

  <style name="Interview_Question_Header" parent="VerticalFullWidthWrappingLayout">
    <item name="android:layout_marginLeft">@dimen/weight_InterviewEntity_Border</item>
    <item name="android:layout_marginRight">@dimen/weight_InterviewEntity_Border</item>
  </style>

  <style name="Interview_Question_Title" parent="Interview_Entity_Title" />

  <style name="Interview_Question_Instruction" parent="Interview_Question_Header" />

  <style name="Interview_Question_Instruction_Title" parent="VerticalFullWidthWrappingLayout">
    <item name="android:fontFamily">Trebuchet</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/converted_textsize_12pt</item>
    <item name="android:textColor">#2a81cb</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_marginTop">10dp</item>
  </style>

  <style name="Interview_Question_Instruction_Details" parent="VerticalFullWidthWrappingLayout">
    <item name="android:fontFamily">Arial</item>
    <item name="android:textStyle">bold|italic</item>
    <item name="android:textSize">@dimen/converted_textsize_14pt</item>
    <item name="android:textColor">#2a81cb</item>
  </style>

  <style name="Interview_Question_Body" parent="VerticalFullWidthWrappingLayout" />

  <style name="Interview_Question_Answer" parent="FullWidthWrappingLayout">
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginBottom">16dp</item>
    <item name="android:background">@drawable/active_question_background</item>
  </style>

  <style name="Interview_Question_Answer_Editor" parent="Interview_Entity_BasicFont">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#3f3f3f</item>
    <item name="android:textColorHint">#b2b2b2</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Interview_Question_Answer_Options" parent="VerticalFullWidthWrappingLayout" />

  <style name="Interview_Question_Answer_Option" parent="Interview_Entity_BasicFont">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">1.5dp</item>
    <item name="android:layout_marginBottom">1.5dp</item>
    <item name="android:layout_marginLeft">0dp</item>
    <item name="android:layout_marginRight">0dp</item>
    <item name="android:paddingLeft">0dp</item>
    <item name="android:textColor">@drawable/question_option_text_color</item>
    <item name="android:background">@drawable/question_option_background</item>
  </style>

  <style name="Interview_Question_Answer_Gps_Location_Text" parent="Interview_Question_Instruction_Details">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Interview_Question_Answer_Gps_Location_Button" parent="Interview_Entity_BasicFont">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textColor">#b2b2b2</item>
    <item name="android:background">#ffffff</item>
  </style>

  <style name="Interview_Question_Errors" parent="VerticalFullWidthWrappingLayout">
    <item name="android:layout_marginLeft">@dimen/weight_InterviewEntity_Border</item>
    <item name="android:layout_marginRight">@dimen/weight_InterviewEntity_Border</item>
  </style>

  <style name="Interview_Question_Errors_Title" parent="FullWidthWrappingLayout">
    <item name="android:fontFamily">Trebuchet</item>
    <item name="android:textSize">@dimen/converted_textsize_12pt</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/errorTextColor</item>
    <item name="android:layout_marginTop">10dp</item>
  </style>

  <style name="Interview_Question_Errors_Details" parent="FullWidthWrappingLayout">
    <item name="android:fontFamily">Arial</item>
    <item name="android:textSize">@dimen/converted_textsize_14pt</item>
    <item name="android:textStyle">bold|italic</item>
    <item name="android:textColor">@color/errorTextColor</item>
    <item name="android:layout_marginTop">10dp</item>
  </style>

  <style name="Interview_Question_Comments" parent="VerticalFullWidthWrappingLayout">
    <item name="android:layout_marginLeft">@dimen/weight_InterviewEntity_Border</item>
    <item name="android:layout_marginRight">@dimen/weight_InterviewEntity_Border</item>
  </style>

  <style name="Interview_Question_Comments_InterviewerTitle" parent="FullWidthWrappingLayout">
    <item name="android:fontFamily">Trebuchet</item>
    <item name="android:textSize">@dimen/converted_textsize_12pt</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/commentInterviewerTextColor</item>
  </style>

  <style name="Interview_Question_Comments_SupervisorTitle" parent="Interview_Question_Comments_InterviewerTitle">
    <item name="android:textColor">@color/commentSupervisorTextColor</item>
  </style>

  <style name="Interview_Question_Comments_InterviewerDetails" parent="FullWidthWrappingLayout">
    <item name="android:fontFamily">Arial</item>
    <item name="android:textSize">@dimen/converted_textsize_14pt</item>
    <item name="android:textStyle">bold|italic</item>
    <item name="android:textColor">@color/commentDetailsInterviewerTextColor</item>
  </style>

  <style name="Interview_Question_Comments_SupervisorDetails" parent="Interview_Question_Comments_InterviewerDetails">
    <item name="android:textColor">@color/commentSupervisorTextColor</item>
  </style>

  <style name="Interview_Question_Divider" parent="Interview_Entity_Divider" />
</resources>