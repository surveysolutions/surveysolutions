<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Interview_QuestionWithDivider" parent="VerticalFullWidthWrappingLayout">
    <item name="android:background">@drawable/question_background</item>
  </style>

  <style name="Interview_Question" parent="Interview_Entity" />

  <style name="Interview_Group"  parent="VerticalFullWidthWrappingLayout">
    <item name="android:layout_marginLeft">@dimen/Interview_Entity_margin_left</item>
    <item name="android:layout_marginRight">@dimen/Interview_Entity_margin_right</item>
    <item name="android:layout_marginTop">@dimen/Interview_Group_margin_top</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Group_margin_bottom</item>
  </style>
  
  <style name="Interview_Roster" parent="VerticalFullWidthWrappingLayout">
    <item name="android:layout_marginLeft">@dimen/Interview_Entity_margin_left</item>
    <item name="android:layout_marginRight">@dimen/Interview_Entity_margin_right</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Group_margin_bottom</item>
  </style>

  <style name="Interview_Roster_Item" parent="VerticalFullWidthWrappingLayout">
    <item name="android:layout_marginTop">@dimen/Interview_Group_margin_top</item>
  </style>

  <style name="Interview_Group_Title" parent="Interview_Entity_BasicFont">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/group_title_text</item>
  </style>

  <style name="Interview_Group_Description">
    <item name="android:fontFamily">Arial</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Interview_Question_Header" parent="VerticalFullWidthWrappingLayout">
    <item name="android:layout_marginLeft">@dimen/Interview_Entity_Element_margin_horizontal</item>
    <item name="android:layout_marginRight">@dimen/Interview_Entity_Element_margin_horizontal</item>
  </style>

  <style name="Interview_Question_Title" parent="Interview_Entity_Title" />

  <style name="Interview_Question_Instruction" parent="Interview_Question_Header" />

  <style name="Interview_Question_Instruction_Title" parent="VerticalFullWidthWrappingLayout">
    <item name="android:fontFamily">Trebuchet</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/textsize_12</item>
    <item name="android:textColor">#2a81cb</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Instruction_Title_margin_top</item>
  </style>

  <style name="Interview_Question_Instruction_Details" parent="VerticalFullWidthWrappingLayout">
    <item name="android:fontFamily">Arial</item>
    <item name="android:textStyle">bold|italic</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:textColor">@color/btn_default</item>
  </style>

  <style name="Interview_Question_Body" parent="VerticalFullWidthWrappingLayout">
    
  </style>

  <style name="Interview_Question_Answer" parent="FullWidthWrappingLayout">
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Answer_margin_top</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Question_Answer_margin_bottom</item>
  </style>

  <style name="Interview_Question_Answer_Editor" parent="Interview_Entity_BasicFont">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/editorTextColor</item>
    <item name="android:textColorHint">@color/editorHintTextColor</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Interview_Question_Answer_TextEditor" parent="Interview_Question_Answer_Editor">
    <item name="android:maxLines">1</item>
    <item name="android:singleLine">true</item>
    <item name="android:focusable">true</item>
    <item name="android:focusableInTouchMode">true</item>
    <item name="android:background">@drawable/question_text_question</item>
    <item name="android:textCursorDrawable">@null</item>
  </style>

  <style name="Interview_Question_Answer_Options" parent="VerticalFullWidthWrappingLayout" />

  <style name="Interview_Question_Answer_Option" parent="Interview_Entity_BasicFont">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Answer_Option_margin_vertical</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Question_Answer_Option_margin_vertical</item>
    <item name="android:layout_marginLeft">@dimen/Interview_Question_Answer_Option_margin_horizontal</item>
    <item name="android:layout_marginRight">@dimen/Interview_Question_Answer_Option_margin_horizontal</item>
    <item name="android:paddingLeft">@dimen/Interview_Question_Answer_Option_padding_left</item>
    <item name="android:paddingRight">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:paddingTop">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:paddingBottom">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:textColor">@drawable/question_option_text_color</item>
    <item name="android:background">@drawable/question_option_background</item>
  </style>

  <style name="Interview_Question_Answer_Option_Background">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Answer_Option_margin_vertical</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Question_Answer_Option_margin_vertical</item>
    <item name="android:layout_marginLeft">@dimen/Interview_Question_Answer_Option_margin_horizontal</item>
    <item name="android:layout_marginRight">@dimen/Interview_Question_Answer_Option_margin_horizontal</item>
    <item name="android:paddingLeft">@dimen/Interview_Question_Answer_Option_padding_left</item>
    <item name="android:background">@drawable/question_option_background</item>
  </style>

  <style name="Interview_Question_Answer_Option_Input" parent="Interview_Entity_BasicFont">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">@dimen/Interview_Question_Answer_Option_padding_left</item>
    <item name="android:paddingRight">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:paddingTop">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:paddingBottom">@dimen/Interview_Question_Answer_Input_background_padding</item>
    <item name="android:textColor">@drawable/question_option_text_color</item>
  </style>

  <style name="Interview_Question_Answer_Gps_Location_Text" parent="Interview_Question_Instruction_Details">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Interview_Question_Answer_Gps_Location_Button" parent="Interview_Entity_BasicFont">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textColor">#b2b2b2</item>
    <item name="android:background">#ffffff</item>
  </style>

  <style name="Interview_Question_Errors" parent="VerticalFullWidthWrappingLayout">
    <item name="android:layout_marginLeft">@dimen/Interview_Entity_Element_margin_horizontal</item>
    <item name="android:layout_marginRight">@dimen/Interview_Entity_Element_margin_horizontal</item>
  </style>

  <style name="Interview_Question_Errors_Title" parent="FullWidthWrappingLayout">
    <item name="android:fontFamily">Trebuchet</item>
    <item name="android:textSize">@dimen/textsize_12</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/errorTextColor</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Errors_Title_margin_top</item>
  </style>

  <style name="Interview_Question_Errors_Details" parent="FullWidthWrappingLayout">
    <item name="android:fontFamily">Arial</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:textStyle">bold|italic</item>
    <item name="android:textColor">@color/errorTextColor</item>
    <item name="android:layout_marginTop">@dimen/Interview_Question_Errors_Details_margin_top</item>
  </style>

  <style name="Interview_Question_Comments" parent="VerticalFullWidthWrappingLayout">
    <item name="android:layout_marginLeft">@dimen/Interview_Entity_Element_margin_horizontal</item>
    <item name="android:layout_marginRight">@dimen/Interview_Entity_Element_margin_horizontal</item>
  </style>

  <style name="Interview_Question_Comments_InterviewerTitle" parent="FullWidthWrappingLayout">
    <item name="android:fontFamily">Trebuchet</item>
    <item name="android:textSize">@dimen/textsize_12</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/commentInterviewerTextColor</item>
  </style>

  <style name="Interview_Question_Comments_InterviewerDetails" parent="FullWidthWrappingLayout">
    <item name="android:fontFamily">Arial</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:textStyle">bold|italic</item>
    <item name="android:textColor">@color/commentDetailsInterviewerTextColor</item>
  </style>

  <style name="Interview_Question_Comments_InterviewerDetails_Editor" parent="Interview_Question_Answer_TextEditor">
  </style>
  

  <style name="Interview_Question_Divider" parent="Interview_Entity_Divider" />

  <style name="Interview_Question_Progress_Indicator" parent="android:Widget.ProgressBar.Horizontal">
    <item name="android:focusable">false</item>
    <item name="android:layout_height">@dimen/Interview_Question_Progress_Indicator_height</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:keepScreenOn">false</item>    
    <item name="android:layout_marginTop">@dimen/Dashboard_ProgressBar_margin_top</item>

    <item name="android:progressDrawable">@drawable/question_save_answer_progress_bar_states</item>
    <item name="android:indeterminateDrawable">@drawable/question_save_answer_progress_bar</item>

    <item name="android:minHeight">@dimen/Interview_Question_Progress_Indicator_height</item>
    <item name="android:maxHeight">@dimen/Interview_Question_Progress_Indicator_height</item>
    

  </style>
</resources>