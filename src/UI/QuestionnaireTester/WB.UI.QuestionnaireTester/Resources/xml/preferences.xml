<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <CheckBoxPreference
      android:key="pref_dev"
      android:title="I'm a developer"
      android:summary="Enable developer settings"
      android:defaultValue="false" />


  <PreferenceCategory android:title="Connection settings"
                      >
    <EditTextPreference android:key="DesignerEndpoint"
           android:summary="Designer URL"
            android:dependency="pref_dev"
           android:title="URL that is used to communicate with designer application"
           android:defaultValue="@string/DesignerEndpoint"/>
    <CheckBoxPreference android:key="AcceptUnsignedSslCertificate"
                         android:dependency="pref_dev"
      android:title="Accept unsigned certificate"
      android:defaultValue="@bool/AcceptUnsignedSslCertificate" />

  </PreferenceCategory>


</PreferenceScreen>