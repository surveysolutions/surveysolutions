<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/lib/org.worldbank.solutions.Vtester"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:id="@+id/topView">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:paddingBottom="5dip" />
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_alignParentBottom="true" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:id="@+id/loginForm"
            android:layout_below="@id/header">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Login" />
            <EditText
                android:layout_width="fill_parent"
                android:id="@+id/teLogin"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                local:MvxBind="Text Login"
                android:singleLine="true" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Password" />
            <EditText
                android:layout_width="fill_parent"
                android:id="@+id/tePassword"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                local:MvxBind="Text Password"
                android:password="true" />
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Login" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/llDesignerPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:visibility="gone"
            android:layout_below="@id/loginForm">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Path to designer" />
            <EditText
                android:layout_width="fill_parent"
                android:id="@+id/tePathToDesigner"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:inputType="textUri"
                android:singleLine="true" />
            <Button
                android:id="@+id/btnSave"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Save" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>