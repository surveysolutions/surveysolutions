<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!--
        Base application theme for API 21+. This theme replaces
        MyTheme from res/values/styles.xml on API 21+ devices.
    -->
  <!--<style name="Theme.Light" parent="Theme.Light.Base">
    <item name="android:windowContentTransitions">true</item>
    <item name="android:windowAllowEnterTransitionOverlap">true</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>
    <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
    <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
  </style>-->


  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="android:checkboxStyle">@style/CheckBoxTheme</item>
    <item name="android:editTextStyle">@style/EditTextTheme</item>
    <item name="android:radioButtonStyle">@style/RadioButtonTheme</item>
    <item name="android:button">@style/ButtonAppTheme</item>
    <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewTheme</item>
    <item name="android:spinnerStyle">@style/SpinnerTheme</item>
    <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemTheme</item>
    <item name="android:dropDownListViewStyle">@style/DropDownListViewStyleTheme</item>
  </style>

  <style name="ButtonAppTheme" parent="android:Widget.Button">
    <item name="android:textAllCaps">true</item>
    <item name="android:background">@drawable/selector</item>
    <item name="background">@drawable/selector</item>
    <item name="android:minHeight">48dip</item>
    <item name="android:minWidth">88dip</item>
    <item name="android:gravity">center_vertical|center_horizontal</item>
    <item name="android:layout_margin">3dp</item>
    <item name="android:padding">0dp</item>
  </style>

  <style name="CheckBoxTheme" parent="android:Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/theme_blue_light_btn_check_holo_light</item>
  </style>

  <style name="RadioButtonTheme" parent="android:style/Widget.CompoundButton.RadioButton">
    <item name="android:button">@drawable/theme_blue_light_btn_radio_holo_light</item>
  </style>

  <style name="EditTextTheme" parent="android:Widget.EditText">
    <item name="android:background">@drawable/theme_blue_light_edit_text_holo_light</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="AutoCompleteTextViewTheme" parent="EditTextTheme"/>

  <style name="SpinnerTheme" parent="android:Widget.Holo.Light.Spinner">
    <item name="android:background">@drawable/theme_blue_light_spinner_background_holo_light</item>
    <item name="android:dropDownSelector">@drawable/theme_blue_light_list_selector_holo_light</item>
  </style>

  <style name="SpinnerDropDownItemTheme" parent="android:Widget.Holo.Light.DropDownItem.Spinner">
    <item name="android:checkMark">@drawable/theme_blue_light_btn_radio_holo_light</item>
  </style>

  <style name="DropDownListViewStyleTheme" parent="android:Widget.ListView">
    <item name="android:divider">@android:color/transparent</item>
    <item name="android:dividerHeight">0dp</item>
    <item name="android:listSelector">@android:color/transparent</item>
  </style>

</resources>