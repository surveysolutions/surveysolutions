@using System.Web.Optimization
@{
    Layout = "~/Views/Shared/_NoFilterListViewLayout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/viewmodels/pages/users.js")
    <script type="text/javascript">
        var $interviewersUrl = '@Url.Action("Interviewers", "Team")';
        var $detailsUrl = '@Url.Action("Details", "Team")';
        $(function () {
            var model = new Supervisor.VM.Users('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "UsersApi", action = "Supervisors" })');
            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h2 class="sinle-line-header">Supervisors</h2>
}

@section gridnavigation
{
    <div class="menubar">
        <a class="btn" href="@Url.Action("AddSupervisor", "Team")">
            <i class="icon icon-user icon-white"></i> Add supervisor</a>
    </div>
}

@section grid
{

    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='sortby : "UserName"'>Name</th>
                <th data-bind='sortby : "CreationDate"'>Creation date</th>
                <th data-bind='sortby : "Email"'>Email</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                <td data-bind="text: UserName"></td>
                <td data-bind="text: CreationDate"></td>
                <td data-bind="text: Email"></td>
                <td>
                    <a class="btn btn-success" data-bind="attr: { href: $interviewersUrl + '/' + UserId() }">
                        <i class="icon icon-group icon-white"></i> Interviewers</a>
                </td>
                <td>
                    <a class="btn btn-info" data-bind="attr: { href: $detailsUrl + '/' + UserId() }">
                        <i class="icon icon-edit icon-white"></i> Details</a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}