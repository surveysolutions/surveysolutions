@using System.Web.Optimization
@using Newtonsoft.Json
@model Web.Supervisor.Models.DocumentFilter
@{
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/viewmodels/pages/interviews.base.js", "~/Scripts/viewmodels/pages/interview/sv.interviews.js")

    <script type="text/javascript">
        var $interviewsPageUrl = '@Html.Raw(@Url.Action("Interviews", "Survey", new {}, Request.Url.Scheme))';
        var $detailsUrl = '@Url.Action("InterviewDetails", "Interview")';
        var $surveysUrl = '@Url.Action("Index", "Survey")';
        var commandExecutionUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "CommandApi", action = "ExecuteCommands" })';
        $(function () {
            var users = @Html.Raw(JsonConvert.SerializeObject(Model.Users));
            var model = new Supervisor.VM.SVInterviews('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "InterviewApi", action = "TeamInterviews" })', $interviewsPageUrl, users, commandExecutionUrl);
            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h3 class="sinle-line-header">Interviews</h3>
}

@section  actionbar{
    <div class="btn-group">
        <button class="btn dropdown-toggle" data-toggle="dropdown" data-bind="disable: IsNothingSelected">Assign interviewer <span class="caret"></span></button>
        <ul class="dropdown-menu" data-bind="foreach: Users">
            <li><a href="#" data-bind="click: $root.Assign, text: UserName">Action</a></li>
        </ul>
    </div>
}


@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover table-break-words">
        <thead>
            <tr>
                <th></th>
                <!-- ko if:SelectedTemplate() == '' -->
                <th>Featured Questions</th>
                <!-- /ko -->
                <!-- ko ifnot:SelectedTemplate() == '' -->
                <!-- ko if:Items().length > 0-->
                <!-- ko foreach:Items()[0].FeaturedQuestions -->
                <th data-bind='text: Question'></th>
                <!-- /ko -->
                <!-- /ko -->
                <!-- /ko -->
                <th data-bind='sortby: "ResponsibleName"'>Responsible</th>
                <th data-bind='sortby: "UpdateDate"'>Last Update</th>
                <th data-bind='sortby: "HasErrors"'>Нas Errors</th>
                <th data-bind='sortby: "Status"'>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                <td>
                    <input type="checkbox" data-bind="checked: IsSelected, enable: CanBeReassigned" />
                </td>
                <!-- ko if:$root.SelectedTemplate() == '' -->
                <td data-bind="text: FeaturedQuestions().joinArrayOfObjects('Question', 'Answer')"></td>
                <!-- /ko -->
                <!-- ko ifnot:$root.SelectedTemplate() == '' -->
                <!-- ko foreach:FeaturedQuestions -->
                <td data-bind="text: Answer"></td>
                <!-- /ko -->
                <!-- /ko -->
                <td>
                    <a data-bind="attr: { href: $surveysUrl + '?interviewerid=' + ResponsibleId() }, text: ResponsibleName"></a>
                </td>
                <td data-bind="text: LastEntryDate"></td>
                 <td>
                    <input type="checkbox" data-bind="checked: HasErrors, enable: false"/>
                </td>
                <td data-bind="text: Status"></td>
                <td>
                    <a class="btn btn-success" data-bind="attr: { href: $detailsUrl + '/' + InterviewId() }">
                        <i class="icon icon-align-justify icon-white"></i></a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}

@section filters
{
    <ul>
        <li class="heading"><span>FILTER</span></li>
        <li>
            <label>Template</label>
            <select data-bind="value: SelectedTemplate" class="input-block-level">
                @if (Model.Templates.Count() > 1)
                {
                    <option value="">Any</option>
                }
                @foreach (var item in Model.Templates)
                {
                    <option value='{"templateId": "@item.TemplateId","version": "@item.TemplateVersion"}'>(ver. @item.TemplateVersion) @item.TemplateName</option>
                }
            </select>
        </li>
        <li>
            <label>Responsible</label>
            <select data-bind="value: SelectedResponsible" class="input-block-level">
                @if (Model.Responsibles.Count() > 1)
                {
                    <option value="">Any</option>
                }
                @foreach (var item in Model.Responsibles)
                {
                    <option value="@item.UserId">@item.UserName</option>
                }
            </select>
        </li>
        <li>
            <label>Status</label>
            <select data-bind="value: SelectedStatus" class="input-block-level">
                <option value="">Any</option>
                @foreach (var item in Model.Statuses)
                {
                    <option value="@item.Status">@item.StatusName</option>
                }
            </select>
        </li>
    </ul>
}