@model WB.Core.SharedKernels.SurveyManagement.Views.Revalidate.InterviewInfoForRevalidationView

@{
    ViewBag.Title = "ConfirmRevalidation";
}

<h3>@Model.Title <small>(status: @Model.Status)</small></h3>
<h4>Responsible: @Model.Responsible.Name</h4>
<div class="row-fluid">
    <div class="span6">
        <h4>Pre-filled questions</h4>
        <table class="table table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Answer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var question in Model.FeaturedQuestions)
                {
                    <tr class="@(question.IsValid ? "" : "error")">
                        <td>
                            @question.Title
                        </td>
                        <td>
                            @question.Answer
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="span6">
        <h4>Mandatory questions</h4>
        <table class="table table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Answer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var question in Model.MandatoryQuestions)
                {
                    <tr class="@(question.IsValid ? "" : "error")">
                        <td>
                            @question.Title
                        </td>
                        <td>
                            @question.Answer
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        @using (Html.BeginForm("ConfirmInterviewRevalidation", "Interview"))
        {
            @Html.HiddenFor(x => x.InterviewId)
            @Html.HiddenFor(x => x.QuestionnairePublicKey)
            <button class="btn btn-large btn-primary" type="submit">Revalidate</button>
        }
    </div>
</div>
