@using Main.Core.Entities.SubEntities
@using WB.Core.SharedKernels.SurveyManagement.Web.Utils
@model WB.UI.Supervisor.Models.SupervisorModel

@{
    ViewBag.Title = "CreateSupervisor";
    var roles = UserRoles.Supervisor.ToSelectList();
}

<div class="container">
    @using (Html.BeginForm("CreateSupervisor", "User", FormMethod.Post, new { @class = "form-signin" }))
    {
        <h2 class="form-signin-heading">Create supervisor</h2>
        @Html.BootstrapValidationSummary("Create user was unsuccessful. Please correct the errors and try again.")
        
        @Html.LabelFor(m => m.Id)
        @Html.TextBoxFor(m => m.Id, new { @class = "input-block-level", placeholder = "Id" })
        <span class="help-inline">@Html.ValidationMessageFor(m => m.Id)</span>
        
        @Html.LabelFor(m => m.Name)        
        @Html.TextBoxFor(m => m.Name, new { @class = "input-block-level", placeholder = "Name" })
        <span class="help-inline">@Html.ValidationMessageFor(m => m.Name)</span>

        @Html.LabelFor(m => m.Role)        
        @Html.DropDownListFor(m => m.Role, roles, new { @class = "input-block-level", placeholder = "Name" })
        <span class="help-inline">@Html.ValidationMessageFor(m => m.Role)</span>
        
        <p class="pull-right">
            <button class="btn btn-large btn-primary " type="submit">Create</button>
        </p>
    }
</div>