@using WB.Core.SharedKernels.DataCollection.Implementation.Entities
@model WB.UI.Headquarters.Models.WebInterview.SetupModel

@{
    ViewBag.Title = WebInterviewSetup.Started_Title;
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<main>
    <div class="container">
        <div class="row">
            <div class="page-header">
                <ol class="breadcrumb">
                    <li>
                        @Html.ActionLink(MainMenu.Questionnaires, "Index", "SurveySetup")
                    </li>
                </ol>
                <h1>@WebInterviewSetup.WebInterviewSetup_PageHeader</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-7">
                <h3>
                    @string.Format(WebInterviewSetup.WebInterviewStarted, Html.QuestionnaireName(Model.QuestionnaireTitle, Model.QuestionnaireVersion))
                </h3>
            </div>
        </div>
        <div class="row">
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="col-sm-7 col-xs-12 action-buttons">
                    @if (Model.IsCensus)
                    {
                        <div class="import-progress">
                            <p>@WebInterviewSetup.Done</p>
                            <p class="success-text">
                                @WebInterviewSetup.WebLinkTitle:
                                <a href="@Model.WebInterviewLink">@Model.WebInterviewLink</a>
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="import-progress">
                            <p>@WebInterviewSetup.Done</p>
                            <p class="success-text">
                                @WebInterviewSetup.ExportTitle
                            </p>
                        </div>
                    }

                    <input type="submit" class="btn btn-danger" value="@WebInterviewSetup.StopWebInterview"/>

                    @if (!Model.IsCensus)
                    {
                        <a class="btn btn-primary" href="@Url.HttpRouteUrl("DefaultApiWithAction", 
                                                          new {controller= "LinksExport", action= "Download", id=Model.QuestionnaireIdentity.ToString() })">
                            @string.Format(WebInterviewSetup.DownloadTitle, Model.InterviewsCount)
                        </a>
                    }

                    <a href="@Url.Action("Index", "SurveySetup")" class="back-link">
                        @WebInterviewSetup.BackToQuestionnaires
                    </a>
                </div>
            </form>
        </div>
    </div>
</main>

