@using System.Web.Optimization
@model WB.UI.Headquarters.Models.UserViewModel

@{
    ViewBag.Title = string.Format("Edit user: {0}", Model.UserName);
}

@section scripts
{
    @Scripts.Render("~/validate")
}

<h2>Edit user</h2>

@using (Html.BeginForm())
{
    <fieldset class="form-horizontal">
        @{
            this.Html.RenderPartial("EditForm");
        }
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save changes</button>
            @Html.ActionLink("Cancel", "DetailsBack", new { id = Model.Id }, new { @class = "btn " })
        </div>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "DetailsBack", new { id = Model.Id })
</div>
