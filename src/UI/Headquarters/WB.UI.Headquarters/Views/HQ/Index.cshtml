
@using WB.Core.BoundedContexts.Supervisor.Implementation.Services.DataExport
@model WB.UI.Headquarters.Models.HQDashboardModel

@{
    Layout = "~/Views/Shared/_LayoutWithoutSidebar.cshtml";
    ViewBag.Title = "Index";
}



<div class="row-fluid">
    <div>
        <div class="page-header">
            <h3>Questionnaires</h3>
        </div>
        
        <table class="table table-striped table-bordered table-condensed table-break-words">
            <thead>
                <tr>
                    <th>Title</th>
                    <th></th>
                    <td>Export Data</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Questionnaires.Items)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                            <small> <small>(ver. @item.Version)</small></small>
                        </td>
                        <td class="buttons">
                            <a href="@Url.Action("BatchUpload", "HQ", new { id = item.QuestionnaireId })" class="btn btn-primary">
                                <i class="glyphicon glyphicon-upload"></i> Batch upload
                            </a>
                            <a href="@Url.Action("TakeNew", "HQ", new { id = item.QuestionnaireId })" class="btn btn-primary">
                                <i class="glyphicon glyphicon-plus-sign"></i> New Interview
                            </a>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn  btn-small btn-success" href="@Url.Action("GetExportedData", "ImportExport", new { id = item.QuestionnaireId,version=item.Version })">
                                    <i class="glyphicon glyphicon-download"></i> CSV
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
