@model WB.Core.SharedKernels.SurveyManagement.Web.Models.HQDashboardModel

@{
    Layout = "~/Views/Shared/_LayoutWithoutSidebar.cshtml";
    ViewBag.Title = "Index";
}

<div class="page-header">
    <h2>Questionnaires</h2>
</div>
<div class="well well-sm">
    @Html.ActionLink("Import template", "Import", "Template", new { area = string.Empty }, new { @class = "btn btn-default" })
</div>
<div class="table-responsive">
    <table class="table table-striped table-condensed table-break-words questionnaires-table">
        <thead>
            <tr>
                <th>Title</th>
                <th class="col-xs-4 col-sm-5 col-md-4 col-lg-3"></th>
                <th class="col-sm-2">Export Data</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Questionnaires.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                        <small> <small>(ver. @item.Version)</small></small>
                    </td>
                    <td class="buttons">
                        @if (item.AllowCensusMode)
                        {
                            <small><b>Census mode</b></small>
                        }
                        else
                        {
                            <a href="@Url.Action("BatchUpload", "HQ", new { id = item.QuestionnaireId, version = item.Version })" class="btn btn-primary"><i class="icon-white"></i>Batch upload</a>
                            <a href="@Url.Action("TakeNew", "HQ", new { id = item.QuestionnaireId, version=item.Version })" class="btn btn-primary">
                                <i class="glyphicon glyphicon-plus-sign"></i> New Interview
                            </a>
                        }
                    </td>
                    <td class="buttons">
                            <a class="btn  btn-small btn-success" href="@Url.Action("GetExportedData", "ImportExport", new { id = item.QuestionnaireId,version=item.Version })">
                                <i class="glyphicon glyphicon-download"></i> CSV
                            </a>
                        <a class="btn  btn-small btn-danger" href="@Url.Action("Delete", "HQ", new { id = item.QuestionnaireId, version = item.Version })" onclick="return confirmAction()">
                            <i class="glyphicon"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts
{
    <script type="text/javascript">
        function confirmAction() {
            var confirmed = confirm("Are you sure you want to delete questionnaire? All interviews conducted by current template will be lost!");
            return confirmed;
        }
    </script>
}