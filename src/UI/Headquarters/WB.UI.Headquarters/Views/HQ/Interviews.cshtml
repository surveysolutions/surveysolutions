@using System.Web.Optimization
@using Newtonsoft.Json
@model WB.Core.SharedKernels.SurveyManagement.Web.Models.DocumentFilter
@{
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/viewmodels/pages/interviews.base.js", "~/Scripts/viewmodels/pages/interview/hq.interviews.js")
    <script type="text/javascript">
        var $interviewsPageUrl = '@Html.Raw(@Url.Action("Interviews", "HQ", new { area="" }, Request.Url.Scheme))';
        var $detailsUrl = '@Url.Action("Details", "Interview")';
        var $surveysUrl = '@Url.Action("SurveysAndStatuses", "HQ")';
        var commandExecutionUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "CommandApi", action = "ExecuteCommands" })';
        var statistics = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "InterviewApi", action = "AllInterviews" })';
        $(function() {
            var users = @Html.Raw(JsonConvert.SerializeObject(Model.Users));
            var model = new Supervisor.VM.HQInterviews(statistics, $interviewsPageUrl, users, commandExecutionUrl);
            ko.applyBindings(model);
            model.load();
        });


    </script>
}

@section header
{
    <h3 class="sinle-line-header">Interviews</h3>
}

@section  actionbar{
    <div class="btn-group">
        <div class="form-inline" >
            <button type="button" class="btn btn-default" data-bind="disable: IsNothingSelected, click: $root.deleteInterview">Delete interview</button>
            <button type="button" class="btn btn-default" data-bind="disable: IsNothingSelected, click: $root.approveInterview">Approve interview</button>
            <button type="button" class="btn btn-default" data-bind="disable: IsNothingSelected, click: $root.rejectInterview">Reject interview</button>

            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" data-bind="value: SearchBy, enterKey: search">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="button" data-bind="click: search">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover table-break-words">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" data-bind="click: $root.selectAll($element)" />
                </th>
                <!-- ko if:SelectedTemplate() == '' -->
                <th>Pre-filled Questions</th>
                <!-- /ko -->
                <!-- ko ifnot:SelectedTemplate() == '' -->
                <!-- ko if:Items().length > 0-->
                <!-- ko foreach:Items()[0].FeaturedQuestions -->
                <th data-bind='text: Question'></th>
                <!-- /ko -->
                <!-- /ko -->
                <!-- /ko -->
                <th data-bind='sortby: "ResponsibleName"'>Responsible</th>
                <th data-bind='sortby: "UpdateDate"'>Last Update</th>
                <th data-bind='sortby: "HasErrors"'>Нas Errors</th>
                <th data-bind='sortby: "Status"'>Status</th>
                <th>Created on Client</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                <td>
                    <input type="checkbox" data-bind="checked: IsSelected, enable: CanDelete() || CanApproveOrReject()" />
                </td>
                <!-- ko if:$root.SelectedTemplate() == '' -->
                <td data-bind="text: FeaturedQuestions().joinArrayOfObjects('Question', 'Answer')"></td>
                <!-- /ko -->
                <!-- ko ifnot:$root.SelectedTemplate() == '' -->
                <!-- ko foreach:FeaturedQuestions -->
                <td data-bind="text: Answer"></td>
                <!-- /ko -->
                <!-- /ko -->
                <td>
                    <a data-bind="attr: { href: $surveysUrl + '?interviewerId=' + ResponsibleId() }, text: ResponsibleName"></a>
                </td>
                <td data-bind="text: LastEntryDate"></td>
                <td>
                    <input type="checkbox" data-bind="checked: HasErrors, enable: false" />
                </td>
                <td data-bind="text: Status"></td>
                <td>
                    <input type="checkbox" data-bind="checked: CreatedOnClient, enable: false" />
                </td>
                <td>
                    <a class="btn btn-success" data-bind="attr: { href: $detailsUrl + '/' + InterviewId() }">
                        <i class="glyphicon glyphicon-align-justify"></i>
                    </a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}

@section filters
{
    <ul class="list-group">
        <li class="list-group-item">
            <h4 class="list-group-item-heading">Template</h4>
            <p class="list-group-item-text">
                <select data-bind="value: SelectedTemplate" class="form-control">
                    @if (Model.Templates.Count() > 1)
                    {
                        <option value="">Any</option>
                    }
                    @foreach (var item in Model.Templates)
                    {
                        <option value='{"templateId": "@item.TemplateId","version": "@item.TemplateVersion"}'>(ver. @item.TemplateVersion) @item.TemplateName</option>
                    }
                </select>
            </p>
        </li>
        <li class="list-group-item">
            <h4 class="list-group-item-heading">Responsible</h4>
            <p class="list-group-item-text">
                <select data-bind="value: SelectedResponsible" class="form-control">
                    @if (Model.Responsibles.Count() > 1)
                    {
                        <option value="">Any</option>
                    }
                    @foreach (var item in Model.Responsibles)
                    {
                        <option value="@item.UserId">@item.UserName</option>
                    }
                </select>
            </p>
        </li>
        <li class="list-group-item">
            <h4 class="list-group-item-heading">Status</h4>
            <p class="list-group-item-text">
                <select data-bind="value: SelectedStatus" class="form-control">
                    <option value="">Any</option>
                    @foreach (var item in Model.Statuses)
                    {
                        <option value="@item.Status">@item.StatusName</option>
                    }
                </select>
            </p>
        </li>
    </ul>

}
