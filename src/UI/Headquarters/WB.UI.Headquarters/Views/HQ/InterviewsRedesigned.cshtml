@using System.Web.Optimization
@using Newtonsoft.Json
@using WB.Core.BoundedContexts.Headquarters
@using WB.Core.GenericSubdomains.Portable
@using WB.Core.GenericSubdomains.Utils
@using WB.Core.SharedKernels.DataCollection.ValueObjects.Interview
@using WB.Core.SharedKernels.SurveyManagement.Web.Code
@using WB.UI.Headquarters.Code
@using WB.UI.Headquarters.Resources
@model WB.Core.SharedKernels.SurveyManagement.Web.Models.DocumentFilter
@{
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

@section scripts
{
    @Scripts.Render("~/js/interviews")
    <script type="text/javascript">
        var $interviewsPageUrl = '@Url.Action("InterviewsRedesigned", "HQ")';
        var $detailsUrl = '@Url.Action("Details", "Interview")';
        var $surveysUrl = '@Url.Action("SurveysAndStatuses", "Reports")';
        var commandExecutionUrl = '@Url.RouteUrl("DefaultApiWithAction", new {httproute = "", controller = "CommandApi", action = "ExecuteCommands"})';
        var statistics = '@Url.RouteUrl("DefaultApiWithAction", new {httproute = "", controller = "InterviewApi", action = "AllInterviews"})';
        var responsiblesUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "Teams", action = "AssigneeSupervisors" })';
        var usersToAssignUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "Teams", action = "Supervisors" })';
        $(function() {
            var model = new Supervisor.VM.HQInterviews(statistics, $interviewsPageUrl, responsiblesUrl, commandExecutionUrl, usersToAssignUrl);
            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h3 class="sinle-line-header">@Common.Interviews</h3>
}

@section actionbar{
    <h4 class="sinle-line-header text-italic" data-bind="text: TemplateName"></h4>
    <div class="btn-group">
        <div class="form-inline">
            <div class="btn-group">
                <div class="input-group">
                    <input class="form-control" placeholder="@Common.Any" data-bind="typeahead: AssignTo, typeaheadOptions: {source: Users, displayText: function(item){return item.UserName}, afterSelect: function(){ $root.Assign(); }}, valueupdate:'afterkeydown', disable: IsNothingSelected" type="text" />
                    <span data-bind="spinner: IsResponsiblesLoading, spinnerOptions: { 'left': 1, 'right': '50px' }"></span>
                    <div class="input-group-btn" data-bind="click: function(){ AssignTo(undefined);}, disable: IsNothingSelected">
                        <div class="btn btn-default"><span class=" glyphicon glyphicon-remove" aria-hidden="true"></span></div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-default" data-bind="disable: IsNothingSelected, click: $root.ApproveInterview">@Common.Approve</button>
            <button type="button" class="btn btn-default" data-bind="disable: IsNothingSelected, click: $root.RejectInterview">@Common.Reject</button>
            <button type="button" class="btn btn-default" data-bind="disable: IsNothingSelected, click: $root.UnapproveInterview">@Common.Unapprove</button>
            <button type="button" class="btn btn-default" data-bind="disable: IsNothingSelected, click: $root.DeleteInterview">@Common.Delete</button>

            <div class="input-group">
                <input type="text" class="form-control" placeholder="@Common.Search" data-bind="value: SearchBy, valueUpdate:'afterkeydown', enterKey: filter">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="button" data-bind="click: clear">
                        <i class="glyphicon glyphicon-remove"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover table-break-words">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" data-bind="click: $root.selectAll($element)" />
                </th>
                <th>
                    @Common.InterviewKey
                </th>
                <!-- ko if:SelectedTemplate() == '' -->
                <th>@Common.PrefilledQuestions</th>
                <!-- /ko -->
                <!-- ko ifnot:SelectedTemplate() == '' -->
                <!-- ko if:Items().length > 0-->
                <!-- ko foreach:Items()[0].FeaturedQuestions -->
                <th data-bind='html: Question'></th>
                <!-- /ko -->
                <!-- /ko -->
                <!-- /ko -->
                <th data-bind='sortby: "ResponsibleName"'>@Common.Responsible</th>
                <th data-bind='sortby: "UpdateDate"'>@Common.LastUpdate</th>
                <th data-bind='sortby: "HasErrors"'>@Common.НasErrors</th>
                <th data-bind='sortby: "Status"'>@Common.Status</th>
                <th data-bind='sortby: "ReceivedByInterviewer"'>@Common.ReceivedByInterviewer</th>
                <th>@Common.CreatedOnClient</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                <td>
                    <input type="checkbox" data-bind="checked: IsSelected" />
                </td>
                <td data-bind="text: Key">
                    
                </td>
                <!-- ko if:$root.SelectedTemplate() == '' -->
                <td data-bind="text: $root.getFormattedPrefilledQuestions(FeaturedQuestions()).joinArrayOfObjects('Question', 'Answer')"></td>
                <!-- /ko -->
                <!-- ko ifnot:$root.SelectedTemplate() == '' -->
                <!-- ko foreach:$root.getFormattedPrefilledQuestions(FeaturedQuestions()) -->
                <td data-bind="text: Answer"></td>
                <!-- /ko -->
                <!-- /ko -->
                <td>
                    <a data-bind="attr: { href: $surveysUrl + '?interviewerId=' + ResponsibleId() }, text: ResponsibleName"></a>
                </td>
                <td data-bind="text: LastEntryDate"></td>
                <td>
                    <!-- ko if:HasErrors -->
                    <span class="glyphicon glyphicon-ok pull-right margin-right-5" style="color:red"></span>
                    <!-- /ko -->
                </td>
                <td data-bind="text: Status"></td>
                <td>
                    <input type="checkbox" data-bind="checked: ReceivedByInterviewer, enable: false" />
                </td>
                <td>
                    <input type="checkbox" data-bind="checked: CreatedOnClient, enable: false" />
                </td>
                <td>
                    <a class="btn btn-success" data-bind="attr: { href: $detailsUrl + '/' + InterviewId() }">
                        <i class="glyphicon glyphicon-align-justify"></i>
                    </a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>


    <script type="text/html" id="confirm-delete-template">
        @Html.Raw(Interviews.DeleteConfirmMessageHQ.FormatString(
            "<span class='text-normal' data-bind='text: length'></span>",
            InterviewStatus.SupervisorAssigned.ToLocalizeString(),
            InterviewStatus.InterviewerAssigned.ToLocalizeString()))
    </script>
    <script type="text/html" id="confirm-approve-template">
        @Html.Raw(Interviews.ApproveConfirmMessageHQ.FormatString(
            "<span class='text-normal' data-bind='text: length'></span>",
            InterviewStatus.Completed.ToLocalizeString(),
            InterviewStatus.ApprovedBySupervisor.ToLocalizeString()))
    </script>
    <script type="text/html" id="confirm-reject-template">
        @Html.Raw(Interviews.RejectConfirmMessageHQ.FormatString(
            "<span class='text-normal' data-bind='text: length'></span>",
	        InterviewStatus.Completed.ToLocalizeString(),
	        InterviewStatus.ApprovedBySupervisor.ToLocalizeString()))
    </script>
    <script type="text/html" id="confirm-unapprove-template">
        @Html.Raw(Interviews.UnapproveConfirmMessageHQ.FormatString(
            "<span class='text-normal' data-bind='text: length'></span>",
            InterviewStatus.ApprovedByHeadquarters.ToLocalizeString()))
    </script>
    <script type="text/html" id="confirm-continue-message-template">
        <br/>@Interviews.ContinueConfirmMessage
    </script>
    <script type="text/html" id="confirm-assign-to-other-team-template">
        <div class="container-fluid">
            <div class="row">
                @Html.Raw(string.Format(Interviews.AssignToOtherTeamConfirmMessage,
                    "<span class='text-normal' data-bind='text: eligibleSelectedItems.length'></span>",
                    InterviewStatus.ApprovedBySupervisor.ToLocalizeString(), 
                    InterviewStatus.ApprovedByHeadquarters.ToLocalizeString()))
            </div>
        </div>
    </script>
}

@section filters
{
    <ul class="list-group">
        <li class="list-group-item">
            <h4 class="list-group-item-heading">@Common.Template</h4>
            <p class="list-group-item-text">
                <select id="templateSelector" data-bind="value: SelectedTemplate" class="form-control">
                    @if (Model.Templates.Count() > 1)
                    {
                        <option value="">@Common.Any</option>
                    }
                    @foreach (var item in Model.Templates)
                    {
                        <option value='{"templateId": "@item.TemplateId","version": "@item.TemplateVersion"}'>(ver. @item.TemplateVersion) @item.TemplateName</option>
                    }
                </select>
            </p>
        </li>
        <li class="list-group-item">
            <h4 class="list-group-item-heading">@Common.Responsible</h4>
            <p class="list-group-item-text">
                <div class="input-group">
                    <input class="form-control" placeholder="@Common.Any" data-bind="typeahead: SelectedResponsible, typeaheadOptions: {source: Responsibles, displayText: function(item){return item.UserName}}, valueupdate:'afterkeydown'" type="text"/>
                    <span data-bind="spinner: IsResponsiblesLoading, spinnerOptions: { 'left': 1, 'right': '50px' }"></span>
                    <div class="input-group-btn" data-bind="click: function(){ SelectedResponsible(undefined); }">
                        <div class="btn btn-default"><span class=" glyphicon glyphicon-remove" aria-hidden="true"></span></div>
                    </div>
                </div>
            </p>
        </li>
        <li class="list-group-item">
            <h4 class="list-group-item-heading">@Common.Status</h4>
            <p class="list-group-item-text">
                <select data-bind="value: SelectedStatus" class="form-control">
                    <option value="">@Common.Any</option>
                    @foreach (var item in Model.Statuses)
                    {
                        <option value="@item.Status">@item.StatusName</option>
                    }
                </select>
            </p>
        </li>
    </ul>

}
