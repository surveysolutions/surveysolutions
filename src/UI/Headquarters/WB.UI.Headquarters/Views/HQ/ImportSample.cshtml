@using WB.Core.BoundedContexts.Headquarters.Views.PreloadedData
@using WB.Core.GenericSubdomains.Portable
@using WB.Core.GenericSubdomains.Utils
@model WB.Core.BoundedContexts.Headquarters.Views.PreloadedData.PreloadedMetaDataView
@{
    Layout = "~/Views/Shared/_LayoutWithoutSidebar.cshtml";
    ViewBag.Title = BatchUpload.ImportSample;
}
<div class="row-fluid">
    <h3>@string.Format("{0}: (ver. {1}) {2}", BatchUpload.BatchUpload_Title, Model.Version, Model.QuestionnaireTitle)</h3>
    <br />
    @if (Model.MetaData == null)
    {
        <h3>@BatchUpload.FileNotParsed</h3>
    }
    else
    {
        <div style="height: 500px; overflow-y: scroll;">
            <table class="table table-striped table-bordered table-condensed table-break-words">
                <thead>
                    <tr>
                        <th>@BatchUpload.FileName</th>
                        <th>@BatchUpload.FileSize</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.MetaData.FilesMetaInformation)
                    {
                        <tr>
                            <th>@item.FileName</th>
                            <th>@FileSizeUtils.SizeSuffix(item.FileSize)</th>
                            <th>@(item.CanBeHandled ? "" : BatchUpload.FormatNotSupported)</th>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <a href="@Url.Action(Model.MetaData.PreloadedContentType == PreloadedContentType.Sample ? "VerifySample" : "VerifyPanel", new { id = Model.MetaData.Id, questionnaireId = Model.QuestionnaireId, version = Model.Version })"
           class="btn btn-primary">@BatchUpload.Verify</a>
    }
</div>
