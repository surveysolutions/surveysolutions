@using WB.Core.GenericSubdomains.Portable
@model WB.Core.SharedKernels.SurveyManagement.Web.Models.UserEditModel
@{
    Layout = "~/Views/Shared/_EditorLayout.cshtml";

    ViewBag.Title = Pages.ApiUser_EditProfileFormat.FormatString(Model.UserName);
    ViewBag.PageTitle = Pages.ApiUser_Profile;
    ViewBag.PageSubTitle = Pages.ApiUser_EditProfileFormat.FormatString(Model.UserName);
}
<div class="row extra-margin-bottom">
    @using (Html.BeginForm("Edit", "ApiUser", FormMethod.Post, new { @class = @"profile" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-sm-12">
            @Html.HiddenFor(x => x.UserName)
            @Html.EditorFor(x => x.Password, "PasswordFormField")
            @Html.EditorFor(x => x.ConfirmPassword, "PasswordFormField")
            @Html.EditorFor(x => x.IsLocked, "CheckboxFormField")
        </div>
     
        @Html.EditorForModel("UpdateButtonsRow")         
    }
</div>
