@using System.Web.Optimization
@{
    Layout = "~/Views/Shared/_NoFilterListViewLayout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/viewmodels/pages/designerquestionnaires.js")
    <script type="text/javascript">
        $(function () {
            var model = new Supervisor.VM.DesignerQuestionnaires('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "DesignerQuestionnairesApi", action = "QuestionnairesList" })',
                '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "DesignerQuestionnairesApi", action = "GetQuestionnaire" })');

            model.onQuestionnaireImported = function () {
                window.location.href = '@Url.Action("Index", "Questionnaires")';
            };

            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section output{
    <p data-bind="text: ImportFailMessage" class="importError"></p>
    <div class="verificatonErrors" data-bind="visible: VerificationErrors().length > 0">
        <ul data-bind="foreach: VerificationErrors" class="error-list">
            <li class="error">
                <b class="error-code" data-bind="text: code"></b><span data-bind="    html: message"></span>
                <ul class="error-reference-items" data-bind="foreach: references">
                    <li><span data-bind="text: title"></span></li>
                </ul>
            </li>
        </ul>
    </div>
}

@section header
{
    <div class="page-header">
        <h1>Designer Questionnaires</h1>
    </div>
    
}

@section gridnavigation
{
    <div class="row menubar bottom-buffer">
        <form data-bind="submit: filter" class="form-inline">
            <div class="form-group col-sm-4">
                <div class="input-group">
                    <input class="span4 form-control" type="text" data-bind="value: Query, valueUpdate: 'afterkeydown'" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" data-bind="click: filter">Search</button>
                    </span>
                </div>
            </div>
        </form>
    </div>
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='sortby: "Title"'>Title</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                <td data-bind="text: Title"></td>
                <td>
                    <a class="btn btn-primary" data-bind="click: $parent.getQuestionnaire"><i class="icon icon-info-sign icon-white"></i>Import</a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}
