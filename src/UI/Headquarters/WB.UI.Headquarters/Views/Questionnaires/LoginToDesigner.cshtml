@model WB.UI.Headquarters.Models.Template.LogOnModel

@{
    ViewBag.Title = "Sign in to designer";
    Layout = "~/Views/Shared/_LayoutWithoutSidebar.cshtml";
}

<div class="page-header">
    <h1>Please sign in to designer</h1>
</div>
<div class="container">
    
    <div class="row">
        <div class="col-md-4 col-md-offset-2">
            @using (Html.BeginForm("LoginToDesigner", "Questionnaires", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    @Html.LabelFor(x => x.UserName, new { @class = "col-sm-4 control-label" })

                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Login" })
                        @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-block" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Password, new { @class = "col-sm-4 control-label" })

                    <div class="col-sm-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-block" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

