@model WB.UI.Headquarters.Models.Template.LogOnModel

@{
    ViewBag.Title = "Sign in to designer";
    Layout = "~/Views/Shared/_LayoutWithoutSidebar.cshtml";
}

@section scripts
{
    
}

<div class="container">
    <h2>Please sign in to designer</h2>
    @using (Html.BeginForm("LoginToDesigner", "Questionnaires", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Login" })

            @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-block" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-block" })
        </div>
        
        
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
        </div>
    }
</div>

