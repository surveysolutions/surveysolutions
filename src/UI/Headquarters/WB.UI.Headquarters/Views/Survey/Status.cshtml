@using System.Web.Optimization
@model IEnumerable<WB.Core.SharedKernels.SurveyManagement.Views.Survey.SurveyStatusViewItem>
@{
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}
@{
    ViewBag.Title = "Status";
}


@section scripts
{
    @Scripts.Render("~/Scripts/vm/statuslistview.js")
    @Html.Partial("_ListViewStatusesScript")

    <script type="text/javascript">
        var $surveysUrl = '@Url.Action("SurveysAndStatuses", "HQ")';
        var $interviewsUrl = '@Url.Action("Interviews", "HQ")';
        $(function () {
            var model = new StatusListViewModel('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "StatusApi", action = "Status" })');
            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h3 class="sinle-line-header">Interviewers and Surveys.</h3>
}

@section filters
{
    <ul>
        <li class="heading"><span>FILTER</span></li>
        <li><label>Status</label>
            <select data-bind="value: SelectedStatus" class="input-block-level">
                <option>Any</option>
                @foreach (var item in Model)
                {
                    <option value="@item.Status">@item.StatusName</option>
                }
            </select>
        </li>
    </ul>
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='sortby: "User.Name"'>Interviewers</th>
                <!-- ko foreach:ListView.Headers -->
                    <td  data-bind="sortby: TemplateId(), text: Title"></td>
                <!-- /ko -->
                <th data-bind='sortby: "Total"'>Total</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: ListView.Items">
            <tr>
                <td>
                    <a data-bind="attr: { href: $surveysUrl + '?interviewerid=' + User.Id() }, text: User.Name"></a>
                </td>
                <!-- ko foreach:CountersByTemplate -->
                <td data-bind="text: Count"></td>
                <!-- /ko -->
                <td data-bind="text: Total"></td>

            </tr>
        </tbody>
    </table>
}