@using System.Web.Optimization
@using WB.Core.GenericSubdomains.Portable
@using WB.Core.SharedKernels.DataCollection.ValueObjects.Interview
@using WB.Core.SharedKernels.SurveyManagement.Web.Code
@using WB.UI.Headquarters.Resources
@model WB.Core.SharedKernels.SurveyManagement.Web.Models.DocumentFilter
@{
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/bootstrap3-typeahead.js", "~/Scripts/components/typeahead-extended.js", "~/Scripts/knockout/ko.typeahead.js", "~/Scripts/viewmodels/pages/interviews.base.js", "~/Scripts/viewmodels/pages/interview/sv.interviews.js")

    <script type="text/javascript">
    var $interviewsPageUrl = '@Html.Raw(@Url.Action("Interviews", "Survey", new { }, Request.Url.Scheme))';
    var $detailsUrl = '@Url.Action("Details", "Interview")';
    var $surveysUrl = '@Url.Action("Index", "Survey")';
    var $commandExecutionUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "CommandApi", action = "ExecuteCommands" })';
    var $statistics = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "InterviewApi", action = "TeamInterviews" })';
    $(function () {
        var usersToAssignUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "Teams", action = "Interviewers" })';
        var responsiblesUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "Teams", action = "AsigneeInterviewersBySupervisor" })';
        var model = new Supervisor.VM.SVInterviews($statistics, $interviewsPageUrl, responsiblesUrl, usersToAssignUrl, $commandExecutionUrl);
        model.IsNothingSelected.subscribe(function (value) {
            if (value) {
                model.Users.AssignTo(undefined);
            }
        });
        ko.applyBindings(model);
        model.load();
    });
    </script>
}

@section header
{
    <h3 class="sinle-line-header">@Pages.Survey_Header</h3>
}
@section actionbar{
    <h4 class="sinle-line-header text-italic" data-bind="text: TemplateName"></h4>
    <div class="form-inline">
        <div class="btn-group">
            <div class="input-group">
                <input class="form-control" placeholder="Interviewer name" data-bind="typeahead: Users.AssignTo, typeaheadOptions: {source: Users.LoadUsers, displayText: function(item){return item.UserName}, afterSelect: function(){ $root.Assign(); }}, valueupdate:'afterkeydown', disable: IsNothingSelected" type="text"/>
                <span data-bind="spinner: Users.IsAssignToLoading, spinnerOptions: { 'left': 1, 'right': '50px' }"></span>
                <div class="input-group-btn">
                    <button class="btn btn-default" data-bind="click: Users.ClearAssignTo, disable: IsNothingSelected"><span class=" glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                </div>
            </div>
        </div>

        <button type="button" class="btn btn-default" data-bind="disable: IsNothingSelected, click: $root.ApproveInterview">Approve</button>
        <button type="button" class="btn btn-default" data-bind="disable: IsNothingSelected, click: $root.RejectInterview">Reject</button>

        <div class="input-group">
            <input type="text" id="searchBox" class="form-control" placeholder="Search" data-bind="value: SearchBy, valueUpdate:'afterkeydown', enterKey: filter">
            <div class="input-group-btn">
                <button class="btn btn-default" type="button" data-bind="click: clear">
                    <i class="glyphicon glyphicon-remove"></i>
                </button>
            </div>
        </div>
    </div>
}


@section grid
{
    <table class="table table-bordered table-condensed table-break-words">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" data-bind="click: $root.selectAll($element)" />
                </th>
                <!-- ko if:SelectedTemplate() == '' -->
                <th>Pre-filled Questions</th>
                <!-- /ko -->
                <!-- ko ifnot:SelectedTemplate() == '' -->
                <!-- ko if:Items().length > 0-->
                <!-- ko foreach:Items()[0].FeaturedQuestions -->
                <th data-bind='text: Question'></th>
                <!-- /ko -->
                <!-- /ko -->
                <!-- /ko -->
                <th data-bind='sortby: "ResponsibleName"'>@Pages.Survey_ResponsibleTitle</th>
                <th data-bind='sortby: "UpdateDate"'>@Pages.Survey_LastUpdateTitle</th>
                <th data-bind='sortby: "HasErrors"'>@Pages.Survey_HasErrorsTitle</th>
                <th data-bind='sortby: "Status"'>@Pages.Survey_StatusTitle</th>
                <th data-bind='sortby: "ReceivedByInterviewer"'>@Pages.Survey_ReceivedByInterviewerTitle</th>
                <th>@Pages.Survey_CreatedOnClientTitle</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                <td>
                    <input type="checkbox" data-bind="checked: IsSelected" />
                </td>
                <!-- ko if:$root.SelectedTemplate() == '' -->
                <td data-bind="text: $root.getFormattedPrefilledQuestions(FeaturedQuestions()).joinArrayOfObjects('Question', 'Answer')"></td>
                <!-- /ko -->
                <!-- ko ifnot:$root.SelectedTemplate() == '' -->
                <!-- ko foreach:$root.getFormattedPrefilledQuestions(FeaturedQuestions()) -->
                <td data-bind="text: Answer"></td>
                <!-- /ko -->
                <!-- /ko -->
                <td>
                    <a data-bind="attr: { href: $surveysUrl + '?interviewerId=' + ResponsibleId() }, text: ResponsibleName"></a>
                </td>
                <td data-bind="text: LastEntryDate"></td>
                <td>
                    <!-- ko if:HasErrors -->
                    <span class="glyphicon glyphicon-ok pull-right margin-right-5" style="color:red"></span>
                    <!-- /ko -->
                </td>
                <td data-bind="text: Status"></td>
                <td>
                    <input type="checkbox" data-bind="checked: ReceivedByInterviewer, enable: false" />
                </td>
                <td>
                    <input type="checkbox" data-bind="checked: CreatedOnClient, enable: false" />
                </td>
                <td>
                    <a class="btn btn-success" data-bind="attr: { href: $detailsUrl + '/' + InterviewId() }">
                        <i class="glyphicon glyphicon-align-justify"></i>
                    </a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>

<script type="text/html" id="confirm-assign-template">
    <div class="container-fluid">
        <div class="row">
            @Html.Raw(string.Format(Interviews.AssignConfirmMessage,
                "<span class='text-normal' data-bind='text: allItems.length'></span>",
                InterviewStatus.SupervisorAssigned.ToLocalizeString(),
                InterviewStatus.InterviewerAssigned.ToLocalizeString(),
                InterviewStatus.RejectedBySupervisor.ToLocalizeString()))
        </div>
        <div class="row" data-bind="if: receivedItems.length > 0">
            <form>
                <div class="form-group">
                    <div class="checkbox" style="margin-left: 0">
                        <label>
                            <input type="checkbox" id="reassignReceivedByInterviewer">
                            @Html.Raw(string.Format(Interviews.AssignReceivedConfirm,
                            "<span data-bind='text: receivedItems.length'></span>"))
                        </label>
                    </div>
                </div>
            </form>
        </div></div>
</script>
    <script type="text/html" id="confirm-approve-template">
        @Html.Raw(string.Format(Interviews.ApproveConfirmMessage,
            "<span class='text-normal' data-bind='text: items.length'></span>",
            InterviewStatus.Completed.ToLocalizeString(),
            InterviewStatus.RejectedByHeadquarters.ToLocalizeString()))
    </script>
    <script type="text/html" id="confirm-reject-template">
        @Html.Raw(string.Format(Interviews.RejectConfirmMessage,
            "<span class='text-normal' data-bind='text: items.length'></span>",
            InterviewStatus.Completed.ToLocalizeString(),
            InterviewStatus.RejectedByHeadquarters.ToLocalizeString()))
        <br />
        <br />
        Some interviews don't have interviewers to receive it. Please select interviewer for assign this interviews on it.
        <br />
        <div class="btn-group" data-bind="visible: IsNeedShowAssignInterviewers">
            <div class="input-group">
                <input class="form-control reject-intervieweer" placeholder="@Common.Any" data-bind="typeahead: Users.AssignTo, typeaheadOptions: {source: Users.LoadUsers, displayText: function(item){return item.UserName}, afterSelect: StoreInteviewer }, valueupdate:'afterkeydown'" type="text" />
                <span data-bind="spinner: Users.IsResponsiblesLoading, spinnerOptions: { 'left': 1, 'right': '50px' }"></span>
                <div class="input-group-btn" data-bind="click: Users.ClearAssignTo">
                    <div class="btn btn-default"><span class=" glyphicon glyphicon-remove" aria-hidden="true"></span></div>
                </div>
            </div>
        </div>
        <br />
    </script>
    <script type="text/html" id="confirm-continue-message-template">
        <br />@Interviews.ContinueConfirmMessage
    </script>
}

@section filters
{
    <ul class="list-group">
        <li class="list-group-item">
            <h4 class="list-group-item-heading">@Pages.Template</h4>
            <p class="list-group-item-text">
                <select id="templateSelector" data-bind="value: SelectedTemplate" class="form-control">
                    @if (Model.Templates.Count() > 1)
                    {
                        <option value="">@Pages.AnyOption</option>
                    }
                    @foreach (var item in Model.Templates)
                    {
                        <option value='{"templateId": "@item.TemplateId","version": "@item.TemplateVersion"}'>(ver. @item.TemplateVersion) @item.TemplateName</option>
                    }
                </select>
            </p>
        </li>
        <li class="list-group-item">
            <h4 class="list-group-item-heading">@Pages.Survey_ResponsibleTitle</h4>
            <p class="list-group-item-text">
                <div class="input-group">
                    <input class="form-control" placeholder="Any" data-bind="typeahead: SelectedResponsible, typeaheadOptions: {source: Responsibles, displayText: function(item){return item.UserName}}, valueupdate:'afterkeydown'" type="text"/>
                    <span data-bind="spinner: IsResponsiblesLoading, spinnerOptions: { 'left': 1, 'right': '50px' }"></span>
                    <div class="input-group-btn" data-bind="click: function(){ SelectedResponsible(undefined); }">
                        <div class="btn btn-default"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></div>
                    </div>
                </div>
            </p>
        </li>
        <li class="list-group-item">
            <h4 class="list-group-item-heading">Status</h4>
            <p class="list-group-item-text">
                <select data-bind="value: SelectedStatus" class="form-control">
                    <option value="">@Pages.AnyOption</option>
                    @foreach (var item in Model.Statuses)
                    {
                        <option value="@item.Status">@item.StatusName</option>
                    }
                </select>
            </p>
        </li>
    </ul>

}
