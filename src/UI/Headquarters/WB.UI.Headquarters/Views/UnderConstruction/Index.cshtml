@using WB.UI.Shared.Web.Extensions
@using System.Web.Optimization
@model WB.UI.Shared.Web.Controllers.UnderConstructionController.UnderConstructionModel

@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <title>@Model.Title</title>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <meta http-equiv='refresh' content='30' />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    @this.GenerateFavicon(Url.Content("~/Content/identity/favicon-hq"))

    <!-- css_markup:css -->
    <link rel="stylesheet" href="@Url.Content("~/Dependencies/build/markup.css")">
    <!-- endinject -->
    <!-- css_markupSpecific:css -->
    <link rel='stylesheet' async href='@Url.Content("~/Dependencies/build/markup-specific.css")'>
    <!-- endinject -->
</head>
<body style="display: block;" class="wide-navbar under-construction">
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container-fluid ">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <div class="navbar-brand">
                        <a class="logo" href='@Url.Content("~")'></a>
                        <a class="brand-name" title="@MainMenu.Headquarters" href='@Url.Content("~")'>@MainMenu.Headquarters</a>
                    </div>
                </div>
            </div>
        </nav>
        </header>
    <main class="">
        <div class="container">
            <div class="row">
                <div class="col-sm-offset-1 col-sm-9">
                    <div class="page-header extra-margin-bottom">
                        <h1>@UnderConstruction.PageTitle</h1>
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="gray-font extra-margin-bottom">
@*
                                    @string.Format(UnderConstruction.ContactUsPhrase, $"<a href='#' class='gray-link-underline'>{UnderConstruction.ContactUsLinkText}</a>")
*@
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-offset-1 col-sm-10">
                    <div class="padding-left-100">
                        <h2>@Model.Message</h2>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="footer">
        <div class="container-fluid">
            <div class="text-right">
                &copy; 2016 <a href="http://www.worldbankgroup.org">The World Bank Group</a>, All Rights Reserved. <a href="http://go.worldbank.org/OS6V7NIUD0">Legal</a>.
            </div>
            <div class="text-right">
                5.12.0 (build 13156)
                <span>|</span>
                <a href="/api/InterviewerSync/GetLatestVersion">Get Interviewer App</a>
            </div>
        </div>
    </footer>
    <script type='text/javascript'>
        setTimeout(function () { document.location.reload(true); }, 1000 * 30);
    </script>
</body>
</html>
