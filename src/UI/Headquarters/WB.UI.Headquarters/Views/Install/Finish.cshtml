@using System.Web.Optimization
@model WB.Core.SharedKernels.SurveyManagement.Web.Models.UserModel

@{
    ViewBag.Title = Users.FinishInstallation;
    Layout = "~/Views/Shared/_NoAuthenticationLayout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/validate")
}

<div class="page-header">
    <h2>@Users.FinishInstallation</h2>
    @Users.CreateAdmin
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <fieldset class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(x => x.UserName, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", autocomplete = "off" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "help-block" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", autocomplete = "off" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "help-block" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(x => x.ConfirmPassword, null, new { @class = "help-block" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Email, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(x => x.Email, null, new { @class = "help-block" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-primary btn-block">@Common.Create</button>
            </div>
        </div>
    </fieldset>
}
