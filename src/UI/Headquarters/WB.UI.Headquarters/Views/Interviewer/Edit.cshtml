@using Microsoft.Practices.ServiceLocation
@using WB.Core.BoundedContexts.Headquarters.Services
@using WB.Core.GenericSubdomains.Portable
@model UserEditModel
@{
    ViewBag.Title = Pages.Interviewer_EditProfileFormat.FormatString(Model.UserName).RemoveHtmlTags();
    ViewBag.PageTitle = Pages.InterviewerProfile_Interviewers;
    ViewBag.PageSubTitle = Pages.Interviewer_EditProfileFormat.FormatString(Model.UserName);

    ViewBag.ControllerName = "Interviewer";
    ViewBag.ControllerAction = "Edit";
    ViewBag.CancelAction = "Back";
    ViewBag.CancelArgs = new { id = Model.Id };
    ViewBag.IsEditMode = true;
    var authorizedUser = ServiceLocator.Current.GetInstance<IAuthorizedUser>();
    ViewBag.IsLockedDisabled = !(authorizedUser.IsHeadquarter || authorizedUser.IsAdministrator);
    Layout = "~/Views/Shared/Profile/_UserEditorLayout.cshtml";
}
@section Breadcrumbs
{
    <li>
        @Html.ActionLink(@Pages.Interviewer_Profile, "Profile", new { id = Model.Id})
    </li>
}
@section PostDetailsSection
{
    @Html.EditorFor(x => x.IsLockedBySupervisor, "CheckboxFormField")
}