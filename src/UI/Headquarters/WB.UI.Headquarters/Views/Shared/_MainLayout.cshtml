@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section styles
{
    @RenderSection("styles", false)
}

@section JsLibsHeader {
    <!-- jsLibs:js -->
    <script type="text/javascript" src="@Url.Content("~/Dependencies/build/libs.js")"></script>
    <!-- endinject -->

    @Scripts.Render("~/js/new-ui")
}

@section JsLibsFooter {
    <!-- jsApp:js -->
    <!-- endinject -->
}

@section scripts
{
    @Scripts.Render("~/js/main-redesigned")
    @RenderSection("scripts", false)

    <script type="text/javascript">
        $(function() {
            if (window.moment) {
                moment.locale('@UICulture');

                $('time').each(function () {
                    var me = $(this);
                    var date = me.attr('datetime') || me.attr('time');
                    var momentDate = moment.utc(date).local().format('MMM DD, YYYY HH:mm');
                    me.text(momentDate);
                });
            }
        });
    </script>
}
@RenderBody()