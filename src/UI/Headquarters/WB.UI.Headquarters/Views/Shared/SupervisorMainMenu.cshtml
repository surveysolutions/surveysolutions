@using WB.Core.SharedKernels.SurveyManagement.Web.Models
@{
    var page = ViewBag.ActivePage ?? MenuItem.Logon;
}
<ul class="nav navbar-nav" role="menu">
    <a class="navbar-brand" href="@Url.Action("Index", "Survey", new {area = ""})">@Users.Supervisor</a>
    <li class="dropdown @(page == MenuItem.Surveys || page == MenuItem.Summary || page == MenuItem.Statuses ? "active" : "")">
        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
            <i class="glyphicon glyphicon-th"></i> @MainMenu.Reports <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            <li class="@(page == MenuItem.Surveys ? "active" : "")">
                <a href="@Url.Action("Index", "Survey")">@MainMenu.SurveysAndStatuses</a>
            </li>
            <li class="@(page == MenuItem.Summary ? "active" : "")">
                <a href="@Url.Action("TeamMembersAndStatuses", "Survey")">@MainMenu.TeamMembersAndStatuses</a>
            </li>
            <li class="@(page == MenuItem.NumberOfCompletedInterviews ? "active" : "")">
                <a href="@Url.Action("QuantityByInterviewers", "PeriodicStatusReport", new {area = ""})">@MainMenu.Quantity</a>
            </li>
            <li class="@(page == MenuItem.SpeedOfCompletingInterviews ? "active" : "")">
                <a href="@Url.Action("SpeedByInterviewers", "PeriodicStatusReport", new {area = ""})">@MainMenu.Speed</a>
            </li>
        </ul>
    </li>

    <li class="@(page == MenuItem.Docs ? "active" : "")">
        <a href="@Url.Action("Interviews", "Survey")"><i class="glyphicon glyphicon-list-alt"></i> @MainMenu.Interviews</a>
    </li>

    <li class="@(page == MenuItem.Teams ? "active" : "")">
        <a href="@Url.Action("Index", "Interviewers", new {area = string.Empty})">
            <i class="glyphicon glyphicon-user"></i> @MainMenu.TeamAndRoles
        </a>
    </li>
</ul>
<ul class="nav navbar-nav navbar-right" role="menu">
    <li class="active glow-animate" style="display: none" id="IncomingPackagesQueueIndicator">
        <a href="javascript:void(0);" title="@MainMenu.QueueSizeTitle">
            <i class="glyphicon glyphicon-cloud-upload"></i>
            <span class="sync-queue-size">-</span>
        </a>
    </li>
    <li class="dropdown">
        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown"><strong>@User.Identity.Name</strong> <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink(Common.Logoff, "LogOff", "Account", new {area = string.Empty}, null)</li>
        </ul>
    </li>
    <li>
        <a href="http://docs.mysurvey.solutions/supervisor.pdf" title="@MainMenu.Help" target="_blank">
            <i class="glyphicon glyphicon-question-sign"></i>
        </a>
    </li>
    @Html.Partial("LimitsIndicator")
</ul>
