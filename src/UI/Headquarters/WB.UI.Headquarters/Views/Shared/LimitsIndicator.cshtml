@using WB.Core.SharedKernels.SurveyManagement.Web.Filters
@using WB.UI.Headquarters.Resources
@if (ViewBag.ShowInterviewLimitIndicator)
{
    <li class='dropdown active @(ViewBag.PayAttentionOnInterviewLimitIndicator ? "open" : "")'>
        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" style='background: @(ViewBag.PayAttentionOnInterviewLimitIndicator ? "red" : "#ffa500")'>
            <i class="glyphicon glyphicon-warning-sign"></i>
        </a>
        <ul class="dropdown-menu">
            <li>
                <a href="#"><b>@LimitsIndicator.YouAreInTestingMode</b></a>
            </li>
            <li>
                @if (ViewBag.InterviewsCountAllowedToCreateUntilLimitReached >= 0)
                {
                    <a href="#">@string.Format(@LimitsIndicator.InterviewsLeftFormat, ViewBag.InterviewsCountAllowedToCreateUntilLimitReached)</a>
                }
                else
                {
                    <a href="#">@string.Format(@LimitsIndicator.YouHaveExceededYourLimitFormat, ViewBag.MaxAllowedInterviewsCount)</a>
                }
            </li>
        </ul>
    </li>
}