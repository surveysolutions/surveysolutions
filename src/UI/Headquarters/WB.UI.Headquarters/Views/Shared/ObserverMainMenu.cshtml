@using WB.Core.SharedKernels.SurveyManagement.Web.Models
@{
    var page = ViewBag.ActivePage ?? MenuItem.Logon;
}
<ul class="nav navbar-nav" role="menu">
    <li class="dropdown @(page == MenuItem.Teams || page == MenuItem.Headquarters ? "active" : "")">
        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
            <i class="glyphicon glyphicon-user"></i> @MainMenu.Users <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            <li class="@(page == MenuItem.Teams ? "active" : "")">
                <a href="@Url.Action("Index", "Supervisor", new {area = string.Empty})">
                    @MainMenu.Supervisors
                </a>
            </li>
            <li class="@(page == MenuItem.Headquarters ? "active" : "")">
                <a href="@Url.Action("Index", "Headquarters", new {area = string.Empty})">
                    @MainMenu.Headquarters
                </a>
            </li>
        </ul>
    </li>
</ul>
<ul class="nav navbar-nav navbar-right" role="menu">
    <li class="active glow-animate" style="display: none" id="IncomingPackagesQueueIndicator">
        <a href="javascript:void(0);" title="@MainMenu.QueueSizeTitle">
            <i class="glyphicon glyphicon-cloud-upload"></i>
            <span class="sync-queue-size">-</span>
        </a>
    </li>
    <li class="dropdown">
        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">Hi, <strong>@User.Identity.Name</strong> <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("Logoff", "LogOff", "Account", new {area = string.Empty}, null)</li>
        </ul>
    </li>
    <li>
        <a href="http://siteresources.worldbank.org/INTCOMPTOOLS/Resources/8213623-1380598436379/Supervisor_manual.pdf" title="@MainMenu.Help" target="_blank">
            <i class="glyphicon glyphicon-question-sign"></i>
        </a>
    </li>
</ul>
