@model UserModel
@{
    Layout = "_EditorLayout.cshtml";
}
@section scripts {
    @RenderSection(@"scripts", false)
}
@section Breadcrumbs
{
    @RenderSection("Breadcrumbs", false)
}
<div class="row extra-margin-bottom">
    @using (Html.BeginForm("Create", null, FormMethod.Post, new { @class = @"profile", autocomplete = "off" }))
    {
        @Html.HiddenFor(x => x.HideDetails)
        @Html.HiddenFor(x => x.IsLockedDisabled)
        @Html.AntiForgeryToken()
        @RenderSection(@"PreFormSection", false)
        <div class="col-sm-12">
            @RenderSection(@"PreDetailsSection", false)
            @Html.EditorFor(x => x.UserName, "TextBoxFormField", new { autocomplete = "off" })
            @Html.EditorFor(x => x.Password, "PasswordFormField")
            @Html.EditorFor(x => x.ConfirmPassword, "PasswordFormField")
            @RenderSection(@"LockWarningSection", false)
            @Html.EditorFor(x => x.IsLocked, "CheckboxFormField", Model.IsLockedDisabled ? (object)new { } : (object)new { @disabled = @"disabled" })
            @RenderSection(@"PostDetailsSection", false)
            @Html.Partial("Profile/ValidationSummary")
        </div>

        if (!Model.HideDetails)
        {
             <div class="col-sm-12">
                 <div class="separate-line"></div>
             </div>

             <div class="col-sm-12">
                 <h5 class="extra-margin-bottom">@Html.Raw(Pages.PublicSection)</h5>
                 @Html.EditorFor(x => x.PersonName, "TextBoxFormField", new {disableClientValidation = true})
                 @Html.EditorFor(x => x.Email, "TextBoxFormField")
                 @Html.EditorFor(x => x.PhoneNumber, "TextBoxFormField")
             </div>
        }

        @Html.EditorForModel("CreateButtonsRow")
    }
</div>
@RenderBody()
