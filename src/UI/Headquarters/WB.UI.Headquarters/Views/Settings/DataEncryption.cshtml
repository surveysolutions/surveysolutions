@using WB.Core.SharedKernels.SurveyManagement.Web.Models
@model CypherSettingsModel

@{
    ViewBag.Title = "Encryption settings";
    Layout = "~/Views/Shared/_LayoutWithoutSidebar.cshtml";
}

@section scripts
{
    @Scripts.Render("~/validate")
    <script type="text/javascript">
        $('#umbrella').hide();
    </script>
}
@Html.Partial("_alerts")

<h3 class="sinle-line-header">@Settings.Settings_Title : @Settings.DataEncryption_Title</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="well well-sm">
        <div class="form-inline">
            <label>
                Enabled
                @Html.CheckBoxFor(x => x.IsEnabled)
            </label>
            <input type="submit" name="Action" id="Save" value="Save" class="btn btn-primary"/>
            <input type="text" name="InterviewId" autocomplete="off" class="form-control" value="@Model.Password" readonly="readonly" />
            <input type="submit" name="Action" id="Regen" value="Regen" class="btn btn-primary" @(Model.IsEnabled ? "" : "disabled = 'disabled'") />
        </div>
        
    </div>
}


