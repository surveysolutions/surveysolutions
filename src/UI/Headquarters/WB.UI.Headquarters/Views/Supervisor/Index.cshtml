@using System.Web.Optimization
@{
    Layout = "~/Views/Shared/_NoFilterListViewLayout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/viewmodels/pages/users.js")
    <script type="text/javascript">
        var $interviewersUrl = '@Url.Action("Interviewers", "Supervisor", new { area = string.Empty })';
        var $editUrl = '@Url.Action("Edit", "Supervisor", new { area = string.Empty })';
        $(function () {
            var model = new Supervisor.VM.Users('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "UsersApi", action = "Supervisors" })');
            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <div class="page-header">
    <h2 class="sinle-line-header">Supervisors</h2>
</div>
}

@section gridnavigation
{
    <a class="btn btn-default" href="@Url.Action("Create", "Supervisor", new { area = string.Empty })">
        <i class="glyphicon glyphicon-user"></i> Add supervisor
    </a>
}

@section grid
{

    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='sortby : "UserName"'>Name</th>
                <th data-bind='sortby : "CreationDate"'>Creation date</th>
                <th data-bind='sortby : "Email"'>Email</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                <td data-bind="text: UserName"></td>
                <td data-bind="text: CreationDate"></td>
                <td data-bind="text: Email"></td>
                <td>
                    <a class="btn btn-success" data-bind="attr: { href: $interviewersUrl + '/' + UserId() }">
                        <i class="glyphicon glyphicon-user"></i> Interviewers
                    </a>
                </td>
                <td>
                    <a class="btn btn-info" data-bind="attr: { href: $editUrl + '/' + UserId() }">
                        <i class="glyphicon glyphicon-edit"></i> Edit
                    </a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}