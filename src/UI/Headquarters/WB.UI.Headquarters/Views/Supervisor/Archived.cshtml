@using Main.Core.Entities.SubEntities
@using Microsoft.Practices.ServiceLocation
@using WB.Core.BoundedContexts.Headquarters.Services
@{
    Layout = "~/Views/Shared/_NoFilterListViewLayout.cshtml";
    var authorizedUser = ServiceLocator.Current.GetInstance<IAuthorizedUser>();
    var isAdmin = authorizedUser.IsAdministrator;
    var isAdminOrHeadquarters = isAdmin || authorizedUser.IsHeadquarter;
}

@section scripts
{
    @Scripts.Render("~/js/users")
    <script type="text/javascript">
        var $interviewersUrl = '@Url.Action("Index", "Interviewers", new { area = string.Empty })';
        var $commandExecutionUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "CommandApi", action = "ExecuteCommands" })';
        $(function () {
            var model = new Supervisor.VM.Users('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "UsersApi", action = "ArchivedSupervisors" })', $commandExecutionUrl);
            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <div class="page-header">
        <h2 class="sinle-line-header">@Archived.ArchivedSupervisors</h2>
    </div>
}

@section gridnavigation
{
    <div class="btn-group">
        <div class="form-inline">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" data-bind="value: SearchBy, enterKey: filter">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="button" data-bind="click: filter">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>

                </div>
            </div>
        </div>
    </div>
    <div class="btn-group pull-right">
        <a class="btn btn-default" href="@Url.Action("Index", "Supervisor", new {area = string.Empty})">
            @Archived.ActiveSupervisors
        </a>
    </div>
}

@section grid
{

    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='sortby : "UserName"'>@Users.UserName</th>
                <th data-bind='sortby : "CreationDate"' title="@Users.SupervisorAccountCreationDate">@Users.CreationDate</th>
                <th data-bind='sortby : "Email"'>@Users.SupervisorEmail</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                <td data-bind="text: UserName"></td>
                <td data-bind="text: CreationDate"></td>
                <td>
                    <a data-bind="attr:{href:'mailto:' + Email()},text:Email"></a>
                </td>
                <td>
                    @if (isAdminOrHeadquarters)
                    {
                        <a class="btn btn-success" data-bind="attr: { href: $interviewersUrl + '?Archived=true&supervisor=' + UserName() }">
                            <i class="glyphicon glyphicon-user"></i> @Users.Interviewers
                        </a>
                    }

                    @if (isAdmin)
                    {
                        <div class="btn-group pull-right">
                            <a class="btn btn-success" data-bind="click : $parent.unarchiveUser">
                                <i class="glyphicon glyphicon-plus"></i>
                            </a>
                        </div>
                    }

                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
    <script type="text/html" id="confirm-delete-template">
        <h3>
            <b>
                <!-- ko foreach:$data -->
                <!-- ko if: $index() > 0 -->,<!-- /ko -->
                '<span class='text-normal' data-bind='text: UserName'></span>'
                <!-- /ko -->
            </b>
            @Archived.UnarchiveSupervisorWarning
        </h3>
    </script>
    <script type="text/html" id="confirm-continue-message-template">
        <br />@Archived.DoYouWantToContinue
    </script>
}