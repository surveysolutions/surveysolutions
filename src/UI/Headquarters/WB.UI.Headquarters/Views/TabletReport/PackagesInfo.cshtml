@model WB.Core.BoundedContexts.Headquarters.Views.TabletInformation.TabletInformationView

@{
    Layout = "~/Views/Shared/_NoFilterListViewLayout.cshtml";
    ViewBag.Title = Pages.PackagesInfo_Title;
}

@section styles
{
    <style>
        .btn-file input {
            display: none;
        }
    </style>
}


@section scripts
{

        @Scripts.Render("~/Scripts/viewmodels/pages/tabletinfo.js")

        <script type="text/javascript">
        var $packegeUrl = '@Url.Action("DownloadPackages", "TabletReport")';

        var $tabletInfoUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "TabletReportApi", action = "Packages" })';
        var responsiblesUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "Teams", action = "AssigneeSupervisors" })';
        var model = new Supervisor.VM.TabletInfo($tabletInfoUrl, responsiblesUrl);
        ko.applyBindings(model);
        model.load();

        $('.file').bind('change', function () {
            this.form.submit();
        });
        </script>
    }


    @section header
{
        <h3 class="sinle-line-header">@Pages.PackagesInfo_Header</h3>
    }

    @section gridnavigation
{
        <div class="btn-group">
            <div class="form-inline">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" data-bind="value: SearchBy, enterKey: filter">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="button" data-bind="click: filter">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="btn-group pull-right">
            @using (Html.BeginForm("UploadBackup", "TabletReport", method: FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <label class="btn btn-success btn-file">
                    Upload backup
                    <input name="File" type="file" accept=".zip" class="file" />
                </label>
            }
        </div>
    }

    @section grid
{
        <table class="table table-striped table-bordered table-condensed table-hover">
            <thead>
                <tr>
                    <th>@Pages.PackagesInfo_DeviceId</th>
                    <th>@Pages.PackagesInfo_UploadDate</th>
                    <th>@Pages.PackagesInfo_UserName</th>
                    <th>@Pages.PackagesInfo_UserId</th>
                    <th>@Pages.PackagesInfo_Size</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <!-- ko foreach:Items -->
                <tr>
                    <td data-bind="text: AndroidId"></td>
                    <td data-bind="text: CreationDate"></td>
                    <td data-bind="text: UserName"></td>
                    <td data-bind="text: UserId"></td>
                    <td data-bind="text: Size().toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',')"></td>
                    <td class="buttons">
                        <div class="btn-group">
                            <a class="btn btn-info" data-bind="attr: { href: $packegeUrl + '?fileName=' + PackageName() }">
                                <i class="glyphicon glyphicon-download"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                <!-- /ko -->
            </tbody>
        </table>

    }
