@model WB.UI.Headquarters.Models.NewSurveyModel

@{
    ViewBag.Title = "Start new survey";
}


<div class="col-sm-6">
    <h2 class="">@ViewBag.Title</h2>

    @using (Html.BeginForm("StartNew", "Surveys", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(x => x.Name, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
        </div>
             <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button type="submit"  class="btn btn-default">Start</button>
            </div>
        </div>
    }
</div>
