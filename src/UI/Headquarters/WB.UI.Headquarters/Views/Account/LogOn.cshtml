@using System.Web.Optimization
@using WB.UI.Headquarters.Utils
@model WB.Core.SharedKernels.SurveyManagement.Web.Models.LogOnModel
@{
    Layout = "~/Views/Shared/_NoAuthenticationLayout.cshtml";
    ViewBag.Title = "Log On";
}
@section scripts
{
    @Scripts.Render("~/validate")
}

<div style="margin-top: 40px;">
    @Html.BootstrapValidationSummary("Login was unsuccessful. Please correct the errors and try again.")
</div>

<div class="well form-signin">
    @using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>
            <legend>
                Please log in
            </legend>
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-block" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-block" })
                </div>
            </div>
        </fieldset>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button class="btn btn-primary btn-lg" type="submit">Log in</button>
            </div>
        </div>
    }
</div>
