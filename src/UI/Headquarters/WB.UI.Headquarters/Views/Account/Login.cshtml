@using System.Web.Optimization
@using WB.UI.Headquarters.Resources 
@model WB.UI.Headquarters.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@LoginPageResources.PleaseSignIn</title>

    @Styles.Render("~/content/bootstrap")

    <style>
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #eee;
        }
    </style>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</head>

<body>

    <div class="container">
        <div class="col-md-4 col-md-offset-4">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h2 class="form-signin-heading">@LoginPageResources.PleaseSignIn</h2>
                @Html.AntiForgeryToken()

                <div class="text-danger">
                    @Html.ValidationSummary(true)
                </div>

                <div class="form-group">
                    <label for="@Html.IdFor(x => x.Login)" class="col-sm-4 control-label">@LoginPageResources.Login</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Login, new { @class = "form-control", autofocus = "autofocus" })
                        @Html.ValidationMessageFor(x => x.Login, null, new {@class="help-block"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Password, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-8">
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <div class="checkbox">
                            <label for="@Html.IdFor(x => x.RememberMe)">
                                @Html.CheckBoxFor(x => x.RememberMe) @LoginPageResources.RememberMe
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <button class="btn btn-primary" type="submit">
                            @LoginPageResources.SignIn
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
