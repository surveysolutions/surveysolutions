@using Main.Core.Entities.SubEntities
@using WB.Core.SharedKernels.SurveyManagement.Web.Utils
@model WB.UI.Headquarters.Models.HeadquartersModel

@{
    ViewBag.Title = "Create Headquarters User";
    var roles = UserRoles.Supervisor.ToSelectList();
}

<div class="page-header">
    <h3>
        Create Headquarters User
    </h3>
</div>
<div class="container">
    @using (Html.BeginForm("CreateHeadquarters", "User", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.BootstrapValidationSummary("Create user was unsuccessful. Please correct the errors and try again.")

        <div class="form-group">
            @Html.LabelFor(m => m.Id, new { @class = "col-sm-6 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.Id, new { @class = "form-control", placeholder = "Id" })
                <span class="help-block">@Html.ValidationMessageFor(m => m.Id)</span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-sm-6 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                <span class="help-block">@Html.ValidationMessageFor(m => m.Name)</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-6 col-sm-6">
                <button class="btn btn-primary " type="submit">Create</button>
            </div>
        </div>
    }
</div>