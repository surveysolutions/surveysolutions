<?xml version="1.0" encoding="utf-8"?>
<parameters>
   <parameter name="ReadSide-Web.config Connection String"
      description="Provide the connection string for PostgreSQL database for read side"
      defaultValue="Server=127.0.0.1;Port=5432;User Id=postgres;Password=P@$$w0rd;Database=SuperHQ-RC-Views;">
   </parameter>
   <parameter name="PlainStore-Web.config Connection String"
      description="Provide the connection string for PostgreSQL database for read side"
      defaultValue="Server=127.0.0.1;Port=5432;User Id=postgres;Password=P@$$w0rd;Database=SuperHQ-Plain;">
   </parameter>

  
   <parameter name="Event store IP address"
      defaultValue="127.0.0.1">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='EventStore.ServerIP']/@value" />
   </parameter>
  <parameter name="Event store TPC port"
      defaultValue="1113">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='EventStore.ServerTcpPort']/@value" />
   </parameter>
  <parameter name="Event store HTTP port"
      defaultValue="2113">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='EventStore.ServerHttpPort']/@value" />
   </parameter>
  <parameter name="Event store login"
      defaultValue="admin">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='EventStore.Login']/@value" />
   </parameter>
  <parameter name="Event store password"
      defaultValue="changeit">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='EventStore.Password']/@value" />
   </parameter>
   
   <parameter name="Designer Endpoint Address" description="Please provide Designer address from which do import templates" defaultValue="https://solutions.worldbank.org/api/v2/import" tags="">
    <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='DesignerAddress']/@value" />
  </parameter>
   <parameter name="Show control panel"
      defaultValue="false">
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='IsDevelopmentEnvironment']/@value" />
   </parameter>
   <parameter name="Enable SSL"
      defaultValue="false">
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='IsHttpsRequired']/@value" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/system.web/httpCookies/@requireSSL" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/system.web/authentication/forms/@requireSSL" />
   </parameter>
   
   <parameter name="Path to store app data"
      defaultValue="~/App_Data">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='DataStorePath']/@value" />
   </parameter>
   <parameter name="Enable Interview History for export"
      defaultValue="false">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='Export.EnableInterviewHistory']/@value" />
   </parameter>
</parameters>
