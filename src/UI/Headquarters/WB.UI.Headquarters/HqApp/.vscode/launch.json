    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Gulp watch",
            "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
            "args": [
                "watch"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Gulp resx2json",
            "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
            "args": [
                "resx2json"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests",
            "program": "${workspaceRoot}\\node_modules\\jest\\bin\\jest.js",
            "args": [ "-i"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug build",
            "program": "${workspaceRoot}/node_modules/webpack/bin/webpack.js",
            "args": [
                "--color"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug build vendor",
            "program": "${workspaceRoot}/node_modules/webpack/bin/webpack.js",
            "args": [
                "--color",
                "--config",
                "webpack.vendor.config.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Watch",
            "program": "${workspaceRoot}/node_modules/webpack/bin/webpack.js",
            "args": [
                "--color",
                "--watch"
            ]
        }
    ]
}