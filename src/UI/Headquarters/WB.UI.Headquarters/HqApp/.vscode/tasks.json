    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "yarn install",
            "type": "process",
            "command": "yarn",
            "problemMatcher": []
        },
        {
            "taskName": "Vendor: Shared",
            "type": "process",
            "command": "yarn",
            "args": [
                "run",
                "vendor"
            ],
            "options": {
                "cwd": "./src/shared"
            },
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "vendor",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "dev",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "production",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": []
        }
    ]
