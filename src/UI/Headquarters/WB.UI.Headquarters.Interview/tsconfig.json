{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "allowJs": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "jsx": "react",
        "jsxFactory": "h",
        "lib": [
            "es5",
            "es2015.promise",
            "dom"
        ]
    },
    "include": [
        "node_modules/vue/types/*.d.ts",
        "node_modules/vuex/types/*.d.ts",
        "node_modules/vue-router/typeings/*.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ]
}
