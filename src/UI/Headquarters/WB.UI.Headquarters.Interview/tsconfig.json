{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "lib": ["es5", "es2015.promise", "dom"]
    },

    "include": [
        "node_modules/vue/types/*.d.ts",
        "node_modules/vuex/types/*.d.ts",
        "node_modules/vue-router/typeings/*.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ]
}
