<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
    </style>
    
    <style name="Area_Screen_Button" parent="Button_Success">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:backgroundTint">@color/button_save_selector</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="Area_Screen_Button_Bordered" parent="Button_Primary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
        
    <style name="Progress_Indicator" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:focusable">false</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:keepScreenOn">false</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar</item>
    </style>

    <style name="Widget.AppTheme.Button.IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@drawable/mtrl_btn_text_color_selector</item>
        <item name="rippleColor">?colorOnPrimary</item>
        <item name="android:layout_marginRight">10dp</item>        
    </style>
    
    <style name="Area_LocationButton" parent="Widget.AppTheme.Button.IconButton">
        <item name="android:layout_gravity">right</item>
        <item name="android:enabled">false</item>
        <item name="icon">@drawable/my_location</item>
    </style>

  <style name="Area_ShowFullMap" parent="Widget.AppTheme.Button.IconButton">
    <item name="android:layout_gravity">right</item>
    <item name="icon">@drawable/show_full_map_icon</item>
    <item name="android:enabled">false</item>
  </style>

  <style name="Area_ShowAllItems" parent="Widget.AppTheme.Button.IconButton">
      <item name="android:layout_gravity">right</item>
      <item name="icon">@drawable/show_all_items_icon</item>
      <item name="android:enabled">false</item>
  </style>

    <style name="Area_DefaultButton">
        <item name="android:background">@drawable/icon_button</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>  
    
    <!-- Is not properly working as of now -->
    <style name="Area_ButtonWithState" parent="Area_DefaultButton">
        <item name="android:tint">@color/icon_button_tint_selector</item>
        <item name="android:tintMode">src_in</item>
    </style>

    <style name="Area_CompassButton" parent="Area_DefaultButton">
        <item name="android:src">@drawable/icon_compass</item>
    </style>
    <style name="Area_BackButton" parent="Area_DefaultButton">
        <item name="android:src">@drawable/icon_back</item>
    </style>
    <style name="Area_BurgerButton" parent="Area_DefaultButton">
        <item name="android:src">@drawable/icon_burger</item>
    </style>
    <style name="Area_LocButton" parent="Area_DefaultButton">
        <item name="android:src">@drawable/icon_location_default</item>
    </style>
    <style name="Area_UndoButton" parent="Area_DefaultButton">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/icon_undo</item>
        <item name="android:tint">@color/icon_edit_panel_tint_selector</item>
    </style>
    <style name="Area_ZoomMenuButton" parent="Area_DefaultButton">
        <item name="android:src">@drawable/icon_zoom_menu</item>
    </style>
    <style name="Area_GeofencingButton" parent="Area_DefaultButton">
        <item name="android:background">@drawable/icon_geofencing_button</item>
        <item name="android:src">@drawable/icon_geofencing_default</item>
    </style>
    <style name="Area_GeoTrackingButton" parent="Area_DefaultButton">
        <item name="android:background">@drawable/icon_geotracking_button_background</item>
        <item name="android:src">@drawable/icon_geotracking_default</item>
    </style>
    <style name="Area_GeofencingButton_disabled" parent="Area_DefaultButton">
        <item name="android:background">@drawable/icon_button_default</item>
        <item name="android:src">@drawable/icon_geofencing_disabled</item>
    </style>
    <style name="Area_GeoTrackingButton_disabled" parent="Area_DefaultButton">
        <item name="android:background">@drawable/icon_button_default</item>
        <item name="android:src">@drawable/icon_geotracking_disabled</item>
    </style>
    <style name="Area_NavigateButton" parent="Area_DefaultButton">
        <item name="android:src">@drawable/icon_navigate_default</item>
    </style>
    <style name="Area_MenuButton" parent="Area_DefaultButton">
        <item name="android:src">@drawable/icon_three_dots</item>
    </style>
    <style name="AssigmentMap_CreateInterview">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:tint">@color/icon_button_tint_selector</item>
        <item name="android:tintMode">src_in</item>
        <item name="android:background">@drawable/icon_create_interview_button</item>
        <item name="android:src">@drawable/icon_create_interview</item>
    </style>

    <style name="Area_ZoomMapInButton">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/plus_icon</item>
    </style>
    <style name="Area_ZoomMapOutButton">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/minus_icon</item>
    </style>

    <style name="Area_UpdateMapsButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/sync_maps</item>
    </style>
    <style name="Area_MapNameTitle">
      <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">@dimen/area_editor_text_size_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Area_NoMapText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">@dimen/area_editor_text_size_regular</item>
        <item name="android:layout_marginTop">@dimen/area_editor_common_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/area_editor_common_margin_left</item>
    </style>
    
    <style name="Area_MapListPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:background">@color/toolbar_background_color</item>
    </style>

    <style name="Area_Dashboard_ItemSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/area_editor_text_size_large</item>
        <item name="android:paddingRight">@dimen/area_editor_padding_regular</item>
        <item name="android:paddingLeft">@dimen/area_editor_padding_regular</item>
        <item name="android:paddingBottom">@dimen/area_editor_padding_regular</item>
    </style>

    <style name="Area_Dashboard_SpinnerDropDown">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/area_editor_text_size_large</item>
        <item name="android:paddingRight">@dimen/area_editor_padding_regular</item>
        <item name="android:paddingLeft">@dimen/area_editor_padding_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Area_Dashboard_Drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left|start</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/drawer_panel_color</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="Area_Dashboard_DrawerTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingLeft">@dimen/area_editor_padding_regular</item>
        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingBottom">@dimen/area_editor_padding_regular</item>
    </style>

    <style name="Area_Dashboard_DrawerCheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/area_editor_padding_regular</item>
        <item name="android:paddingLeft">@dimen/area_editor_padding_regular</item>
        <item name="android:textSize">@dimen/area_editor_text_size_large</item>
    </style>

    <style name="Area_Dashboard_Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/area_editor_padding_regular</item>
        <item name="android:paddingLeft">@dimen/area_editor_padding_regular</item>
        <item name="android:paddingTop">@dimen/area_editor_padding_regular</item>
        <item name="android:textSize">@dimen/area_editor_text_size_large</item>
    </style>

    <style name="Area_Dashboard_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/area_editor_padding_regular</item>
        <item name="android:paddingTop">28dp</item>
    </style>

    <style name="Area_Dashboard_DrawerSpace">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Area_Dashboard_DrawerDisclaimer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="CustomPopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@color/map_menu_background</item>
        <item name="android:textColor">@color/map_menu_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:iconTint">@color/map_menu_text</item>
    </style>


</resources>
