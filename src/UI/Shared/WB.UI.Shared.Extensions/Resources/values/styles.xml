<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
    </style>
    
    <style name="Area_Screen_Button">
        <item name="android:background">@drawable/screen_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Area_Screen_Button_Bordered" parent="Area_Screen_Button">
        <item name="android:background">@drawable/screen_button_bordered</item>
    </style>
        
    <style name="Progress_Indicator" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:focusable">false</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:keepScreenOn">false</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar</item>
    </style>

    <style name="Area_LocationButton">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/locator_button</item>
        <item name="android:enabled">false</item>
    </style>

  <style name="Area_ShowFullMap">
      <item name="android:layout_marginRight">16dp</item>
      <item name="android:layout_width">32dp</item>
    <item name="android:layout_height">32dp</item>
    <item name="android:layout_gravity">right</item>
    <item name="android:scaleType">fitCenter</item>
    <item name="android:layout_marginTop">15dp</item>
    <item name="android:background">@drawable/show_full_map_button</item>
    <item name="android:enabled">false</item>
  </style>

  <style name="Area_ShowAllItems">
      <item name="android:layout_marginRight">16dp</item>
      <item name="android:layout_width">32dp</item>
      <item name="android:layout_height">32dp</item>
      <item name="android:layout_gravity">right</item>
      <item name="android:scaleType">fitCenter</item>
      <item name="android:layout_marginTop">15dp</item>
      <item name="android:background">@drawable/show_all_items_button</item>
      <item name="android:enabled">false</item>
  </style>

    <style name="Area_CompassButton">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/compass_icon</item>
    </style>

    <style name="Area_ZoomMapInButton">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/plus_icon</item>
    </style>
    <style name="Area_ZoomMapOutButton">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/minus_icon</item>
    </style>

    <style name="Area_UpdateMapsButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/sync_maps</item>
    </style>

    
</resources>
