<?xml version="1.0" encoding="utf-8"?>
<Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:local="http://schemas.android.com/apk/res-auto"
  style="@style/Interview_QuestionWithDivider"
  local:MvxBind="HideKeyboardOnClick .; LongClick QuestionState.ShowCommentEditorCommand">
  <Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout style="@style/Interview_Question">
    <include layout="@layout/interview_question__title" />
    <Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout style="@style/Interview_Question_Body">
      <include layout="@layout/interview_question__instructions" />
      <Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout style="@style/Interview_Question_Answer"
        local:MvxBind="BackgroundStyle QuestionLayoutStyleBackground(LayoutBackgroundStyle(QuestionState.Validity.IsInvalid, QuestionState.IsAnswered));">

        <Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout style="@style/VerticalFullWidthWrappingLayout">
          <Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout style="@style/VerticalFullWidthWrappingLayout"
            android:layout_marginBottom="@dimen/Interview_Question_Answer_MediaBlock_margin_bottom"
            local:MvxBind="Visible QuestionState.IsAnswered">
            <Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout style="@style/VerticalFullWidthWrappingLayout"
              android:background="@drawable/media_question_white_border"
              android:layout_height="@dimen/Interview_Question_Answer_Media_height">
              <DynamicImageView local:MvxBind="HttpImageUrl ToGoogleMapUrl(Answer)"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/Interview_Question_Answer_Media_Image_margin" />
            </Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout>
            <TextView style="@style/Interview_Question_TextAnswer"
              android:layout_marginTop="@dimen/Interview_Question_Answer_Media_Caption_margin_top"
              local:MvxBind="Text Format('{0}, {1}', Answer.Longitude, Answer.Latitude)" />
          </Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout>
          <Button style="@style/Interview_Question_InputButton"
            local:MvxBind="HideKeyboardOnClick .; 
                           Click SaveAnswerCommand; 
                           Text Localization('Interview_Questions_Gps_SaveAnswer');
                           BackgroundStyle MediaButtonStyleBackground(LayoutBackgroundStyle(QuestionState.Validity.IsInvalid, QuestionState.IsAnswered));" />
        </Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout>

      </Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout>
      <include layout="@layout/interview_question__errors" />
      <include layout="@layout/interview_question__comments" />
    </Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout>
  </Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout>
  <ProgressBar style="@style/Interview_Question_Progress_Indicator"
    local:MvxBind="ShowProgress IsInProgress" />
  <View style="@style/Interview_Question_Divider" />
</Cirrious.MvvmCross.Binding.Droid.Views.MvxLinearLayout>