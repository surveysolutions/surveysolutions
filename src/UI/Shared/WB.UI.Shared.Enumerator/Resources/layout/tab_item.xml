<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:local="http://schemas.android.com/apk/res-auto"
              android:id="@+id/tab_container"
              style="@style/Interview_Complete_Tab_Container"
              >


    <View
            android:id="@+id/tab_indicator"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:background="@color/group_started"
            android:visibility="invisible" />

    <TextView
            android:id="@+id/tab_count"
            android:layout_width="200dp"
            style="@style/Interview_Complete_Tab_Count"
            local:MvxBind="Text Count;"
            />

    <TextView
            android:id="@+id/tab_title"
            android:layout_width="200dp"
            style="@style/Interview_Complete_Tab_Title"
            local:MvxBind="Text Title;"
    />
</LinearLayout>
