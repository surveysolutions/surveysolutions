<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:local="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fitsSystemWindows="true"
                                        local:MvxBind="StatusBarColorByInterviewStatus Status;">
  <LinearLayout android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
    <LinearLayout style="@style/Interview_BreadCrumbsContainer"
                  local:MvxBind="ColorByInterviewStatus Status;">
      <WB.UI.Tester.CustomControls.FlowLayout orienation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  local:MvxBind="ItemsSource BreadCrumbs.Items;"
                  local:MvxItemTemplate="@layout/interview_breadcrumb_item">
      </WB.UI.Tester.CustomControls.FlowLayout>
    </LinearLayout>
    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:background="?attr/colorPrimary"
                                       local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                       local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                       local:MvxBind="ColorByInterviewStatus Status;">
      <TextView style="@style/InterviewToolbarTitle"
                local:MvxBind="Text CurrentGroup.Name" />
    </android.support.v7.widget.Toolbar>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
      <!--<WB.UI.Tester.CustomControls.MvxRecyclerView
        style="@style/Interview_List"
        android:id="@+id/interviewEntitiesList"
        android:layout_below="@+id/prefilledQuestions_questionnaireTitle_holder"
        android:scrollbars="vertical"
        local:MvxBind="ItemsSource CurrentGroup.Items" />-->
    </ScrollView>
  </LinearLayout>
  <LinearLayout style="@style/Interview_Sidebar">
    <include layout="@layout/interview_left_side_panel" />
  </LinearLayout>
</android.support.v4.widget.DrawerLayout>