<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:local="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
  <com.google.android.material.textfield.TextInputLayout
    style="@style/Interview_Confirmation_Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/oldPasswordEditTextWrapper"
    local:passwordToggleEnabled="true"
    local:hintEnabled="true">
    <com.google.android.material.textfield.TextInputEditText
      style="@style/Interview_Confirmation_Editor"
      android:inputType="textPassword"
      android:id="@+id/oldPasswordEditText"
      android:singleLine="true" />
  </com.google.android.material.textfield.TextInputLayout>
  
  <com.google.android.material.textfield.TextInputLayout
    style="@style/Interview_Confirmation_Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/confirmationEditTextWrapper"
    local:passwordToggleEnabled="true"
    local:hintEnabled="true">
    <com.google.android.material.textfield.TextInputEditText
      style="@style/Interview_Confirmation_Editor"
      android:inputType="textPassword"
      android:id="@+id/confirmationEditText"
      android:singleLine="true" />
  </com.google.android.material.textfield.TextInputLayout>
  
  <com.google.android.material.textfield.TextInputLayout
    style="@style/Interview_Confirmation_Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/reconfirmationEditTextWrapper"
    local:passwordToggleEnabled="true"
    local:hintEnabled="true"
    local:errorEnabled="true">
    <com.google.android.material.textfield.TextInputEditText
      style="@style/Interview_Confirmation_Editor"
      android:inputType="textPassword"
      android:id="@+id/reconfirmationEditText"
      android:singleLine="true" />
  </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>