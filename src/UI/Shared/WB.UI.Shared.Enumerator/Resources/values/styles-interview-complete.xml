<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name ="Interview_Complete_Screen_Scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="Interview_Complete_Screen_Text" parent="Interview_Complete_Base">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/complete_screen_title_text</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/Interview_Entity_Title_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/Interview_Entity_Title_margin_vertical</item>
        <item name="android:textSize">@dimen/textsize_14</item>
    </style>

    <style name="Interview_Complete_Screen_Text_Upper" parent="Interview_Complete_Screen_Text">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Interview_Complete_Screen_Web_Interview_Link" parent="Interview_Complete_Screen_Text">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/complete_screen_statistics_web_interview_link_color</item>
        <item name="android:textSize">@dimen/textsize_16</item>
    </style>

    <style name="Interview_Complete_Screen_Statistics_Column">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/Interview_Entity_Element_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/Interview_Entity_Element_margin_horizontal</item>
    </style>

    <style name="Interview_Complete_Screen_Statistics_Column_With_Right_Border" parent="Interview_Complete_Screen_Statistics_Column">
        <item name="android:background">@drawable/complete_screen_statistics_column_background</item>
    </style>


    <style name="Interview_Complete_Screen_Statistics_Container" parent="FullWidthWrappingLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Interview_Complete_Screen_Statistics_Counter" parent="FullWidthWrappingLayout">
        <item name="android:textSize">@dimen/textsize_28</item>
        <item name="android:textColor">@color/complete_screen_statistics_neutral_color</item>
        <item name="android:layout_marginTop">@dimen/Interview_Entity_Title_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/Interview_Entity_Title_margin_vertical</item>
    </style>


    <style name="Interview_Complete_Screen_Statistics_Answered_Counter" parent="Interview_Complete_Screen_Statistics_Counter">
        <item name="android:textColor">@color/complete_screen_statistics_answered_color</item>
    </style>

    <style name="Interview_Complete_Screen_Statistics_Answered_Label" parent="Interview_Complete_Screen_Statistics_Label">
        <item name="android:textColor">@color/complete_screen_statistics_answered_color</item>
    </style>

    <style name="Interview_Complete_Screen_Statistics_Unanswered_Counter" parent="Interview_Complete_Screen_Statistics_Counter">
        <item name="android:textColor">@color/complete_screen_statistics_unanswered_color</item>
    </style>

    <style name="Interview_Complete_Screen_Statistics_Unanswered_Label" parent="Interview_Complete_Screen_Statistics_Label">
        <item name="android:textColor">@color/complete_screen_statistics_unanswered_color</item>
    </style>

    <style name="Interview_Complete_Screen_Statistics_Errors_Counter" parent="Interview_Complete_Screen_Statistics_Counter">
        <item name="android:textColor">@color/complete_screen_statistics_error_color</item>
    </style>

    <style name="Interview_Complete_Screen_Statistics_Errors_Label" parent="Interview_Complete_Screen_Statistics_Label">
        <item name="android:textColor">@color/complete_screen_statistics_error_color</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    
    
    
    <style name="Interview_Complete_ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Interview_Complete_ListItem_Status">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Interview_Complete_Base">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/complete_screen_title_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Interview_Complete_Page_Item" parent="Interview_Complete_Base">
        <item name="android:layout_marginLeft">@dimen/Interview_Entity_margin_with_border_left</item>
        <item name="android:layout_marginRight">@dimen/Interview_Entity_margin_with_border_left</item>
        <item name="android:layout_marginBottom">@dimen/Interview_Entity_Title_margin_top</item>
    </style>

    <style name="Interview_Complete_Title" parent="Interview_Complete_Page_Item">
        <item name="android:textSize">@dimen/textsize_24</item>
        <item name="android:fontWeight">400</item>
        <item name="android:layout_marginTop">@dimen/Interview_Entity_Title_margin_top</item>
    </style>

    <style name="Interview_Complete_Success_Text" parent="Interview_Question_Title_Base">
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:textColor">@color/group_completed</item>
        <item name="android:layout_marginBottom">@dimen/interview_complete_success_text_margin_bottom</item>
    </style>

    <style name="Interview_Complete_Screen_Statistics_Label" parent="Interview_Complete_Base">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:textColor">@color/complete_screen_statistics_label</item>
    </style>
    
    <style name="Interview_Complete_Screen_Statistics_Error" parent="Interview_Complete_Base">
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:textColor">@color/complete_screen_statistics_error</item>
    </style>

    <style name="Interview_Complete_Screen_Statistics_Comment" parent="Interview_Complete_Base">
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:textColor">@color/complete_screen_statistics_label</item>
    </style>

    <style name="Interview_Submit_Button" parent="Button_Success">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CompleteTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabBackground">@drawable/tab_background_selector</item>
        <item name="tabTextAppearance">@style/CompleteTabTextAppearance</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">10dp</item>
        <item name="tabIndicatorColor">@android:color/holo_red_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="android:layout_height">@dimen/interview_complete_tab_height</item>
        <item name="android:minHeight">@dimen/interview_complete_tab_height</item>
    </style>

    <style name="CompleteTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tab_selector</item>
    </style>
    
    <style name="Interview_Complete_Note" parent="Interview_Complete_Base">
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/Interview_Entity_Title_margin_vertical</item>
    </style>

    <style name="Interview_Complete_Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Interview_Complete_Divider</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="Interview_Complete_Divider_Gray" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Interview_Entity_Divider_height</item>
        <item name="android:background">#dadada</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="Interview_Complete_Tab_Container" parent="Interview_Complete_Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Interview_Complete_Tab_height</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">fill</item>
    </style>
    
    <style name="Interview_Complete_Tab_Count" parent="Interview_Complete_Base">
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_input_button_disabled</item>
    </style>

    <style name="Interview_Complete_Tab_Title" parent="Interview_Complete_Base">
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:textColor">@color/default_input_button_disabled</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    
    <style name="Interview_Complete_Tab_Content" parent="FullWidthWrappingLayout">
    </style>

    <style name="Interview_Complete_Tab_Content_More_label" parent="Interview_Complete_Base">
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:layout_marginLeft">@dimen/Interview_Entity_margin_with_border_left</item>
        <item name="android:layout_marginRight">@dimen/Interview_Entity_margin_with_border_left</item>
    </style>

</resources>
