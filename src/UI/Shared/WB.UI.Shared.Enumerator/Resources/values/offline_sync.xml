<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="OfflineSync_HeaderText" parent="AppTheme">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">@dimen/textsize_24</item>
        <item name="android:textColor">@color/offline_sync_regular_text</item>
    </style>
    <style name="OfflineSync_SubTitleText" parent="AppTheme">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:textColor">@color/offline_sync_regular_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="OfflineSync_Hyperlink" parent="AppTheme">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:textColor">@color/offline_sync_regular_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="OfflineSync_MainHolder" parent="AppTheme">
        <item name="android:layout_width">440dp</item>
        <item name="android:layout_marginLeft">38dp</item>
        <item name="android:layout_marginTop">38dp</item>
    </style>
    <style name="OfflineSync_Title" parent="OfflineSync_HeaderText">
        <item name="android:paddingTop">38dp</item>
    </style>
    <style name="OfflineSync_ProgressTitle" parent="OfflineSync_SubTitleText">
        <item name="android:paddingTop">26dp</item>
    </style>
    <style name="OfflineSync_Cancel" parent="OfflineSync_Hyperlink">
        <item name="android:paddingTop">38dp</item>
    </style>
    <style name="OfflineSync_BackToDashboard" parent="OfflineSync_Hyperlink">
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="OfflineSync_SearchDevice" parent="OfflineSync_SubTitleText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:gravity">center_vertical|left|start</item>
        <item name="android:textColor">@color/offline_sync_waitingdevice_text</item>
    </style>
    <style name="OfflineSync_InfinityProgress" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateDrawable">@drawable/spinnerring</item>
    </style>
    <style name="OfflineSync_Abort" parent="AppTheme">
        <item name="android:paddingTop">18dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:textColor">@color/offline_sync_abort_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    <style name="OfflineSync_Progress" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:paddingTop">18dp</item>
        <item name="android:progressDrawable">@drawable/greenprogress</item>
    </style>
    <style name="OfflineSync_Done" parent="AppTheme">
        <item name="android:layout_marginTop">38dp</item>
        <item name="android:background">@drawable/group_completed</item>
        <item name="android:textSize">@dimen/textsize_12</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="OfflineSync_ProgressStatus" parent="OfflineSync_HeaderText">
        <item name="android:paddingTop">45dp</item>
    </style>
    <style name="OfflineSync_NetworkInfo" parent="OfflineSync_SubTitleText">
        <item name="android:paddingTop">18dp</item>
    </style>
</resources>
