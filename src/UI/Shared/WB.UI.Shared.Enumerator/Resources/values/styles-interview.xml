<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Interview_Entity">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:layout_marginLeft">@dimen/Interview_Entity_margin_left</item>
    <item name="android:layout_marginRight">@dimen/Interview_Entity_margin_right</item>
    <item name="android:layout_marginTop">@dimen/Interview_Entity_margin_vertical</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Entity_margin_vertical</item>
  </style>

  <style name="Interview_Entity_BasicFont">
    <item name="android:fontFamily">Arial</item>
    <item name="android:textSize">@dimen/textsize_18</item>
  </style>

  <style name="Interview_Entity_Title" parent="Interview_Entity_BasicFont">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/question_title_text</item>
    <item name="android:layout_marginTop">@dimen/Interview_Entity_Title_margin_vertical</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Entity_Title_margin_vertical</item>
  </style>

  <style name="Interview_Entity_Divider" >
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/Interview_Entity_Divider_height</item>
    <item name="android:background">#dadada</item>
  </style>

  <style name="Interview_BreadCrumbsContainer" parent="VerticalFullWidthWrappingLayout">
    <item name="android:background">@color/btn_default</item>
    <item name="android:orientation">vertical</item>
    <item name="android:paddingLeft">@dimen/Interview_Entity_margin_left</item>
    <item name="android:paddingRight">@dimen/Interview_Entity_margin_left</item>
    <item name="android:paddingTop">@dimen/Interview_BreadCrumbs_padding_top</item>

  </style>
  <style name="Interview_BreadCrumbs" parent="VerticalFullWidthWrappingLayout">
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:textColor">@color/bread_crumb_transparency</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name ="Interview_Cover_Screen_Header" parent="FullWidthWrappingLayout">
    <item name="android:textColor">@color/complete_screen_title_text</item>
    <item name="android:layout_marginTop">@dimen/Interview_Entity_Title_margin_vertical</item>
    <item name="android:layout_marginBottom">@dimen/Interview_Entity_Title_margin_vertical</item>
    <item name="android:textSize">@dimen/textsize_24</item>
    <item name="android:fontFamily">@string/font_fontFamily_medium</item>
  </style>
  
  <style name ="Interview_Cover_Prefilled_Answers_Block" parent="FullWidthWrappingLayout">
    <item name="android:background">@color/colorBlueThemePrimary</item>
   <item name="android:paddingLeft">@dimen/Interview_Cover_Marker_Line_width</item>
  </style>
  
  <style name ="Interview_Cover_Prefilled_Answers" parent="FullWidthWrappingLayout">
    <item name="android:background">@android:color/white</item>
    <item name="android:divider">@android:color/transparent</item>
    <item name="android:paddingTop">@dimen/Interview_Cover_Prefilled_Block_vertical_padding</item>
    <item name="android:paddingBottom">@dimen/Interview_Cover_Prefilled_Block_vertical_padding</item>
  </style> 
  
   <style name ="Interview_Cover_Prefilled_Question" parent="Interview_Entity">
     <item name="android:layout_marginTop">@dimen/Interview_Cover_Prefilled_vertical_padding</item>
     <item name="android:layout_marginBottom">@dimen/Interview_Cover_Prefilled_vertical_padding</item>
  </style>

  <style name ="Interview_Cover_Question_Title" parent="Interview_Entity_BasicFont">
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/complete_screen_title_text</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>  

  <style name ="Interview_Cover_Question_Answer" parent="Interview_Entity_BasicFont">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/question_title_text</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name ="Interview_Cover_GpsQuestion_Answer" parent="Interview_Cover_Question_Answer">
    <item name="android:textColor">@color/btn_default</item>
    <item name="android:textSize">@dimen/textsize_14</item>
  </style>

  <style name ="Interview_Cover_Supervisor_Note" parent="Interview_Entity">
  </style>

  <style name ="Interview_Cover_Supervisor_Note_Text" parent="Interview_Entity_BasicFont">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/cover_not_from_supervisor_color</item>
  </style>

  <style name="Interview_Cover_Header_Line"  parent="VerticalFullWidthWrappingLayout">
    <item name="android:paddingLeft">@dimen/Interview_Entity_margin_with_border_left</item>
    <item name="android:paddingRight">@dimen/Interview_Entity_margin_with_border_right</item>
    <item name="android:textColor">@color/cover_header_text</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  
  <style name="Interview_Cover_Main_Header"  parent="Interview_Cover_Header_Line">
    <item name="android:textSize">@dimen/textsize_20</item>
  </style>
  
  <style name="Interview_Cover_Main_First_Header"  parent="Interview_Cover_Main_Header">
    <item name="android:paddingTop">@dimen/Interview_Cover_Header_padding_top</item>
    <item name="android:paddingBottom">@dimen/Interview_Cover_Header_line_padding</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="Interview_Cover_Main_Second_Header"  parent="Interview_Cover_Main_Header">
    <item name="android:paddingBottom">@dimen/Interview_Cover_Header_line_padding</item>
  </style>

  <style name="Interview_Cover_Description_Header"  parent="Interview_Cover_Header_Line">
    <item name="android:paddingTop">@dimen/Interview_BreadCrumbs_padding_top</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:paddingTop">@dimen/Interview_Cover_Header_Description_padding_top</item>
    <item name="android:paddingBottom">@dimen/Interview_Cover_Header_Description_padding_bottom</item>
  </style>
</resources>
