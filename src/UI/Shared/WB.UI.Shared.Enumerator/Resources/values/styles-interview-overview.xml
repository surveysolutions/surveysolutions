<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="Overview_GroupTitle" parent="Interview_Entity">
        <item name="android:layout_marginLeft">@dimen/Interview_Entity_margin_with_border_left</item>
        <item name="android:textColor">@color/commentInterviewerTextColor</item>
        <item name="android:textSize">@dimen/textsize_18</item>
    </style>
    <style name="Overview_Section_Title" parent="Overview_GroupTitle">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Overview_Question_Title">
        <item name="android:layout_marginLeft">@dimen/Interview_Entity_margin_left</item>
        <item name="android:textColor">@color/recordedAnswerText</item>
        <item name="android:textSize">@dimen/textsize_16</item>
    </style>
    <style name="Overview_Question_Answer" parent="Overview_Question_Title">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Overview_Question_Answer_Multimedia" parent="Overview_Question_Answer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/Interview_Question_Answer_Media_height</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="Overview_Question_Answer_Audio" parent="Interview_Button">
        <item name="android:layout_marginLeft">@dimen/Interview_Entity_margin_left</item>
    </style>
</resources>
