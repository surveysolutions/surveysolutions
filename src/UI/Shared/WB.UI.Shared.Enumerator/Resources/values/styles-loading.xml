<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoadingToolbarTitle" parent="ToolbarTitle">
        <item name="android:layout_marginLeft">@dimen/Interview_Entity_margin_left</item>
        <item name="android:layout_marginRight">@dimen/Interview_Entity_margin_right</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LoadingOperationTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/Interview_Entity_margin_left</item>
        <item name="android:layout_marginTop">@dimen/Loading_Title_margin_top</item>
        <item name="android:textSize">@dimen/Loading_Progress_font_size</item>
    </style>
    
    <style name="LoadingOperationDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/Interview_Entity_margin_left</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:textSize">@dimen/Loading_Progress_Description_font_size</item>
    </style>
    
    <style name="LoadingProgressIndicator" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:focusable">false</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_width">439dp</item>
        <item name="android:layout_marginLeft">@dimen/Interview_Entity_margin_left</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:keepScreenOn">false</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar_loading</item>
    </style>

</resources>
