<?xml version="1.0" encoding="utf-8" ?>
<resources>


  <!-- application theme -->

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowBackground">@color/applicationBackground</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    
    <item name="colorPrimary">@android:color/darker_gray</item>
    <item name="colorPrimaryDark">@color/darkActionBar</item>
    <item name="colorAccent">@android:color/holo_blue_bright</item>

    <!-- elements -->
    <item name="buttonStyle">@style/ButtonAppTheme</item>
    <item name="checkboxStyle">@style/CheckBoxTheme </item>
    <item name="editTextStyle">@style/EditTextTheme</item>
    <item name="radioButtonStyle">@style/RadioButtonTheme</item>
    <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextViewTheme</item>
    <item name="spinnerStyle">@style/SpinnerTheme</item>
    <item name="spinnerDropDownItemStyle">@style/SpinnerDropDownItemTheme</item>
    <item name="dropDownListViewStyle">@style/DropDownListViewStyleTheme</item>

  </style>

  <style name="GrayAppTheme" parent="AppTheme">
    <item name="colorPrimary">#FF666666</item>
    <item name="android:textColorHighlight">#9936aee5</item>
    <item name="android:progressBarStyleHorizontal">@style/ProgressBarTheme_Blue_Light</item>
    <item name="android:seekBarStyle">@style/SeekBarTheme_Blue_Light</item>
  </style>

  <style name="ButtonAppTheme" parent="android:Widget.Material.Button">
    <item name="android:background">@drawable/group_started</item>
    <item name="android:minHeight">@dimen/Theme_Button_min_height</item>
    <item name="android:minWidth">@dimen/Theme_Button_min_width</item>
    <item name="android:gravity">center_vertical|center_horizontal</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="CheckBoxTheme"  parent="android:Widget.Material.Light.CompoundButton.CheckBox">
    <item name="android:button">@drawable/theme_blue_light_btn_check_holo_light</item>
  </style>

  <style name="RadioButtonTheme" parent="android:Widget.Material.Light.CompoundButton.RadioButton">
    <item name="android:button">@drawable/theme_blue_light_btn_radio_holo_light</item>
  </style>

  <style name="EditTextTheme" parent="android:Widget.EditText">
    <item name="android:background">@drawable/theme_blue_light_edit_text_holo_light</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="AutoCompleteTextViewTheme" parent="EditTextTheme"/>

  <style name="SpinnerTheme" parent="android:Widget.Material.Spinner">
    <item name="android:background">@drawable/theme_blue_light_spinner_background_holo_light</item>
    <item name="android:dropDownSelector">@drawable/theme_blue_light_list_selector_holo_light</item>
    <item name="android:dropDownVerticalOffset">@dimen/zero</item>
    <item name="android:dropDownHorizontalOffset">@dimen/zero</item>
  </style>

  <style name="SpinnerDropDownItemTheme" parent="android:Widget.Material.DropDownItem.Spinner">
    <item name="android:checkMark">@drawable/theme_blue_light_btn_radio_holo_light</item>
    <item name="android:divider">@android:color/transparent</item>
    <item name="android:dividerHeight">@dimen/zero</item>
  </style>

  <style name="DropDownListViewStyleTheme" parent="android:Widget.Material.ListView.DropDown">
    <item name="android:divider">@android:color/transparent</item>
    <item name="android:dividerHeight">@dimen/zero</item>
  </style>

</resources>