<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/loading_progress_background" />
            <corners android:radius="@dimen/Dashboard_Layout_border_radius" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/loading_progress_color" />
                <corners android:radius="@dimen/Dashboard_Layout_border_radius" />
            </shape>
        </clip>
    </item>

</layer-list>
