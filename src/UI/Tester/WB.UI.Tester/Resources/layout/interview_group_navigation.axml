<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:local="http://schemas.android.com/apk/res-auto"
                 style="@style/Interview_Previous_Group_Navigation_Layout"
                 local:MvxBind="HideKeyboardOnClick .">
  <Button style="@style/Interview_Previous_Group_Navigation_Button"
    local:MvxBind="
      HideKeyboardOnClick .; 
      Click NavigateCommand; 
      ButtonGroupStyle NavigateToGroupViewModel.GroupState; 
      Text If(IsInSection, Localization('Interview_NextSection_ButtonText'), Localization('Interview_PreviousGroupNavigation_ButtonText'))"/>
</LinearLayout>