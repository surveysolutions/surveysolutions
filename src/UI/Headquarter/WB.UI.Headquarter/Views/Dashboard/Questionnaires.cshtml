@using Main.Core.View.Questionnaire
@using WB.Core.SharedKernels.DataCollection.Views.Questionnaire.BrowseItem
@model WB.Core.SharedKernels.DataCollection.Views.Questionnaire.BrowseItem.QuestionnaireBrowseView
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Dashboard</h1>
<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Questionnaire</th>
            <th>Date Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (QuestionnaireBrowseItem item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td class="buttons">
                    <div class="btn-group">
                        <a  href="@Url.Action("NewSurvey", "Dashboard", new {id = item.Id})" class="btn btn-primary">
                            New Survey</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>