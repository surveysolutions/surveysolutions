@using WB.UI.Shared.Web.Extensions
@model WB.UI.Designer.Controllers.QuestionnaireController.QuestionnaireCloneModel

@{
    ViewBag.Title = QuestionnaireController.CopyQuestionnaire;
}

<div id="edit-form">
    @if (TempData.ContainsKey(Alerts.SUCCESS))
    {
        <div class="alert alert-success header">@Html.Raw(@TempData[Alerts.SUCCESS])</div>
    }
<form method="post">
    <input type="hidden" asp-for="QuestionnaireId" />
    <input type="hidden" asp-for="Revision" />
    <h1>@QuestionnaireController.CopyQuestionnaire</h1>
    @if (TempData.ContainsKey(Alerts.ERROR))
    {
        <p class="note has-error">@Html.Raw(TempData[Alerts.ERROR])</p>
    }
    <div class="form-group">
        <input type="text" asp-for="Title" class="form-control" placeholder="@QuestionnaireController.QuestionnaireTitle" />
        <span asp-validation-for="Title" class="text-danger header-line"></span>
    </div>
    <div class="form-actions">
        <input type="submit" class="btn btn-success btn-lg" value="@QuestionnaireController.Copy" id="inputCloneQuestionnaire" />
        <a asp-action="Index" class="btn btn-link">
            @QuestionnaireController.Cancel
        </a>
    </div>
</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            $('#edit-form').submit(function () {
                $('#inputCloneQuestionnaire').attr("disabled", true);
                return true;
            });
        });
    </script>
}

