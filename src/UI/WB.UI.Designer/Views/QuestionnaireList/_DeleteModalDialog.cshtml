<div class="modal" id="mDelete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="@QuestionnaireController.Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">@QuestionnaireController.Delete @QuestionnaireController.Confirmation</h4>
            </div>
            <div class="modal-body" style="word-break: break-all;">
                <p>@Html.Raw(string.Format(QuestionnaireController.DeleteConfirmationText, "<i><strong style=\"color:#d32828\" id=\"delete-modal-questionnaire-title\"></strong></i>"))</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-controller="Questionnaire" method="post">
                    @Html.AntiForgeryToken()
                    <input name="id" id="delete-modal-questionnaire-id" type="hidden" />
                    <button type="button" class="btn" data-bs-dismiss="modal" aria-hidden="true">@QuestionnaireController.Cancel</button>
                    <button type="submit" class="btn btn-danger" value="@QuestionnaireController.Delete" onclick="this.disabled = true;this.value = '@QuestionnaireController.Deleting';this.form.submit();">
                        @QuestionnaireController.Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
