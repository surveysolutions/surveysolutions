<?xml version="1.0" encoding="utf-8"?>
<parameters>
   <parameter name="The RavenDB instance address"
      description="Provide the address for RavenDB instance"
      defaultValue="http://localhost:8080">
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='Raven.DocumentStore']/@value" />
   </parameter>
   <parameter name="Events database name"
      description="The database where the events will be stored"
      defaultValue="Events">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='Raven.Databases.Events']/@value" />
   </parameter>
   <parameter name="Views database name"
      description="The database where the read side will be stored"
      defaultValue="Views">
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='Raven.Databases.Views']/@value" />
   </parameter>
   <parameter name="Plain storage"
      defaultValue="PlainStorage">
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='Raven.Databases.PlainStorage']/@value" />
   </parameter>
   <parameter name="Enable Updated Designer"
      description="This parameter shows if updated designer page should be enabled"
      defaultValue="false">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/appSettings/add[@key='IsNewDesignerEditPageEnabled']/@value" />
   </parameter>
   <parameter name="Enable defaultproxy"
      description="Enable/disable default proxy setting"
      defaultValue="true">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/system.net/defaultProxy/@enabled" />
   </parameter>
   <parameter name="Network defaultCredentials"
      defaultValue="false">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/system.net/mailSettings/smtp/network/@defaultCredentials" />
   </parameter>
   <parameter name="Network host">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/system.net/mailSettings/smtp/network/@host" />
   </parameter>
   <parameter name="Network port">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/system.net/mailSettings/smtp/network/@port" />
   </parameter>
   <parameter name="Network userName">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/system.net/mailSettings/smtp/network/@userName" />
   </parameter>
   <parameter name="Network password">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/system.net/mailSettings/smtp/network/@password" />
   </parameter>
   <parameter name="Network enableSsl"
      defaultValue="false">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/system.net/mailSettings/smtp/network/@enableSsl" />
   </parameter>
   <parameter name="Enable ReCaptcha"
      defaultValue="true">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/appSettings/add[@key='IsReCaptchaEnabled']/@value" />
   </parameter>
   <parameter name="ReCaptcha private key">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/appSettings/add[@key='ReCaptchaPrivateKey']/@value" />
   </parameter>
  <parameter name="ReCaptcha public key">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/appSettings/add[@key='ReCaptchaPublicKey']/@value" />
   </parameter>
   <parameter name="Enable Tracking"
      defaultValue="true">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/appSettings/add[@key='IsTrackingEnabled']/@value" />
   </parameter>
   <parameter name="Database replication"
      description="Turn database failover options"
      defaultValue="FailImmediately">
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='Raven.Databases.FailoverBehavior']/@value" />
   </parameter>
  </parameters>
