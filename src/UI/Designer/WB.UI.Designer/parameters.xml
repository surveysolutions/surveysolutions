<?xml version="1.0" encoding="utf-8"?>
<parameters>
   <parameter name="ReadSide Connection String"
      description="Provide the connection string for PostgreSQL database for read side"
      defaultValue="Server=127.0.0.1;Port=5432;User Id=postgres;Password=P@$$w0rd;Database=Views;">
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/connectionStrings/add[@name='ReadSide']/@connectionString" />
   </parameter>

  <parameter name="Event store IP address"
      defaultValue="127.0.0.1">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='EventStore.ServerIP']/@value" />
   </parameter>
  <parameter name="Event store TCP port"
      defaultValue="1113">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='EventStore.ServerTcpPort']/@value" />
   </parameter>
  <parameter name="Event store HTTP port"
      defaultValue="2113">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='EventStore.ServerHttpPort']/@value" />
   </parameter>
  <parameter name="Event store login"
      defaultValue="admin">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='EventStore.Login']/@value" />
   </parameter>
  <parameter name="Event store password"
      defaultValue="changeit">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='EventStore.Password']/@value" />
   </parameter>
   
   <parameter name="Network defaultCredentials"
      defaultValue="false">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/system.net/mailSettings/smtp/network/@defaultCredentials" />
   </parameter>
   <parameter name="Network host">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/system.net/mailSettings/smtp/network/@host" />
   </parameter>
   <parameter name="Network port">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/system.net/mailSettings/smtp/network/@port" />
   </parameter>
   <parameter name="Network userName">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/system.net/mailSettings/smtp/network/@userName" />
   </parameter>
   <parameter name="Network password">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/system.net/mailSettings/smtp/network/@password" />
   </parameter>
   <parameter name="Network enableSsl"
      defaultValue="false">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/system.net/mailSettings/smtp/network/@enableSsl" />
   </parameter>
   <parameter name="Enable ReCaptcha"
      defaultValue="true">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/appSettings/add[@key='IsReCaptchaEnabled']/@value" />
   </parameter>
   <parameter name="ReCaptcha private key">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/appSettings/add[@key='reCaptchaPrivateKey']/@value" />
   </parameter>
  <parameter name="ReCaptcha public key">
   <parameterValidation kind="AllowEmpty" />
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/appSettings/add[@key='reCaptchaPublicKey']/@value" />
   </parameter>
   <parameter name="Enable Tracking"
      defaultValue="true">
   <parameterEntry kind="XmlFile"
      scope="\\web.config$"
      match="/configuration/appSettings/add[@key='IsTrackingEnabled']/@value" />
   </parameter>
   <parameter name="Show control panel"
      defaultValue="false">
   <parameterEntry kind="XmlFile" 
      scope="\\web.config$" 
      match="/configuration/appSettings/add[@key='IsDevelopmentEnvironment']/@value" />
   </parameter>
  <parameter name="Check SSL for API"
      defaultValue="true">
    <parameterEntry kind="XmlFile"
       scope="\\web.config$"
       match="/configuration/appSettings/add[@key='IsApiSSLVerificationEnabled']/@value" />
  </parameter>
  </parameters>
