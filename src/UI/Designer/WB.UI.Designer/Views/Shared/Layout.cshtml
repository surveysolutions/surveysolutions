@using WB.UI.Designer
@using WB.UI.Shared.Web.Membership
@using WB.UI.Designer.Code
@using WB.UI.Shared.Web.Extensions
@{
    IMembershipUserService userHelper = ViewBag.UserHelper;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@this.ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Styles.Url("~/content/css")" rel="stylesheet"/>
    @this.GenerateFavicon(Url.Content("~/favicon.ico"))
    @this.RenderSection("Styles", required: false)
    @this.RenderSection("Scripts", required: false)
    @this.Html.Partial("_html5shiv")
    @Html.Partial("_trackers")
    @* favicons and touch icons go here *@
</head>
<body>
    <div class="navbar  navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a>
                <ul class="nav nav-pills pull-left">
                    <a class="network-name-container"><img src="~/Content/images/wb_logo.png" /></a>
                    <li class="divider-vertical"></li>
                    @Html.ActionLink("Designer", "Index", "Questionnaire", null, new { @class = "brand" })
                </ul>
                <div class="nav-collapse ">
                    <ul class="nav nav-pills pull-right">
                        <li class="divider-vertical"></li>
                        @this.Html.MenuActionLink("My Questionnaires", "Index", "Questionnaire")
                        <li class="divider-vertical"></li>
                        @this.Html.MenuActionLink("Public Questionnaires", "Public", "Questionnaire")
                        <li class="divider-vertical"></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hello, @User.Identity.Name <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@this.Html.ActionLink("Change password", "Manage", "Account")</li>
                                <li>@this.Html.ActionLink("Logout", "LogOff", "Account")</li>
                            </ul>
                        </li>
                        <li class="divider-vertical"></li>
                        @if (userHelper.WebUser.IsAdmin)
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@this.Html.ActionLink("Manage users", "Index", "Admin")</li>
                                    <li>@this.Html.ActionLink("Import", "Import", "Synchronization")</li>
                                </ul>
                            </li>
                            <li class="divider-vertical"></li>
                        }
                    </ul>
                </div>

            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @this.Html.Partial("_alerts")
            @this.RenderBody()
        </div>
        <div class="row-fluid" id="footer-block">
            <hr>
            <footer class="text-center">
                @Html.Partial("_commonFooter")
            </footer>
        </div>
    </div>
</body>
</html>
