<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>Designer Start Log-in</title>
    <script src="~/UpdatedDesigner/vendor/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <!-- Bootstrap library -->
    <link href="~/UpdatedDesigner/content/designer-start/bootstrap-custom.css" rel="stylesheet" />
    <script src="~/UpdatedDesigner/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/UpdatedDesigner/content/designer-start/designer-start.css" rel="stylesheet" />

    <script type="text/javascript">
        function FrameCheck() {
            if (top != self)
                top.location.replace(self.location.href);
        }
    </script>

    @RenderSection("Styles", required: false)
    @RenderSection("Scripts", required: false)
    @Html.Partial("_html5shiv")
    @*@Html.Partial("_trackers")*@

</head>
<body onload="FrameCheck();">
    <header>
        <div class="logo"></div>
        <nav>
            <button class="btn btn-default">Help</button>
            <button class="btn btn-default">Register</button>
            <button class="btn btn-default">Log in</button>
        </nav>
    </header>

    <section id="start-page">
        <div class="content-holder-outer">
            <div class="content-holder-inner">
                <div class="content-block">
                    <div class="form-holder">
                        @if (!string.IsNullOrWhiteSpace(ViewData["UserNotification"] as string))
                        {
                            <div id="notification-message" class="alert alert-info">
                                @Html.Raw(ViewData["UserNotification"])
                            </div>
                        }
                        <div class="form-row">
                            <div class="form-left">
                                <img src="~/UpdatedDesigner/content/i/designer-logo.png" />
                                <p>
                                    This is free tool for creating surveys for The World Bank’s CAPI platform with
                                    collaboration
                                    capabilities, export to PDF
                                </p>
                            </div>
                            <div class="form-splitter">
                                <div class="vline"></div>
                            </div>
                            <div class="form-right">
                                @*@Html.Partial("_alerts")*@
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer>
        @Html.Partial("_commonFooter")
    </footer>
</body>
</html>