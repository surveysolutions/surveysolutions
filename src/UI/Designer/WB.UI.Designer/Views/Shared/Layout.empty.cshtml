<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Styles.Url("~/content/css")" rel="stylesheet"/>
    <style type="text/css">
        body {
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 650px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }

        .form-actions {
            margin-top: 20px;
            margin-bottom: 0px;
        }

        .form-horizontal .form-actions {
            padding-left: 30px;
        }

        p {
            margin: 10px 0 0 0;
        }
    </style>
    @* to avoid cross-frame scripting *@
    <script type="text/javascript">
        function FrameCheck() {
            if (top != self)
                top.location.replace(self.location.href);
        }
    </script>

    @RenderSection("Styles", required: false)
    @RenderSection("Scripts", required: false)
    @Html.Partial("_html5shiv")
    @Html.Partial("_trackers")

    @* favicons and touch icons go here *@
</head>
<body onload="FrameCheck();">
    <div class="navbar  navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a>
                <a href="http://www.worldbank.org" class="network-name">The World Bank</a>
            </div>
        </div>
    </div>
    <div class="container-fluid" style="padding-top: 80px">
        <div class="row-fluid">
            @Html.Partial("_alerts")
            @RenderBody()
        </div>
        <div class="row-fluid">
            <hr>
            <footer class="text-center">
                © 2013 <a href="http://www.worldbankgroup.org">The World Bank Group</a>, All Rights Reserved. <a href="http://web.worldbank.org/WBSITE/EXTERNAL/0,,contentMDK:20146401~pagePK:50016803~piPK:50016805~theSitePK:13,00.html">Legal</a>.
            </footer>
        </div>
    </div>
</body>
</html>

