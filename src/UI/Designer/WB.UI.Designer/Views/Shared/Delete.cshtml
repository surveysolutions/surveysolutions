@using WB.UI.Designer.BootstrapSupport
@model Object
<fieldset>
    <legend>Do you really want to delete @Model.GetLabel()? <small>confirmation</small></legend>
    <dl class="dl-horizontal">
        <!-- use this class on the dl if you want horizontal styling http://twitter.github.com/bootstrap/base-css.html#typography  class="dl-horizontal"-->
        @foreach (var property in Model.VisibleProperties())
        {
            <dt>
                @property.GetLabel().ToSeparatedWords()
            </dt>
            <dd>
                @Html.Display(property.Name)
            </dd>
        }
    </dl>
</fieldset>

@using (Html.BeginForm())
{
    <p>
        <button type="submit" class="btn btn-primary" value="Delete">Delete</button>
        |
        @Html.ActionLink("Back to List", "Index")
    </p>
}

