@using WB.UI.Designer.Resources
@using WB.UI.Shared.Web.Extensions
@model WB.UI.Designer.Models.QuestionnaireCloneModel
<div id="edit-form">
    @if (TempData.ContainsKey(Alerts.SUCCESS))
    {
        <div class="alert alert-success header">@Html.Raw(@TempData[Alerts.SUCCESS])</div>
    }
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        <h1>@QuestionnaireController.CopyQuestionnaire</h1>
        if (TempData.ContainsKey(Alerts.ERROR))
        {
            <p class="note has-error">@Html.Raw(@TempData[Alerts.ERROR])</p>
        }
        <div class="form-group">
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = QuestionnaireController.QuestionnaireTitle })
            @Html.ValidationMessageFor(x => x.Title, null, new { @class = "help-inline" })
        </div>
        @*<div class="form-group">
            @Html.CheckBoxFor(x => x.IsPublic, new { @id = "is-public-questionnaire", @class = "wb-checkbox" })
            <label for="is-public-questionnaire">
                <span></span>Is Public
            </label><br/>
        </div>*@
        @Html.HiddenFor(x => x.Id)
        <div class="form-actions">
            <input type="submit" class="btn btn-success btn-lg" value="@QuestionnaireController.Copy" id="inputCloneQuestionnaire"/>
            @Html.ActionLink(QuestionnaireController.Cancel, "Index", "Questionnaire", null, new { @class = "btn " })
            @Html.ActionLink(QuestionnaireController.BackToList, "Index", "Questionnaire", null, new { @class = "btn " })
        </div>
    }
</div>

@section Scripts {
@Scripts.Render("~/editform")
<script>
    $(function () {
        $('#edit-form').submit(function () {
            $('#inputCloneQuestionnaire').attr("disabled", true);
            return true;
        });
    });
</script>

}