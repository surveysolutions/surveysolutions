@using WB.UI.Designer.Resources

@{
    ViewBag.Title = QuestionnaireController.QuestionnaireTreeFolders;
}

@section Scripts {
    @Scripts.Render("~/folders/lib/tree/skin")
    @Scripts.Render("~/simplepage")
    @Scripts.Render("~/folders")

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jquery-contextmenu/2.2.3/jquery.contextMenu.min.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-contextmenu/2.2.3/jquery.contextMenu.min.js">
    </script>

    <script type="text/javascript">
        $(function(){
            var subFoldersUrl =  '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "QuestionnaireTreeApi", action= "GetFolders" })';// '/api/questionnairetreeapi/getfolders';
            var rootFoldersUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "QuestionnaireTreeApi", action= "GetRootFolders" })'; //'/api/questionnairetreeapi/getrootfolders';
            var addNodeUrl =     '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "QuestionnaireTreeApi", action= "CreateFolder" })';// '/api/questionnairetreeapi/createfolder';
            var renameNodeUrl =  '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "QuestionnaireTreeApi", action= "RenameFolder" })';//'/api/questionnairetreeapi/RenameFolder';
            var removeNodeUrl =  '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "QuestionnaireTreeApi", action= "RemoveFolder" })'; //'/api/questionnairetreeapi/RemoveFolder';

            window.foldersModel = new FoldersModel($("#jstree"), rootFoldersUrl, subFoldersUrl, addNodeUrl, renameNodeUrl, removeNodeUrl);
        });
    </script>
}

<div id="edit-form">
    <div id="jstree">
    </div>
</div>


