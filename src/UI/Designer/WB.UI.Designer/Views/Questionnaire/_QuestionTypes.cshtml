<script type="text/html" id="Categorical">
    <div data-bind="visible: qtype() == 'MultyOption'">
        <button type="button" class="btn btn-small" data-toggle="checkbox" data-value="true" data-bind="checkedButtons: isAnswersOrdered, popover: { content: 'We will be saving and displaying the order in which answers were given.', title: 'Ordered', placement: 'right', trigger: 'hover' }"><i class="icon-list-ol"></i>&nbsp;ordered</button>
        <div style="margin-top: 10px" class="control-group" data-bind="validationElement: maxAllowedAnswers">
                <label class="control-label">Maximum number of answers</label>
                <div class="controls">
                    <input id="maxAllowedAnswers" placeholder="" type="text" data-bind="value: maxAllowedAnswers, valueUpdate: 'afterkeydown'" class="input-block-level" maxlength="32" />
                </div>
        </div>
                
    </div>
    
    <div class="btn-group">
        <button type="button" class="btn btn-small" data-value="0" data-bind="checkedButtons: isLinked">manual</button>
        <button type="button" class="btn btn-small" data-value="1" data-bind="checkedButtons: isLinked">linked</button>
    </div>

    <div style="margin-top: 20px">
        <div data-bind="visible: isLinked() == 0">
            <label class="control-label required">Categories</label>
            <div class="answer-options">
                <!-- ko foreach: answerOptions -->
                <div class="row-fluid">
                    <div class="controls  controls-row">
                        <div class="span3 control-group" data-bind="validationElement: value">
                            <input type="text" placeholder="Value" class="input-block-level" data-bind="value: value, valueUpdate: 'afterkeydown'">
                        </div>
                        <div class="span8 control-group" data-bind="validationElement: title">
                            <input type="text" placeholder="Label" class="input-block-level" data-bind="value: title, valueUpdate: 'afterkeydown'">
                        </div>
                        <button class="btn btn-danger" type="button" data-bind="click: $parent.removeAnswer"><i class="icon-remove icon-white"></i></button>
                    </div>
                </div>
                <!-- /ko -->
            </div>
            <p class="text-center">
                <button class="btn btn-success" type="button" data-bind="click: $parent.addAnswer"><i class="icon-plus icon-white"></i>Add category</button>
            </p>
        </div>
        <div data-bind="visible: isLinked() == 1">
            <label class="control-label required">Bind to question from auto propagated group</label>
            <div class="row-fluid">
                <div class="controls  controls-row">
                    <div class="control-group" data-bind="validationElement: selectedLinkTo">
                        <select class="input-block-level" data-bind="options: questionsFromProragatedGroups, optionsValue: 'questionId', optionsText: 'title', value: selectedLinkTo, optionsCaption: 'Choose...'"></select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
</script>
<script type="text/html" id="SingleOption">
    <div data-bind="template: { name: 'Categorical', data: $parent }"></div>
</script>

<script type="text/html" id="MultyOption">
    <div data-bind="template: { name: 'Categorical', data: $parent }"></div>
</script>

<script type="text/html" id="Numeric">
    <div class="row-fluid">
        <div class="span5">
            <label class="control-label">Numeric type</label>
            <div class="btn-group">
                <button type="button" class="btn btn-small" data-value="1" data-bind="checkedButtons: isInteger">Integer</button>
                <button type="button" class="btn btn-small" data-value="0" data-bind="checkedButtons: isInteger">Real</button>
            </div>
        </div>
        <div class="span7">
            <div class="control-group" data-bind="validationElement: countOfDecimalPlaces, visible: $data.isInteger() == 0 ">
                <label class="control-label">Count Of Decimal Places</label>
                <div class="controls">
                    <input id="countOfDecimalPlaces" placeholder="" type="text" data-bind="value: countOfDecimalPlaces, valueUpdate: 'afterkeydown'" class="input-block-level" maxlength="32" />
                </div>
            </div>
        </div>
    </div>
</script>
