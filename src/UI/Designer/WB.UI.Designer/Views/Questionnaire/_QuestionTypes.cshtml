<script type="text/html" id="SingleOption">
    <div class="row-fluid">
        <label>Answer order</label>
        <select class="span12" data-bind="options: orderOptions, value: answerOrder"></select>
    </div>
    <label class="control-label required">Answers</label>
    <div class="answer-options">
    <!-- ko foreach: answerOptions -->
    <div class="row-fluid">
        <div class="row-fluid">
            <div class="controls  controls-row">
                <div class="span3 control-group"  data-bind="validationElement: value">
                    <input type="number" placeholder="value" class="input-block-level" data-bind="value: value, valueUpdate: 'afterkeydown'">
                </div>
                <div class="span8 control-group"  data-bind="validationElement: title">
                    <input type="text" placeholder="title" class="input-block-level" data-bind="value: title, valueUpdate: 'afterkeydown'">
                </div>
                <button class="btn btn-danger" type="button" data-bind="click: $parent.removeAnswer"><i class="icon-remove icon-white"></i></button>
            </div>
        </div>
    </div>
    <!-- /ko -->
    </div>

    <div class="row-fluid">
        <div class="controls controls-row ">
            <div class="span3">
                <input id="currentAnswerValue"  type="number" placeholder="value" class="input-block-level" data-bind="value: $parent.currentAnswerValue">
            </div>
            <div class="span8" >
                <input type="text" placeholder="title" class="input-block-level" data-bind="value: $parent.currentAnswerTitle">
            </div>
           <button class="btn btn-success" type="button" data-bind="click: $parent.addAnswer"><i class="icon-plus icon-white"></i></button>
        </div>
    </div>
</script>
