@using WB.UI.Designer.BootstrapSupport
@model WB.UI.Designer.Models.ResetPasswordModel

@{
    ViewBag.Title = "Password reset";
    Layout = "~/Views/Shared/Layout.empty.cshtml";
}

@using (Html.BeginForm("PasswordReset", "Account", null, FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()
    <legend>@Model.GetLabel()</legend>
    <fieldset class="form-horizontal">

        @{
    this.Html.RenderPartial("EditForm");
        }
        <div class="form-actions">
            <button class="btn btn-large btn-primary pull-right" type="submit">Reset Password</button>
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/editform")
}