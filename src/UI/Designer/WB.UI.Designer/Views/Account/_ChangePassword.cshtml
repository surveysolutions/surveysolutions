@using WB.UI.Designer.Resources
@model WB.UI.Designer.Models.ChangePasswordModel

@using (Html.BeginForm("ChangePassword", "Account", null, FormMethod.Post, new {@class = "form-signin", autocomplete = "off"}))
{
    @Html.AntiForgeryToken()
    <h1>@AccountResources.ChangePassword</h1>
    <div class="form-group">
        @Html.PasswordFor(x => x.OldPassword, new {@class = "form-control", placeholder = AccountResources.CurrentPassword})
        @Html.ValidationMessageFor(x => x.OldPassword, null, new {@class = "help-inline"})
    </div>
    <div class="form-group">
        @Html.PasswordFor(x => x.Password, new {@class = "form-control", placeholder = AccountResources.PasswordWatermark})
        @Html.ValidationMessageFor(x => x.Password, null, new {@class = "help-inline"})
    </div>
    <div class="form-group">
        @Html.PasswordFor(x => x.ConfirmPassword, new {@class = "form-control", placeholder = AccountResources.RepeatPassword})
        @Html.ValidationMessageFor(x => x.ConfirmPassword, null, new {@class = "help-inline"})
    </div>
    <div class="form-actions">
        <input type="submit" class="btn btn-success btn-lg" value="@AccountResources.Change"/>
        @Html.ActionLink(QuestionnaireController.Cancel, "Index", "Questionnaire", null, new {@class = "btn "})
    </div>
}
