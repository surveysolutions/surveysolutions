@model WB.UI.Designer.Models.PdfQuestionnaireModel

@{
    Layout = null;
    ViewBag.Questionnaire = Model;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@Model.Title</title>
    @Styles.Render("~/Content/pdf.css")
</head>
<body>
    <header>
        <div class="column_header authors">
            <ul>
                <li>This PDF generated by msidak, <span>07/24/2015 06:32:47</span></li>
                <li>Questionnaire created by cheserhiy, <span>07/01/2015 23:11</span></li>
                <li>Last modified by cheserhiy, <span>07/24/2015 06:32</span></li>
            </ul>
            <div>Shared with:</div>
            <ul>
                <li>msidak <span>(last edited 07/24/2015 06:32)</span></li>
                <li>cheserhiy <span>(last edited 07/24/2015 06:32)</span></li>
                <li>kiolerighr <span>(never edited)</span></li>
            </ul>
        </div>
        <div class="column_header">
            <ul>
                <li>
                    <ul class="string_list">
                        <li>Chapters: <span>11</span></li>
                        <li>Groups: <span>7</span></li>
                        <li>Question: <span>180</span></li>
                    </ul>
                </li>
                <li>Question wich conditions: <span>74</span></li>
                <li>Rosters: <span>2</span></li>
            </ul>
        </div>
        <div class="column_header">
            <a href="https://solutions.worldbank.org/" target="_blank" class="logo">
                <img src="~/Content/images/pdf_logo.png" alt="Survey Solutions" />
            </a>
        </div>
    </header>
    <article>
        <section class="questionnaire_info">
            <div class="questionnaire_title">
                <h1>@Model.Title</h1>
            </div>
        </section>
        <section class="table_of_contents">
            <dl>
                @foreach (var sectionId in Model.SectionIds)
                {
                    var statistics = Model.GetGroupStatistics(sectionId);
                    <dt>&nbsp;</dt>
                    <dd>
                        <a href="#group-@sectionId" class="section_name">@Model.GetGroupTitle(sectionId)</a>
                        <ul class="string_list">
                            @if (statistics.GroupsCount > 0)
                            {
                                <li>Sub-sections: <span>@statistics.GroupsCount</span></li>
                            }
                            else
                            {
                                <li>No sub-sections</li>
                            }
                            @if (statistics.RostersCount > 0)
                            {
                                <li>Rosters: <span>@statistics.RostersCount</span></li>
                            }
                            else
                            {
                                <li>No rosters</li>
                            }
                            @if (statistics.QuestionsCount > 0)
                            {
                                <li>Questions: <span>@statistics.QuestionsCount</span></li>
                            }
                            else
                            {
                                <li>No questions</li>
                            }
                            @if (statistics.StaticTextsCount > 0)
                            {
                                <li>Static texts: <span>@statistics.StaticTextsCount</span></li>
                            }
                        </ul>
                    </dd>
                }
                <dt>&nbsp;</dt>
                <dd>
                    <a href="#appendix_a" class="section_name appendix">Appendix a &#8212; full sets and expressions</a>
                </dd>
                <dt>&nbsp;</dt>
                <dd>
                    <a href="#appendix_b" class="section_name appendix">Appendix b &#8212; Export structure</a>
                </dd>
            </dl>
        </section>
    </article>
    <article class="help_info">
        <img src="~/Content/images/PDF-structure.png" />
    </article>
    <article>
        @foreach (var sectionId in Model.SectionIds)
        {
            <section class="section">
                <div class="section_header">
                    <h2 id="group-@sectionId">@Model.GetGroupTitle(sectionId)</h2>
                </div>
                @Html.Partial("_RenderChildren", sectionId)
            </section>
        }
    </article>
    <article class="appendix_section">
        <h2 id="appendix_a">Appendix a &#8212; full sets and expressions</h2>
    </article>
    <article class="appendix_section">
        <h2 id="appendix_b">Appendix b &#8212; Export structure</h2>
        <section>
            <h3>Projected export file structure</h3>
        </section>
    </article>
    <article class="appendix_section">
        <h2>Appendix b &#8212; Export structure</h2>
        <section>
            <h3>Structure and order of variables in export files.</h3>
        </section>
    </article>
    <article class="appendix_section">
        <h2>Appendix b &#8212; Export structure</h2>
        <section>
            <h3>Projected export file structure</h3>
        </section>
    </article>
</body>
</html>
