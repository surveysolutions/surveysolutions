@{
    Layout = null;
    var page = Request.Params["page"] ?? "";
    var topage = Request.Params["topage"] ?? "";
    var subsection = Request.Params["subsection"] ?? "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <style>
        .footer {
            width: 100%;
        }

        .subsection {
            text-transform: uppercase;
            font-size: 10px;
            font-family: 'RobotoLight';
            vertical-align: bottom;
        }

        .page-number {
            text-align: right;
            font-family: 'RobotoLight';
            font-size: 13px;
            vertical-align: bottom;
        }
    </style>
</head>
<body>
    <table class="footer">
        <tr>
            <td class="subsection">@subsection</td>
            <td class="page-number">
                <span class="page">@page</span> / <span class="topage">@topage</span>
            </td>
        </tr>
    </table>
</body>
</html>