@using WB.UI.Designer.Views.Questionnaire.Pdf
@model PdfEntityView

<div>
    
    @if (this.Model is PdfQuestionView)
    {
        Html.RenderPartial("_RenderQuestionDetails", (PdfQuestionView) this.Model);
    }
    else
    {
        @Html.Raw(string.Format("<h{0}><span>{2} &nbsp;&nbsp;&nbsp;</span>{1}</h{0}>", Math.Min(4, Model.Depth), Html.Encode(Model.Title), Html.Encode(Model.ItemNumber)))
    }

    @if (this.Model.Children.Count > 0)
    {
        <div style="margin-left: 20px;">
            @foreach (var child in this.Model.Children)
            {
                Html.RenderPartial("_RenderChild", child);
            }
        </div>
    }

</div>