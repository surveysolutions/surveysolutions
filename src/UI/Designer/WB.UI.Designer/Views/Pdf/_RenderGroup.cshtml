@using WB.Core.BoundedContexts.Designer.Views.Questionnaire.Pdf
@model Main.Core.Entities.SubEntities.IGroup
@{
    PdfQuestionnaireModel questionnaire = ViewBag.Questionnaire;
    var group = Model;
}
<div class="group">
    <div class="group_container">
        <div class="breacrumbs">@questionnaire.GetBreadcrumbsForGroup(group.PublicKey)</div>
        <div class="sub_section">@questionnaire.GetGroupTitle(group)</div>
        @if (questionnaire.GroupHasEnablementCondition(group))
        {
            <div class="common-info">
                <div class="condition">
                    <span>E</span>@questionnaire.GetExpressionExcerpt(group.ConditionExpression)
                    @if (questionnaire.ExpressionIsTooLong(group.ConditionExpression))
                    {
                        <div class="more">
                            And <a href="#@questionnaire.GetConditionRef(group.PublicKey)">@(group.ConditionExpression.Length - questionnaire.Settings.ExpressionExcerptLength) other symbols [@questionnaire.GetEntityIndexInAppendix(group.PublicKey, "E")]</a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
@Html.Partial("_RenderChildren", group.PublicKey)