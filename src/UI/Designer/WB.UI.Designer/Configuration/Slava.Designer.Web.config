<?xml version="1.0"?>
<configuration>
  <appSettings>
    <add key="Raven.DocumentStore" value="http://localhost:8081" />
    <add key="IsReCaptchaEnabled" value="false"/>
    <add key="Raven.Databases.Views" value="DesignerViews" />
    <add key="Raven.Databases.PlainStorage" value="DesignerPlainStorage" />
    <add key="IsApiSSLVerificationEnabled" value="false" />

    <add key="EventStore.ServerTcpPort" value="1114"/>
