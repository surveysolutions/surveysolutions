<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="Troubleshooting_ScrollableContainer" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:fillViewport">true</item>
  </style>

  <style name="Troubleshooting_Container" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">@dimen/Login_Button_padding</item>
  </style>

  <style name="Troubleshooting_Button" parent="AppTheme">
    <item name="android:layout_width">@dimen/Troubleshooting_Element_width</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">@dimen/Login_Button_padding</item>
    <item name="android:layout_marginBottom">@dimen/Troubleshooting_Button_marginBottom</item>
  </style>
  
</resources>