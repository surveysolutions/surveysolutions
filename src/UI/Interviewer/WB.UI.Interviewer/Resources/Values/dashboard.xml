<?xml version="1.0" encoding="utf-8" ?>
<resources>
  
  <style name="Dashboard_Interviews_Header" parent="AppTheme">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/Dashboard_TabMenu_marginTop</item>
    <item name="android:layout_marginBottom">@dimen/Dashboard_TabMenu_marginBottom</item>
    <item name="android:layout_marginLeft">@dimen/Dashboard_Layout_marginLeft</item>
    <item name="android:layout_marginRight">@dimen/Dashboard_Layout_marginRight</item>
  </style>

  <style name="Dashboard_Interviews_Header_Body" parent="AppTheme">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="Dashboard_TabLink" parent="AppTheme">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:textStyle">bold</item>
  </style>
  
  <style name="Dashboard_NewItemsLink" parent="Dashboard_TabLink">
    <item name="android:textColor">@color/dashboard_new_tab</item>
  </style>

  <style name="Dashboard_StartedLink" parent="Dashboard_TabLink">
    <item name="android:layout_marginLeft">@dimen/Dashboard_TabMenu_tab_marginLeft</item>
    <item name="android:textColor">@color/dashboard_in_progress_tab</item>
  </style>

  <style name="Dashboard_CompletedLink" parent="Dashboard_TabLink">
    <item name="android:layout_marginLeft">@dimen/Dashboard_TabMenu_tab_marginLeft</item>
    <item name="android:textColor">@color/dashboard_complited_tab</item>
  </style>

  <style name="Dashboard_RejectedLink" parent="Dashboard_TabLink">
    <item name="android:layout_marginLeft">@dimen/Dashboard_TabMenu_tab_marginLeft</item>
    <item name="android:textColor">@color/dashboard_rejected_tab</item>
  </style>


  <style name="Dashboard_InterviewsList" parent="AppTheme">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
  </style>

  <style name="Dashboard_InterviewListItem" parent="AppTheme">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/Dashboard_Layout_marginLeft</item>
    <item name="android:layout_marginRight">@dimen/Dashboard_Layout_marginRight</item>
    <item name="android:layout_marginBottom">@dimen/Dashboard_Items_space</item>
  </style>

  <style name="Dashboard_InterviewItem_Layout" parent="AppTheme">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="Dashboard_InterviewItem_StatusPanel" parent="AppTheme">
    <item name="android:layout_width">14dp</item>
    <item name="android:layout_height">fill_parent</item>
  </style>

  <style name="Dashboard_InterviewItem_InformationBlock" parent="AppTheme">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:layout_marginTop">14dp</item>
    <item name="android:layout_marginBottom">14dp</item>
    <item name="android:layout_marginLeft">14dp</item>
    <item name="android:layout_marginRight">14dp</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Dashboard_InterviewItem_Title" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/textsize_20</item>
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="Dashboard_InterviewItem_PrefilledQuestions" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">18dp</item>
  </style>

  <style name="Dashboard_InterviewItem_PrefilledQuestion" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:textSize">@dimen/textsize_20</item>
  </style>

  <style name="Dashboard_InterviewItem_PrefilledQuestion_Question" parent="AppTheme">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">Trebuchet</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:textColor">#747474</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:textAllCaps">true</item>
 </style>

  <style name="Dashboard_InterviewItem_PrefilledQuestion_Delimiter" parent="Dashboard_InterviewItem_PrefilledQuestion_Question">
  </style>

  <style name="Dashboard_InterviewItem_PrefilledQuestion_Answer" parent="AppTheme">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:textColor">#000000</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Dashboard_InterviewItem_Comment" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:textColor">#e32102</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginTop">8dp</item>
  </style>

  <style name="Dashboard_InterviewItem_CreateButton" parent="AppTheme">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>


</resources>


