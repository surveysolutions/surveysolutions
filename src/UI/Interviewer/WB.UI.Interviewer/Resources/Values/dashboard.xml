<?xml version="1.0" encoding="utf-8" ?>
<resources>
  
  <style name="Dashboard_Interviews_Header" parent="AppTheme">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">42dp</item>
    <item name="android:layout_marginBottom">32dp</item>
    <item name="android:layout_marginLeft">32dp</item>
    <item name="android:layout_marginRight">32dp</item>
  </style>

  <style name="Dashboard_Interviews_Header_Body" parent="AppTheme">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="Dashboard_TabLink" parent="AppTheme">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/textsize_9</item>
    <item name="android:textStyle">bold</item>
  </style>
  
  <style name="Dashboard_NewItemsLink" parent="Dashboard_TabLink">
    <item name="android:textColor">#6D6D6D</item>
  </style>

  <style name="Dashboard_StartedLink" parent="Dashboard_TabLink">
    <item name="android:layout_marginLeft">32dp</item>
    <item name="android:textColor">#4C8FD0</item>
  </style>

  <style name="Dashboard_CompletedLink" parent="Dashboard_TabLink">
    <item name="android:layout_marginLeft">32dp</item>
    <item name="android:textColor">#4FCB38</item>
  </style>

  <style name="Dashboard_RejectedLink" parent="Dashboard_TabLink">
    <item name="android:layout_marginLeft">32dp</item>
    <item name="android:textColor">#F5724A</item>
  </style>


  <style name="Dashboard_InterviewsList" parent="AppTheme">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
  </style>

  <style name="Dashboard_InterviewListItem" parent="AppTheme">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">32dp</item>
    <item name="android:layout_marginRight">32dp</item>
    <item name="android:layout_marginBottom">12dp</item>
  </style>

  <style name="Dashboard_InterviewItem_Layout" parent="AppTheme">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="Dashboard_InterviewItem_StatusPanel" parent="AppTheme">
    <item name="android:layout_width">14dp</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:background">#e32102</item>
  </style>

  <style name="Dashboard_InterviewItem_InformationBlock" parent="AppTheme">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:layout_marginTop">14dp</item>
    <item name="android:layout_marginBottom">14dp</item>
    <item name="android:layout_marginLeft">14dp</item>
    <item name="android:layout_marginRight">14dp</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Dashboard_InterviewItem_Title" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/textsize_20</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="Dashboard_InterviewItem_Status" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:textColor">#e32102</item>
    <item name="android:textStyle">bold</item>
  </style>


</resources>


