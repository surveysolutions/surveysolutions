@using System.Web.Optimization
@using WB.Core.SharedKernels.SurveyManagement.Web.Properties
@model IEnumerable<WB.Core.SharedKernels.SurveyManagement.Views.Reposts.Views.TemplateViewItem>
@{
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

@section scripts
{
    @Html.Partial("_ListViewStatusesScript")
    @Scripts.Render("~/Scripts/viewmodels/pages/teamsandstatuses.js")
    <script type="text/javascript">
        var $surveysUrl = '@Url.Action("Index", "Survey")';
        var $interviewsUrl = '@Url.Action("Interviews", "Survey")';
        $(function () {
            var model = new Supervisor.VM.TeamsAndStatuses('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "ReportDataApi", action = "SupervisorTeamMembersAndStatusesReport" })');
            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h3 class="sinle-line-header">@Pages.TeamMembersAndStatuses</h3>}
}

@section actionbar
{
    <h4 class="sinle-line-header text-italic" data-bind="text: QuestionnaireName"></h4>
}

@section filters
{
    <ul class="list-group">
        <li class="list-group-item">
            <h4 class="list-group-item-heading">@Pages.Template</h4>
            <p class="list-group-item-text">
                <select id="questionnaireSelector" data-bind="value: SelectedTemplate" class="form-control">
                    @if (Model.Count() > 1)
                    {
                        <option value="">@Pages.AnyOption</option>
                    }
                    @foreach (var item in Model)
                    {
                        <option value='{"templateId": "@item.TemplateId","version": "@item.TemplateVersion"}'>(ver. @item.TemplateVersion) @item.TemplateName</option>
                    }
                </select>
            </p>
        </li>
    </ul>

}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='sortby: "ResponsibleName"'>@Pages.TeamMember</th>
                <th>@Pages.SupervisorAssigned</th>
                <th>@Pages.InterviewerAssigned</th>
                <th>@Pages.Completed</th>
                <th>@Pages.RejectedBySupervisor</th>
                <th>@Pages.ApprovedByupervisor</th>
                <th>@Pages.RejectedByHeadquarters</th>
                <th>@Pages.ApprovedByHeadquarters</th>
                <th>@Pages.Total</th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                <td>
                    <a data-bind="attr: { href: $surveysUrl + '?responsible=' + Responsible() }, text: Responsible"></a>
                </td>
                <td data-bind="template: { name: 'SupervisorAssignedCountTemplate' }"></td>
                <td data-bind="template: { name: 'InterviewerAssignedCountTemplate' }"></td>
                <td data-bind="template: { name: 'CompletedCountTemplate' }"></td>
                <td data-bind="template: { name: 'RejectedBySupervisorCountTemplate' }"></td>
                <td data-bind="template: { name: 'ApprovedBySupervisorCountTemplate' }"></td>
                <td data-bind="template: { name: 'RejectedByHeadquartersCountTemplate' }"></td>
                <td data-bind="template: { name: 'ApprovedByHeadquartersCountTemplate' }"></td>                
                <td>
                    <a data-bind="attr: { href: $interviewsUrl + '?templateId=' + QuestionnaireId() + '&templateVersion=' + QuestionnaireVersion() + '&responsible=' + Responsible() }, text: TotalCount"></a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}