@using System.Web.Optimization
@using Newtonsoft.Json
@using WB.Core.GenericSubdomains.Portable
@using WB.Core.GenericSubdomains.Utils
@using WB.Core.SharedKernels.DataCollection.ValueObjects.Interview
@using WB.Core.GenericSubdomains.Portable
@using WB.Core.SharedKernels.SurveyManagement.Web.Code
@model WB.Core.SharedKernels.SurveyManagement.Web.Models.DocumentFilter
@{
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/bootstrap3-typeahead.js", "~/Scripts/knockout/ko.typeahead.js", "~/Scripts/viewmodels/pages/interviews.base.js", "~/Scripts/viewmodels/pages/interview/sv.interviews.js")

    <script type="text/javascript">
    var $interviewsPageUrl = '@Html.Raw(@Url.Action("Interviews", "Survey", new { }, Request.Url.Scheme))';
    var $detailsUrl = '@Url.Action("Details", "Interview")';
    var $surveysUrl = '@Url.Action("Index", "Survey")';
    var $commandExecutionUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "CommandApi", action = "ExecuteCommands" })';
    var $statistics = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "InterviewApi", action = "TeamInterviews" })';
    $(function() {
        var users = @Html.Raw(JsonConvert.SerializeObject(Model.Users));
        var responsibles = @Html.Raw(JsonConvert.SerializeObject(Model.Responsibles));
        var model = new Supervisor.VM.SVInterviews($statistics, $interviewsPageUrl, responsibles, users, $commandExecutionUrl);
        model.IsNothingSelected.subscribe(function(value) {
            if (value) {
                model.AssignTo(undefined);   
            }
        });
        ko.applyBindings(model);
        model.load();
    });
    </script>
}

@section header
{
    <h3 class="sinle-line-header">Interviews</h3>
}
@section  actionbar{
    <div class="form-inline">
        <div class="btn-group">
            <div class="input-group" data-bind="disable: IsNothingSelected">
                <input class="form-control" placeholder="Enter interviewer name" data-bind="typeahead: AssignTo, typeaheadOptions: {source: Users, displayText: function(item){return _.isUndefined(item) ? '' : item.UserName}, autoselect: true}, valueupdate:'afterkeydown', disable: IsNothingSelected" type="text" />
                <span class="input-group-btn">
                    <button class="btn btn-success" type="button" data-bind="enable: CanAssignTo, click: $root.Assign">Assign</button>
                </span>
            </div>
            <ul class="dropdown-menu" data-bind="foreach: Users">
                <li><a href="javascript:void(0)" data-bind="click: $root.Assign, text: UserName">Action</a></li>
            </ul>
        </div>

        <button type="button" class="btn btn-default" data-bind="disable: IsNothingSelected, click: $root.ApproveInterview">Approve</button>
        <button type="button" class="btn btn-default" data-bind="disable: IsNothingSelected, click: $root.RejectInterview">Reject</button>

        <div class="input-group">
            <input type="text" id="searchBox" class="form-control" placeholder="Search" data-bind="value: SearchBy, valueUpdate:'afterkeydown', enterKey: filter">
            <div class="input-group-btn">
                <button class="btn btn-default" type="button" data-bind="click: clear">
                    <i class="glyphicon glyphicon-remove"></i>
                </button>
            </div>
        </div>
    </div>
}


@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover table-break-words">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" data-bind="click: $root.selectAll($element)" />
                </th>
                <!-- ko if:SelectedTemplate() == '' -->
                <th>Pre-filled Questions</th>
                <!-- /ko -->
                <!-- ko ifnot:SelectedTemplate() == '' -->
                <!-- ko if:Items().length > 0-->
                <!-- ko foreach:Items()[0].FeaturedQuestions -->
                <th data-bind='text: Question'></th>
                <!-- /ko -->
                <!-- /ko -->
                <!-- /ko -->
                <th data-bind='sortby: "ResponsibleName"'>Responsible</th>
                <th data-bind='sortby: "UpdateDate"'>Last Update</th>
                <th data-bind='sortby: "HasErrors"'>Нas Errors</th>
                <th data-bind='sortby: "Status"'>Status</th>
                <th>Created on Client</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                <td>
                    <input type="checkbox" data-bind="checked: IsSelected" />
                </td>
                <!-- ko if:$root.SelectedTemplate() == '' -->
                <td data-bind="text: $root.getFormattedPrefilledQuestions(FeaturedQuestions()).joinArrayOfObjects('Question', 'Answer')"></td>
                <!-- /ko -->
                <!-- ko ifnot:$root.SelectedTemplate() == '' -->
                <!-- ko foreach:$root.getFormattedPrefilledQuestions(FeaturedQuestions()) -->
                <td data-bind="text: Answer"></td>
                <!-- /ko -->
                <!-- /ko -->
                <td>
                    <a data-bind="attr: { href: $surveysUrl + '?interviewerId=' + ResponsibleId() }, text: ResponsibleName"></a>
                </td>
                <td data-bind="text: LastEntryDate"></td>
                <td>
                    <!-- ko if:HasErrors -->
                    <span class="glyphicon glyphicon-ok pull-right margin-right-5" style="color:red"></span>
                    <!-- /ko -->
                </td>
                <td data-bind="text: Status"></td>
                <td>
                    <input type="checkbox" data-bind="checked: CreatedOnClient, enable: false" />
                </td>
                <td>
                    <a class="btn btn-success" data-bind="attr: { href: $detailsUrl + '/' + InterviewId() }">
                        <i class="glyphicon glyphicon-align-justify"></i>
                    </a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>

    <script type="text/html" id="confirm-assign-template">
        @Html.Raw(WB.Core.SharedKernels.SurveyManagement.Web.Resources.Interviews.AssignConfirmMessage.FormatString(
            "<span class='text-normal' data-bind='text: length'></span>",
            InterviewStatus.SupervisorAssigned.ToLocalizeString(),
            InterviewStatus.InterviewerAssigned.ToLocalizeString(),
            InterviewStatus.RejectedBySupervisor.ToLocalizeString()))
    </script>
    <script type="text/html" id="confirm-approve-template">
        @Html.Raw(WB.Core.SharedKernels.SurveyManagement.Web.Resources.Interviews.ApproveConfirmMessage.FormatString(
            "<span class='text-normal' data-bind='text: length'></span>",
            InterviewStatus.Completed.ToLocalizeString(),
            InterviewStatus.RejectedByHeadquarters.ToLocalizeString()))
    </script>
    <script type="text/html" id="confirm-reject-template">
        @Html.Raw(WB.Core.SharedKernels.SurveyManagement.Web.Resources.Interviews.RejectConfirmMessage.FormatString(
            "<span class='text-normal' data-bind='text: length'></span>",
            InterviewStatus.Completed.ToLocalizeString(),
            InterviewStatus.RejectedByHeadquarters.ToLocalizeString()))
    </script>
    <script type="text/html" id="confirm-continue-message-template">
        <br/>@WB.Core.SharedKernels.SurveyManagement.Web.Resources.Interviews.ContinueConfirmMessage
    </script>

}

@section filters
{
    <ul class="list-group">
        <li class="list-group-item">
            <h4 class="list-group-item-heading">Template</h4>
            <p class="list-group-item-text">
                <select data-bind="value: SelectedTemplate" class="form-control">
                    @if (Model.Templates.Count() > 1)
                    {
                        <option value="">Any</option>
                    }
                    @foreach (var item in Model.Templates)
                    {
                        <option value='{"templateId": "@item.TemplateId","version": "@item.TemplateVersion"}'>(ver. @item.TemplateVersion) @item.TemplateName</option>
                    }
                </select>
            </p>
        </li>
        <li class="list-group-item">
            <h4 class="list-group-item-heading">Responsible</h4>
            <p class="list-group-item-text">
                <input class="form-control" data-bind="typeahead: SelectedResponsible, typeaheadOptions: {source: Responsibles, displayText: function(item){return item.UserName}, autoselect: true, addItem: DefaultResponsible}, valueupdate:'afterkeydown'" type="text"/>
            </p>
        </li>
        <li class="list-group-item">
            <h4 class="list-group-item-heading">Status</h4>
            <p class="list-group-item-text">
                <select data-bind="value: SelectedStatus" class="form-control">
                    <option value="">Any</option>
                    @foreach (var item in Model.Statuses)
                    {
                        <option value="@item.Status">@item.StatusName</option>
                    }
                </select>
            </p>
        </li>
    </ul>

}
