@using WB.Core.SharedKernel.Utils
@model List<WB.Core.SharedKernels.SurveyManagement.Views.TabletInformation.TabletInformationView>
@{
    Layout = "~/Views/Shared/_LayoutWithoutSidebar.cshtml";
    ViewBag.Title = "Index";
}
<div class="row-fluid">
    <div>
        <h3>Tablet information packages</h3>
        <table class="table table-striped table-bordered table-condensed table-break-words">
            <thead>
                <tr>
                    <th>AndroidId</th>
                    <th>RegistrationId</th>
                    <th>UploadDate</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AndroidId</td>
                        <td>@item.RegistrationId</td>
                        <td>
                            @item.CreationDate.ToShortDateString() @item.CreationDate.ToLongTimeString()
                        </td>
                        <td class="buttons">
                            <div class="btn-group">
                                <a href="@Url.Action("DownloadPackages", "TabletReport", new { fileName = item.PackageName })" class="btn btn-primary"><i class="icon-white"></i>Download (@FileSizeUtils.SizeSuffix(item.Size))</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
