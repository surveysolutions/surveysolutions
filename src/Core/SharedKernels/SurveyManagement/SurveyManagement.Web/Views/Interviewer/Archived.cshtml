@using System.Web.Optimization
@using Main.Core.Entities.SubEntities
@using WB.Core.GenericSubdomains.Utils
@using WB.Core.SharedKernels.DataCollection.ValueObjects.Interview
@using WB.Core.SharedKernels.SurveyManagement.Web.Code
@model WB.Core.SharedKernels.SurveyManagement.Views.User.UserView
@{
    Layout = "~/Views/Shared/_NoFilterListViewLayout.cshtml";
    ViewBag.Title = string.Format("{0}: Interviewers", Model.UserName);
}

@section scripts
{
    @Scripts.Render("~/Scripts/viewmodels/pages/users.js")
    <script type="text/javascript">
        var $commandExecutionUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "CommandApi", action = "ExecuteCommands" })';
        $(function () {
            var model = new Supervisor.VM.Users('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "UsersApi", action = "ArchivedInterviewers" })', $commandExecutionUrl);
            model.GetFilterMethod = function () {
                return { SupervisorId: '@Model.PublicKey' };
            };
            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h2 class="sinle-line-header">
        @Model.UserName <small>archived interviewers</small>
    </h2>
}

@section gridnavigation
{
    <div class="btn-group">
        <div class="form-inline">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" data-bind="value: SearchBy, enterKey: search">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="button" data-bind="click: search">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    @if (!Model.IsArchived)
    {
        <div class="btn-group pull-right">
            <a class="btn btn-default" href="@Url.Action("Interviewers", "Supervisor", new {area = string.Empty, id = Model.PublicKey})">
                Active interviewers
            </a>
        </div>
    }
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='sortby : "UserName"'>Name</th>
                <th data-bind='sortby : "CreationDate"'>Creation date</th>
                <th data-bind='sortby : "Email"'>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                <td data-bind="text: UserName"></td>
                <td data-bind="text: CreationDate"></td>
                <td data-bind="text: Email"></td>
                <td>
                    @if (User.IsInRole("Administrator"))
                    {
                        <div class="btn-group pull-right">
                            <a class="btn btn-success" data-bind="click : $parent.unarchiveUser">
                                <i class="glyphicon glyphicon-plus"></i>
                            </a>
                        </div>
                    }
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>

    <script type="text/html" id="confirm-delete-template">
        @Html.Raw("<h3>Interviewer will be unarchived.</h3>".FormatString(
            "<span class='text-normal' data-bind='text: length'></span>"))
    </script>
    <script type="text/html" id="confirm-continue-message-template">
        <br />Do you want to continue?
    </script>
}