@using System.Web.Optimization
@using Main.Core.Entities.SubEntities
@using WB.Core.GenericSubdomains.Utils
@using WB.Core.SharedKernels.DataCollection.ValueObjects.Interview
@using WB.Core.SharedKernels.SurveyManagement.Web.Code
@using WB.Core.SharedKernels.SurveyManagement.Web.Resources
@model WB.Core.SharedKernels.SurveyManagement.Views.User.UserView
@{
    Layout = "~/Views/Shared/_NoFilterListViewLayout.cshtml";
    ViewBag.Title = string.Format("{0}: Interviewers", Model.UserName);
}

@section scripts
{
    @Scripts.Render("~/Scripts/viewmodels/pages/users.js")
    <script type="text/javascript">
        var $commandExecutionUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "CommandApi", action = "ExecuteCommands" })';
        $(function () {
            var model = new Supervisor.VM.Users('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "UsersApi", action = "ArchivedInterviewers" })', $commandExecutionUrl);
            model.GetFilterMethod = function () {
                return { SupervisorId: '@Model.PublicKey' };
            };
            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h2 class="sinle-line-header">
        @Model.UserName <small>@Archived.ArchivedInterviewers</small>
    </h2>
}

@section gridnavigation
{
    <div class="btn-group">
        <div class="form-inline">
            @if (User.IsInRole(UserRoles.Administrator.ToString()))
            {
                <button type="button" class="btn btn-default" data-bind="disable: IsNothingSelected, click: $root.unarchiveInterviewers">@Archived.Unarchive</button>
            }
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" data-bind="value: SearchBy, enterKey: search">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="button" data-bind="click: search">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    @if (!Model.IsArchived)
    {
        <div class="btn-group pull-right">
            <a class="btn btn-default" href="@(User.IsInRole(UserRoles.Supervisor.ToString()) ? Url.Action("Index", "Interviewer", new { area = string.Empty }) : Url.Action("Interviewers", "Supervisor", new { area = string.Empty, id = Model.PublicKey }))">
                @Archived.ActiveInterviewers
            </a>
        </div>
    }
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                @if (User.IsInRole(UserRoles.Administrator.ToString()))
                {
                    <th>
                        <input type="checkbox" data-bind="click: $root.selectAll($element)" />
                    </th>}
                <th data-bind='sortby : "UserName"'>@Archived.Name</th>
                <th data-bind='sortby : "CreationDate"'>@Archived.CreationDate</th>
                <th data-bind='sortby : "Email"'>@Archived.Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                @if (User.IsInRole(UserRoles.Administrator.ToString()))
                {
                    <td>
                        <input type="checkbox" data-bind="checked: IsSelected" />
                    </td>
                }
                <td data-bind="text: UserName"></td>
                <td data-bind="text: CreationDate"></td>
                <td data-bind="text: Email"></td>
                <td>
                    
                    @if (User.IsInRole("Administrator") && !Model.IsArchived)
                    {
                        <div class="btn-group pull-right">
                            <a class="btn btn-success" data-bind="click : $parent.unarchiveUser">
                                <i class="glyphicon glyphicon-plus"></i>
                            </a>
                        </div>
                    }
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>

    <script type="text/html" id="confirm-delete-template">
        <h3>
            <b>
                <!-- ko foreach:$data -->
                '<span class='text-normal' data-bind='text: UserName'></span>'
                <!-- /ko -->
            </b>
            @Archived.UnarchiveInterviewerWarning
        </h3>
    </script>
    <script type="text/html" id="confirm-continue-message-template">
        <br />@Archived.DoYouWantToContinue
    </script>
}