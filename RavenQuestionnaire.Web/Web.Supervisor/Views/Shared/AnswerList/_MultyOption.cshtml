@using Main.Core.View.Answer
@using Questionnaire.Core.Web.Helpers

@model Main.Core.View.Question.CompleteQuestionView
@{
    var settings = (IDictionary<string, object>)ViewBag.EnabledRadioBoxSettings;
    settings.Add("onclick", "$(this.form).submit()"); 
}
<fieldset data-role="controlgroup" data-type="horizontal">
    <legend>@Html.Raw(Model.Title)</legend>
    @foreach (CompleteAnswerView item in Model.Answers)
    {
        using (Html.BeginCollectionItem("Answers", true, item.PublicKey))
        {
            @Html.Hidden("Parent", Model.PublicKey)
            @Html.Hidden("PublicKey", item.PublicKey)
            <label class="checkbox" for="@ViewData.TemplateInfo.GetFullHtmlFieldId("Selected")">
                @Html.CheckBox("Selected", item.Selected, settings)
                @{ Html.RenderPartial(string.Format("Answer/_{0}", item.AnswerType), item); }
            </label>
        }
    }
</fieldset>