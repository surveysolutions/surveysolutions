@using System.Web.Optimization
@using Web.Supervisor.Models
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="@Url.Content("~/Content/favicon.png")" />
    @{
        var page = ViewBag.ActivePage ?? MenuItem.Logon;
    }
    @Scripts.Render("~/js/main")
    @Styles.Render("~/css/main")
    @RenderSection("scripts", false)
</head>
<body>
    <div class="navbar  navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <div class="nav-collapse ">
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Headquarter"))
                        {
                        <a class="brand" href="@Url.Action("Index", "HQ")">Dashboard</a>
                        <ul class="nav" role="menu">
                            <li class="divider-vertical"></li>
                            <li class="dropdown @(page == MenuItem.Surveys || page == MenuItem.Summary || page == MenuItem.Statuses ? "active" : "")">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reports <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li class="@(page == MenuItem.Surveys ? "active" : "")" ><a href="@Url.Action("Surveys", "HQ")">
                                        <i class="icon-filter"></i>by Interviewers</a> </li>
                                    <li class="@(page == MenuItem.Summary ? "active" : "")"><a href="@Url.Action("Summary", "HQ")">
                                        <i class="icon-filter"></i>by Surveys</a> </li>
                                    <li class="@(page == MenuItem.Statuses ? "active" : "")"><a href="@Url.Action("Status", "HQ")">
                                        <i class="icon-filter"></i>by Statuses</a> </li>
                                </ul>
                                <li class="@(page == MenuItem.Docs ? "active" : "")">
                                    @Html.ActionLink("Documents", "Documents", "HQ")</li>
                            <li class="@(page == MenuItem.Teams ? "active" : "")">
                                @Html.ActionLink("Teams", "Index", "Team")
                            </li>
                        </ul>
                        }
                        else
                        {
                        <a class="brand" href="@Url.Action("Index", "Survey")">Dashboard</a>
                        <ul class="nav" role="menu">
                            <li class="divider-vertical"></li>
                            <li class="dropdown @(page == MenuItem.Surveys || page == MenuItem.Summary || page == MenuItem.Statuses ? "active" : "")">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reports <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li class="@(page == MenuItem.Surveys ? "active" : "")" ><a href="@Url.Action("Index", "Survey")">
                                        <i class="icon-filter"></i>by Interviewers</a> </li>
                                    <li class="@(page == MenuItem.Summary ? "active" : "")"><a href="@Url.Action("Summary", "Survey")">
                                        <i class="icon-filter"></i>by Surveys</a> </li>
                                    <li class="@(page == MenuItem.Statuses ? "active" : "")"><a href="@Url.Action("Status", "Survey")">
                                        <i class="icon-filter"></i>by Statuses</a> </li>
                                </ul>
                                <li class="@(page == MenuItem.Interviewers ? "active" : "")">@Html.ActionLink("Interviewers", "Index", "User")</li>
                            <li class="@(page == MenuItem.Docs ? "active" : "")">
                                @Html.ActionLink("Documents", "Documents", "Survey")</li>
                        </ul>
                        }
                        <div class="pull-right">
                            <ul class="nav pull-right" role="menu">
                                @if (User.IsInRole("Headquarter"))
                                {
                                    <li class="dropdown @(page == MenuItem.Administration ? "active" : "")">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration <b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Import template", "Import", "Template")</li>
                                            <li>@Html.ActionLink("Create new assigment", "Questionnaires", "Dashboard")</li>
                                            <li>@Html.ActionLink("Backup", "Index", "Backup")</li>
                                        </ul>
                                    </li>
                                }
                                <li class="divider-vertical"></li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hi, <b>@User.Identity.Name</b> <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Logoff", "LogOff", "Account")</li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div id="page" class="container-fluid" style="margin-top: 40px">
        <div style="margin-top: 20px">@Html.Partial("_alerts")</div>
        <div id="main">
            @RenderBody()
        </div>
    </div>
</body>
</html>
