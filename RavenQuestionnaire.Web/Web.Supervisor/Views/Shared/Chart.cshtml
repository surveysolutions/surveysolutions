@using Web.Supervisor.Models
@using System.Web.Script.Serialization

@model ChartDataModel

 <script src="@Url.Content("~/Scripts/highcharts.js")" type = "text/javascript"> </script>
 <script src="@Url.Content("~/Scripts/exporting.js")" type = "text/javascript"> </script>

@{
    var total = Json.Encode(@Model.Data.Select(t=>t.Total).ToArray());
    var approved = Json.Encode(@Model.Data.Select(t => t.Approved).ToArray());
    var r = new JavaScriptSerializer();
    var xTitles = r.Serialize(@Model.Data.Select(t => t.Name).ToArray());
}

<div id="container" style="min-width: 400px; height: 400px; margin: 0 auto"></div>

<script type="text/javascript">
$(function () {
    var chart;
    $(document).ready(function() {
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container',
                type: 'line',
                marginRight: 130,
                marginBottom: 25
            },
            title: {
                text: '@Model.Title',
                x: -20 
            },
            subtitle: {
                text: '',
                x: -20
            },
            xAxis: {
                categories: @Html.Raw(xTitles) 
            },
            yAxis: {
                title: {
                    text: 'Count'
                },
                plotLines: [{
                    value: 0,
                    width: 1,
                    color: '#808080'
                }]
            },
            tooltip: {
                formatter: function() {
                        return '<b>'+ this.series.name +'</b><br/>'+
                        this.x +': '+ this.y;
                }
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'top',
                x: 0,
                y: 100,
                borderWidth: 0
            },
            series: [{
                name: 'Total',
                data: @total            
            }, {
                name: 'Approved',
                data: @approved
            }]
        });
    });

});
</script>