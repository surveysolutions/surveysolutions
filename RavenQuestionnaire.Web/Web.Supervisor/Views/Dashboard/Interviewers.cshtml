@using Core.Supervisor.Views.Interviewer
@model InterviewersView
<h2>Interviewers</h2>
<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Login</th>
            <th>CreationDate </th>
            <th>Email </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (InterviewersItem item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @if (item.IsLocked)
                    {
                        <a href="@Url.Action("UnlockUser", "Dashboard")">Unlock</a>
                    }
                    else
                    {
                        <a href="@Url.Action("LockUser", "Dashboard")">Lock</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>