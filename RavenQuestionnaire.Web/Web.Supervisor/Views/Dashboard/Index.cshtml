@using Main.Core.View.Questionnaire

@model QuestionnaireBrowseView

@{
    ViewBag.Title = "Index";
}

<h2>HQ Dashboard</h2>
<div class="row-fluid">
    <div class="span6"></div>
    <div class="span6">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Title</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="buttons">
                            <div class="btn-group">
                                <a  href="@Url.Action("NewSurvey", "Dashboard", new { id = item.Id })" class="btn btn-primary">New survey</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
