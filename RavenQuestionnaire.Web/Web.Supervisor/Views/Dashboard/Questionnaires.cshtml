@using Main.Core.View.Questionnaire
@model Main.Core.View.Questionnaire.QuestionnaireBrowseView
@{
    ViewBag.Title = "Take a new survey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Take a New </h1>
<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Title </th>
            <th>Creation date </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (QuestionnaireBrowseItem item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td class="buttons">
                    <div class="btn-group">
                        <a  href="@Url.Action("NewSurvey", "Dashboard", new {id = item.QuestionnaireId})" class="btn btn-primary">
                            New survey</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>