@using RavenQuestionnaire.Core.Views.User
@model InterviewerView
@{
    ViewBag.Title = "User assignments";
}

<script src="../../Scripts/sorter.js" type="text/javascript"></script>
<script>
    $(document).ready(function() {
        $("#questionnaireTable").tablesorter({
                order: "@Model.Order",
                send: function(data) {
                    $.ajax({
                            type: "POST",
                            url: "@Url.Action("TableGroupByUser", "User")",
                            data: JSON.stringify({ SortOrder: data, Pager: { Page: @Model.Page , PageSize: @Model.PageSize }, UserId: '@Model.UserId' }),
                            contentType: 'application/json, charset=utf-8',
                            statusCode: {
                                200: function(response) {
                                    $("#questionnaireTable tbody").html(response);
                                }
                            }
                        });
                }
            });
    });
</script>

<h2>@(Model.UserName)'s assignment</h2>
<table id="questionnaireTable" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th class="sorting" sorter='{"key":"QuestionnaireTitle"}'>Survey</th>
            @foreach (var header in Model.FeaturedHeaders)
            {
                <th class="sorting" sorter='{"key":"@header.Value"}'>@header.Value</th>
            }
            <th class="sorting" sorter='{"key":"Status.Name"}'>Status</th>
        </tr>
    </thead>
    <tbody>
        @Html.Partial("_TableGroupByUser", Model)
    </tbody>
</table>