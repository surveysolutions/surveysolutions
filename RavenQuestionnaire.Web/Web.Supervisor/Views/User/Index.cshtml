@using System.Web.Optimization
@{
    Layout = "~/Views/Shared/_ListViewLayout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/vm/userlistview.js")

    <script type="text/javascript">
        $(function() {

            var model = new ListViewMasterModel('@Url.RouteUrl("DefaultApiWithAction", new {httproute = "", controller = "UsersApi", action = "Interviewers"})');
            model['UserList'] = new UserListViewModel('@Url.RouteUrl("DefaultApiWithAction", new {httproute = "", controller = "UsersApi", action = "Lock"})');
            
            ko.applyBindings(model);
        });
    </script>
}

@section header
{
    <h2 class="sinle-line-header">Interviewers</h2>
}

@section filters
{
    <ul class="nav nav-list">
        <li class="nav-header">FILTER</li>
        <li class="divider"></li>
    </ul>
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='click: ListView.sort.bind($data, "UserName")'><span class="btn-link">Name</span></th>
                <th data-bind='click: ListView.sort.bind($data, "CreationDate")'><span class="btn-link">Creation date</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Email")'><span class="btn-link">Email</span></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:ListView.Items -->
            <tr>
                <td data-bind="text: UserName"></td>
                <td data-bind="text: CreationDate"></td>
                <td data-bind="text: Email"></td>
                <td>
                    <!-- ko if:IsLocked -->
                    <a class="btn btn-info" data-bind="click: $root.UserList.lock">
                        <i class="icon icon-unlock icon-white"></i>Unlock</a>
                    <!-- /ko -->
                    <!-- ko ifnot:IsLocked -->
                    <a class="btn btn-danger" data-bind="click: $root.UserList.lock">
                        <i class="icon icon-lock icon-white"></i>Lock</a>
                    <!-- /ko -->
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}