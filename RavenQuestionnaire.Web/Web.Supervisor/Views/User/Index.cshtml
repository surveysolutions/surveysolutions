@using RavenQuestionnaire.Core.Views.User
@model InterviewersView
<h2>Interviewers</h2>
<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Login</th>
            <th>Creation date </th>
            <th>Email </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                     <a href="@Url.Action("Details", "User", new { id = item.Id })">@item.Login</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @if (item.IsLocked)
                    {
                        <a href="@Url.Action("UnlockUser", "User", new {id=item.Id})">Unlock</a>
                    }
                    else
                    {
                        <a href="@Url.Action("LockUser", "User", new { id = item.Id })">Lock</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
