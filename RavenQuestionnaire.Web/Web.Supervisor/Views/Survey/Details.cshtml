@using Main.Core.Entities.SubEntities
@using Main.Core.View.Group
@using Core.Supervisor.Views.Survey
@using ClientDependency.Core.Mvc
@model SurveyScreenView
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type = "text/javascript"> </script>
@{Html.RequiresCss("details.css", "Content", 50);}
<script type="text/javascript">
   
    $(document).ready(function () {

        
        
        $('#groups .body').css('top', ($('#groups .title').outerHeight() + 'px'));

        $.ajaxSetup({
            cache: false
        });

        $('a.nav-link').live("click", function () {

            if ($(this).hasClass("disabled")) {
                return false;
            }

            var href = $(this).attr('href');

            var ref = $('#groups ul a[href=\"' + href + '\"]');

            if (ref.length > 0) {
                $('#groups ul a').parent().removeClass('active');

                $(ref).parent().addClass('active');
            }

            var request = $.ajax({
                url: href,
                type: "POST",
                data: {},
                dataType: "html"
            });

            request.done(function (msg) {
                $("#content_container").html(msg);

                $('div.expander').expander();
            });

            request.fail(function (jqXHR, textStatus) {
                alert("Request failed: " + textStatus);
            });
            return false;
        });
    });
    function JsonResults(data) {
        var response = jQuery.parseJSON(data.responseText);
        if (response.status === "ok") {

        } else {
            alert(response.error);
        }
    };
    
    
</script>
<div id="stacks">
    <div id="groups" class="stack">
        <div class="inner">
            <div class="title">
                <span>
                    @if (!string.IsNullOrEmpty(Model.Status.ChangeComment))
                    { 
                        <a  data-content="@Model.Status.ChangeComment" data-placement="bottom" rel="popover" href="#" data-original-title="Survey comment">@Model.Title</a>
                    }
                    else
                    {
                        <text>@Model.Title</text>
                    }
                </span>
            </div>
            <div class="body">
                <ul class="nav nav-list">
                    @foreach (var gh in Model.Navigation.Menu)
                    {
                        if (gh.Propagated == Propagate.None)
                        {
                        <li class="@("level" + gh.Level) @(gh.Enabled ? "" : "ui-disabled")" id="@gh.PublicKey"><a class="nav-link" id="ref-link-@gh.PublicKey"  data-panel="main" href="@Url.Action("Screen", new { Id = Model.QuestionnairePublicKey, group = gh.PublicKey })" >
                            <span id="counter-@gh.PublicKey" class="count">@gh.Totals.Answered/@gh.Totals.Enablad</span>
                            <span class="link-text">@gh.GroupText</span> </a></li>
                        }
                        else
                        {
                        <li class="@("level" + gh.Level) @(gh.Enabled ? "" : "ui-disabled")" id="@gh.PublicKey"><a class="nav-link" id="ref-link-@gh.PublicKey"  data-panel="main" href="@Url.Action("Screen", new { Id = Model.QuestionnairePublicKey, group = gh.PublicKey, propagationKey = gh.PropagationKey })" >
                            <span id="counter-@gh.PublicKey" class="count">@gh.Totals.Answered/@gh.Totals.Enablad</span>
                            <span class="link-text">@gh.GroupText</span> </a></li>
                        }
                    }
                </ul>
            </div>
            <div class="bottom">
            <div class="inner">
                <a class="btn btn-mini btn-info" id="ref-link-statusHistoryLink" href="@Url.Action("StatusHistory", new { Id = Model.QuestionnairePublicKey })" >
                    Status history</a>


            </div>
            </div>
        </div>
    </div>
    <div id="answers" class="stack">
        <div class="inner">
            <div id="content_container" class='@((Model.Status.PublicId == SurveyStatus.Complete.PublicId) ? "ui-disabled" : "")'>
                @Html.Partial("_SurveyContent", Model)
            </div>
        </div>
    </div>
</div>
