@using System.Web.Optimization
@model IEnumerable<Core.Supervisor.Views.Summary.SummaryTemplateViewItem>
@{
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/vm/summarylistview.js")
    @Html.Partial("_ListViewStatusesScript")
    <script type="text/javascript">
        var $surveysUrl = '@Url.Action("Index", "Survey")';
        var $interviewsUrl = '@Url.Action("Interviews", "Survey")';
        $(function () {
            var model = new SummaryListViewModel('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "SummaryApi", action = "Summary" })');

            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h3 class="sinle-line-header">Interviewers and Statuses.</h3>
}

@section filters
{
    <ul>
        <li class="heading"><span>FILTER</span></li>
        <li><label>Template</label>
    <select data-bind="value: SelectedTemplate" class="input-block-level">
        @if (Model.Count() > 1)
        {
            <option>Any</option>
        }
        @foreach (var item in Model)
        {
            <option value="@item.TemplateId">@item.TemplateName</option>
        }
    </select>
        </li>
    </ul>
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='sortby: "ResponsibleName"'>Responsibles</th>
                <th data-bind='sortby: "UnassignedCount"'>Unassigned</th>
                <th data-bind='sortby: "InitialCount"'>Initial</th>
                <th data-bind='sortby: "RedoCount"'>Redo</th>
                <th data-bind='sortby: "CompletedCount"'>Completed</th>
                <th data-bind='sortby: "CompletedWithErrorsCount"'>Completed with Errors</th>
                <th data-bind='sortby: "ApprovedCount"'>Approved</th>
                <th data-bind='sortby: "TotalCount"'>Total</th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:ListView.Items -->
            <tr>
                <td>
                    <a data-bind="attr: { href: $surveysUrl + '?interviewerid=' + User.Id() }, text: User.Name"></a>
                </td>
                <td data-bind="template: { name: 'unassignedTemplate' }"></td>
                <td data-bind="template: { name: 'initialTemplate' }"></td>
                <td data-bind="template: { name: 'redoTemplate' }"></td>
                <td data-bind="template: { name: 'completedTemplate' }"></td>
                <td data-bind="template: { name: 'errorTemplate' }"></td>
                <td data-bind="template: { name: 'approvedTemplate' }"></td>
                <td data-bind="text: Total"></td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}