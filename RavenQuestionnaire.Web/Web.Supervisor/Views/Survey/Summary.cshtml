@using System.Web.Optimization
@{
    Layout = "~/Views/Shared/_ListViewLayout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/vm/summarylistview.js")

    <script type="text/javascript">
        $(function () {

            var model = new ListViewMasterModel('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "SummaryApi", action = "Summary" })');
            model['Summary'] = new SummaryListViewModel('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "SummaryApi", action = "Templates" })');

            model.Summary.SelectedTemplate.subscribe(function () {
                model.load();
            });
            model.ListView.GetFilterMethod = function () {
                return { TemplateId: model.Summary.SelectedTemplate };
            };

            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h2 class="sinle-line-header">Interviewers and Questionnaire Statuses.</h2>
}

@section filters
{
    <ul class="nav nav-list">
        <li class="nav-header">FILTER</li>
        <li class="divider"></li>
        <li>Template:
                <select data-bind="options: Summary.Templates, optionsText: 'TemplateName', optionsValue: 'TemplateId', optionsCaption: 'Any', value: Summary.SelectedTemplate"></select>
        </li>
    </ul>
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='click: ListView.sort.bind($data, "User.Name")'><span class="btn-link">Interviewers</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Initial")'><span class="btn-link">Initial</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Redo")'><span class="btn-link">Redo</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Completed")'><span class="btn-link">Completed</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Error")'><span class="btn-link">Completed with Errors</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Approved")'><span class="btn-link">Approved</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Total")'><span class="btn-link">Total</span></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:ListView.Items -->
            <tr>
                <td data-bind="text: User.Name"></td>
                <td data-bind="text: Initial"></td>
                <td data-bind="text: Redo"></td>
                <td data-bind="text: Completed"></td>
                <td data-bind="text: Error"></td>
                <td data-bind="text: Approved"></td>
                <td data-bind="text: Total"></td>
            </tr>
            <!-- /ko -->
            <!-- ko if:ListView.ItemsSummary != null -->
            <tr data-bind="with: ListView.ItemsSummary">
                <th data-bind="text: User.Name"></th>
                <th data-bind="text: Initial"></th>
                <th data-bind="text: Redo"></th>
                <th data-bind="text: Completed"></th>
                <th data-bind="text: Error"></th>
                <th data-bind="text: Approved"></th>
                <th data-bind="text: Total"></th>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}