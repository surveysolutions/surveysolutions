@using RavenQuestionnaire.Core.Views.Survey
@model SurveyBrowseView
@{
    ViewBag.Title = "Surveys";
}
<script src="../../Scripts/sorter.js" type="text/javascript"></script>
<script>
    $(document).ready(function() {
        $("#questionnaireTable").tablesorter({
                order: "@Model.Order",
                send: function(data) {
                    $.ajax({
                            type: "POST",
                            url: "@Url.Action("_TableData", "Survey")",
                            data: JSON.stringify({ SortOrder: data, Pager: { Page: @Model.Page , PageSize: @Model.PageSize } }),
                            contentType: 'application/json, charset=utf-8',
                            statusCode: {
                                200: function(response) {
                                    $("#questionnaireTable tbody").html(response);
                                }
                            }
                        });
                }
            });
    });
</script>
<h2>Surveys</h2>
<table  id="questionnaireTable" class="table table-striped table-bordered table-condensed">
<thead>
    <tr>
        <th sorter='{"key":"Id"}'>Survey</th>
        <th sorter='{"key":"Id"}'>Initial date</th>
        @foreach (var item in Model.Headers)
        {
            <th sorter='{"key":"@item"}'>@item</th>
        }
    </tr>
</thead>
<tbody>
@Html.Partial("_Table", Model)
</tbody>
</table>
