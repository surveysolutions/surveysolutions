@{
    ViewBag.Title = "Timeline";
}
<h2>Timeline</h2>
@using Core.Supervisor.Views.Timeline
@model TimelineView
@{
    this.ViewBag.Title = "Timeline";
    var dates = new List<object>();
    foreach (var @event in Model.Events)
    {
        dates.Add(new
            {
                startDate = @event.StartDate.ToString("yyyy,M,dd,H,mm,s"),
                headline = @event.Question.QuestionView.Title,
                text = "<p>In true political fashion, his character rattles off common jargon heard from people running for office.</p>"
            });
    }
    var timeline = new
        {
            headline = Model.Title,
            type = "default",
            startDate = Model.StartDate.ToString("yyyy,M,dd,H,mm,s"),
            date = dates
        };
}
<link href="../../Content/TimelineJS/css/timeline.css" rel="stylesheet" type="text/css" />
<script src="../../Content/TimelineJS/js/timeline.js" type="text/javascript"></script>
<div id="timeline-embed" style="height: 800px;">
</div>
<script type="text/javascript">
    var timeline_config = {
        width: "100%",
        height: "400",
        source: @Html.Raw(Json.Encode(new { timeline = timeline }))
    }
</script>
<script src="../../Content/TimelineJS/js/storyjs-embed.js" type="text/javascript"></script>
