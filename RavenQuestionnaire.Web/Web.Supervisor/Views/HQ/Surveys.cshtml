@using System.Web.Optimization
@{
    Layout = "~/Views/Shared/_ListViewLayout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/vm/surveylistview.js")

    <script type="text/javascript">
        $(function () {

            var model = new ListViewMasterModel('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "SurveysApi", action = "Surveys" })');
            model['Summary'] = new SurveyListViewModel('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "SurveysApi", action = "Users" })');

            model.Summary.SelectedUser.subscribe(function () {
                model.load();
            });
            model.ListView.GetFilterMethod = function () {
                return { UserId: model.Summary.SelectedUser };
            };

            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h2 class="sinle-line-header">Surveys and Questionnaire Statuses</h2>
}

@section filters
{
    <ul class="nav nav-list">
        <li class="nav-header">FILTER</li>
        <li class="divider"></li>
        <li>Supervisors:
                <select data-bind="options: Summary.Users, optionsText: 'UserName', optionsValue: 'UserId', optionsCaption: 'Any', value: Summary.SelectedUser"></select>
        </li>
    </ul>
        </ul>
    </div>
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='click: ListView.sort.bind($data, "Template.Title")'><span class="btn-link">Survey Name</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Unassigned")'><span class="btn-link">Unassigned</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Initial")'><span class="btn-link">Initial</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Redo")'><span class="btn-link">Redo</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Completed")'><span class="btn-link">Completed</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Error")'><span class="btn-link">Completed with Errors</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Approved")'><span class="btn-link">Approved</span></th>
                <th data-bind='click: ListView.sort.bind($data, "Total")'><span class="btn-link">Total</span></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:ListView.Items -->
            <tr>
                <td data-bind="text: Template.Title"></td>
                <td data-bind="text: Unassigned"></td>
                <td data-bind="text: Initial"></td>
                <td data-bind="text: Redo"></td>
                <td data-bind="text: Completed"></td>
                <td data-bind="text: Error"></td>
                <td data-bind="text: Approved"></td>
                <td data-bind="text: Total"></td>
            </tr>
            <!-- /ko -->
            <!-- ko if:ListView.ItemsSummary != null -->
            <tr data-bind="with: ListView.ItemsSummary">
                <th data-bind="text: Template.Title"></th>
                <th data-bind="text: Unassigned"></th>
                <th data-bind="text: Initial"></th>
                <th data-bind="text: Redo"></th>
                <th data-bind="text: Completed"></th>
                <th data-bind="text: Error"></th>
                <th data-bind="text: Approved"></th>
                <th data-bind="text: Total"></th>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}