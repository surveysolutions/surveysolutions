@using System.Web.Optimization
@model IEnumerable<Core.Supervisor.Views.Summary.SummaryTemplateViewItem>
@{
    Layout = "~/Views/Shared/_ListViewLayout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/vm/summarylistview.js")
    @Html.Partial("_ListViewStatusesScript")

    <script type="text/javascript">
        var $surveysUrl = '@Url.Action("Surveys", "HQ")';
        var $interviewsUrl = '@Url.Action("Interviews", "HQ")';
        $(function () {
            var model = new SummaryListViewModel('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "SummaryApi", action = "Summary" })');
            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h3 class="sinle-line-header">Supervisors and Statuses.</h3>
}

@section filters
{
    <ul>
        <li class="heading"><span>FILTER</span></li>
        <li>Template:
            <select data-bind="value: SelectedTemplate">
                <option>Any</option>
                @foreach (var item in Model)
                {
                    <option value="@item.TemplateId">@item.TemplateName</option>
                }
            </select>
        </li>
    </ul>
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='sortby : "User.Name"'>Interviewers</th>
                <th data-bind='sortby : "Unassigned"'>Unassigned</th>
                <th data-bind='sortby : "Initial"'>Initial</th>
                <th data-bind='sortby : "Redo"'>Redo</th>
                <th data-bind='sortby : "Completed"'>Completed</th>
                <th data-bind='sortby : "Error"'>Completed with Errors</th>
                <th data-bind='sortby : "Approved"'>Approved</th>
                <th data-bind='sortby : "Total"'>Total</th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:ListView.Items -->
            <tr>
                <td>
                    <a data-bind="attr: { href: $surveysUrl + '?interviewerid=' + User.Id() }, text: User.Name"></a>
                </td>
                <td data-bind="template: { name: 'unassignedTemplate' }"></td>
                <td data-bind="template: { name: 'initialTemplate' }"></td>
                <td data-bind="template: { name: 'redoTemplate' }"></td>
                <td data-bind="template: { name: 'completedTemplate' }"></td>
                <td data-bind="template: { name: 'errorTemplate' }"></td>
                <td data-bind="template: { name: 'approvedTemplate' }"></td>
                <td data-bind="text: Total"></td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}

