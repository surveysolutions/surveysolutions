@using System.Web.Optimization
@model IEnumerable<Core.Supervisor.Views.Reposts.Views.TemplateViewItem>
@{
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

@section scripts
{
    @Html.Partial("_ListViewStatusesScript")
    @Scripts.Render("~/Scripts/viewmodels/pages/teamsandstatuses.js")
    <script type="text/javascript">
        var $surveysUrl = '@Url.Action("SurveysAndStatuses", "HQ")';
        var $interviewsUrl = '@Url.Action("Interviews", "HQ")';
        $(function () {
            var model = new Supervisor.VM.TeamsAndStatuses('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "ReportDataApi", action = "HeadquarterSupervisorsAndStatusesReport" })');
            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h3 class="sinle-line-header">Teams and Statuses</h3>
}

@section filters
{
    <ul>
        <li class="heading"><span>FILTER</span></li>
        <li>
            <label>Template</label>
            <select data-bind="value: SelectedTemplate" class="input-block-level">
                @if (Model.Count() > 1)
                {
                    <option value="">Any</option>
                }
                @foreach (var item in Model)
                {
                    <option value='{"templateId": "@item.TemplateId","version": "@item.TemplateVersion"}'>(ver. @item.TemplateVersion) @item.TemplateName</option>
                }
            </select>
        </li>
    </ul>
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='sortby: "ResponsibleName"'>Supervisors</th>
                <th data-bind='sortby: "CreatedCount"'>Created</th>
                <th data-bind='sortby: "SupervisorAssignedCount"'>Supervisor assigned</th>
                <th data-bind='sortby: "InterviewerAssignedCount"'>Interviewer assigned</th>
                <th data-bind='sortby: "CompletedCount"'>Completed</th>
                <th data-bind='sortby: "RejectedBySupervisorCount"'>Rejected by supervisor</th>
                <th data-bind='sortby: "ApprovedBySupervisorCount"'>Approved by supervisor</th>
                <th data-bind='sortby: "RejectedByHeadquartersCount"'>Rejected by HQ</th>
                <th data-bind='sortby: "ApprovedByHeadquartersCount"'>Approved by HQ</th>
                <th data-bind='sortby: "TotalCount"'>Total</th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                <td>
                    <a data-bind="attr: { href: $surveysUrl + '?interviewerId=' + ResponsibleId() }, text: ResponsibleName"></a>
                </td>
                <td data-bind="template: { name: 'CreatedCountTemplate' }"></td>
                <td data-bind="template: { name: 'SupervisorAssignedCountTemplate' }"></td>
                <td data-bind="template: { name: 'InterviewerAssignedCountTemplate' }"></td>
                <td data-bind="template: { name: 'CompletedCountTemplate' }"></td>
                <td data-bind="template: { name: 'RejectedBySupervisorCountTemplate' }"></td>
                <td data-bind="template: { name: 'ApprovedBySupervisorCountTemplate' }"></td>
                <td data-bind="template: { name: 'RejectedByHeadquartersCountTemplate' }"></td>
                <td data-bind="template: { name: 'ApprovedByHeadquartersCountTemplate' }"></td>
                <td>
                    <a data-bind="attr: { href: $interviewsUrl + '?templateId=' + QuestionnaireId() + '&templateVersion=' + QuestionnaireVersion() + '&interviewerId=' + ResponsibleId() }, text: TotalCount"></a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}

