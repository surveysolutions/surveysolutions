@using System.Web.Optimization
@{
    Layout = "~/Views/Shared/_NoFilterListViewLayout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/viewmodels/pages/designerquestionnaires.js")
    <script type="text/javascript">
        $(function () {
            var model = new Supervisor.VM.DesignerQuestionnaires('@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "DesignerQuestionnairesApi", action = "QuestionnairesList" })',
                '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "DesignerQuestionnairesApi", action = "GetQuestionnaire" })');

            model.onQuestionnaireImported = function () {
                window.location.href = '@Url.Action("Index", "HQ")';
            };

            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h3 class="sinle-line-header">Designer Questionnaires</h3>
}

@section gridnavigation
{
    <div class="menubar">
        <form data-bind="submit: filter">
            <div class="input-append search-bar">
                <input class="span4" type="text" data-bind="value: Query"  />
                <button class="btn" type="button" data-bind="click: filter">Search</button>
            </div>
        </form>
    </div>
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='sortby: "Title"'>Title</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:Items -->
            <tr>
                <td data-bind="text: Title"></td>
                <td>
                    <a class="btn btn-primary" data-bind="click: $parent.getQuestionnaire"><i class="icon icon-info-sign icon-white"></i> Import</a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}
