@using System.Web.Optimization
@model Core.Supervisor.Views.ChangeStatus.ChangeStatusView
@{
    ViewBag.Title = "Change state survey";
}
@section scripts
{
    @Scripts.Render("~/Scripts/viewmodels/pages/interviewchangestate.js")
    <script type="text/javascript">
        var interviewId = '@Model.InterviewId';
        var interviewsUrl = '@Url.Action("InterviewStatusChanged", "Survey", new {}, Request.Url.Scheme)';
        var commandExecutionUrl = '@Url.RouteUrl("DefaultApiWithAction", new { httproute = "", controller = "CommandApi", action = "Execute" })';
        $(function () {
            var model = new Supervisor.VM.InterviewChangeState(commandExecutionUrl, interviewId, interviewsUrl);
            ko.applyBindings(model);
            model.load();
        });
    </script>
}

<h2>@Model.QuestionnaireTitle <small>(ver. @Model.QuestionnaireVersion)</small></h2>
<div class="row-fluid">
    <div class="span12">
        <div class="control-group">
            <label class="control-label" for="comment">Comment</label>
            <div class="controls">
                <textarea rows="3" class="input-block-level" id="comment" data-bind="value: Comment"></textarea>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span6">
        <button class="btn btn-success" data-bind="click: Approve">Approve</button>
    </div>
    <div class="span6">
        <div class="pull-right">
            <button class="btn btn-danger" data-bind="click: Reject">Reject</button>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span6 offset3">
        <h3>State change history</h3>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>User</th>
                    <th>set status</th>
                    <th>with comment</th>
                    <th>on</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ch in Model.StatusHistory)
                {
                    <tr>
                        <td>user
                        </td>
                        <td>
                            @ch.Status
                        </td>
                        <td>
                            @ch.Comment
                        </td>
                        <td>
                            @ch.Date.ToLocalTime()
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
