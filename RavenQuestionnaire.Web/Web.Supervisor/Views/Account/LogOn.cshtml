@using Web.Supervisor.Models
@using Web.Supervisor.Utils
@model LogOnModel
@{
    ViewBag.Title = "Log On";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>
@using (Html.BeginForm())
{
    <div class="modal inline-modal">
        <div class="modal-header">
            <h3>Log On</h3>
        </div>
        <div class="modal-body">
            <fieldset class="form-horizontal">
                @Html.BootstrapValidationSummary("Login was unsuccessful. Please correct the errors and try again.")
                <div class="control-group">
                    @Html.LabelFor(m => m.UserName, new {@class = "control-label"})
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-user"></i></span>@Html.TextBoxFor(m => m.UserName, new {@class = "xlarge"})
                            <span class="help-inline">@Html.ValidationMessageFor(m => m.UserName)</span>
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    @Html.LabelFor(m => m.Password, new {@class = "control-label"})
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-envelope"></i></span>@Html.PasswordFor(m => m.Password, new {@class = "xlarge"})
                            <span class="help-inline">@Html.ValidationMessageFor(m => m.Password)</span>
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label for="optionsCheckbox" class="control-label">&nbsp;</label>
                    <div class="controls">
                        <label class="checkbox">@Html.CheckBoxFor(m => m.RememberMe) @Html.LabelFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="modal-footer">
            <input type="submit" value="Log On" class="btn btn-primary" />
        </div>
    </div>
}