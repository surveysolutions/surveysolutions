@using System.Web.Optimization
@{
    Layout = "~/Views/Shared/_NoFilterListViewLayout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Scripts/vm/userlistview.js")

    <script type="text/javascript">
        var $detailsUrl = '@Url.Action("Details", "Team")';
        $(function() {
            var model = new UserListViewModel('@Url.RouteUrl("DefaultApiWithAction", new {httproute = "", controller = "UsersApi", action = "Interviewers"})');
            model.ListView.GetFilterMethod = function () {
                return { SupervisorId: '@Model' };
            };
            ko.applyBindings(model);
            model.load();
        });
    </script>
}

@section header
{
    <h2 class="sinle-line-header">Interviewers</h2>
}

@section gridnavigation
{
    @if (User.IsInRole("Headquarter"))
    {
        <div class="menubar">
            <a class="btn " href="@Url.Action("AddInterviewer", "Team", new {id = Model})">
                <i class="icon icon-user icon-white"></i> Add interviewer</a>    
        </div>
    }
}

@section grid
{
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th data-bind='sortby : "UserName"'>Name</th>
                <th data-bind='sortby : "CreationDate"'>Creation date</th>
                <th data-bind='sortby : "Email"'>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:ListView.Items -->
            <tr>
                <td data-bind="text: UserName"></td>
                <td data-bind="text: CreationDate"></td>
                <td data-bind="text: Email"></td>
                <td>
                    <a class="btn btn-info" data-bind="attr: { href: $detailsUrl + '/' + UserId() }">
                        <i class="icon icon-edit icon-white"></i> Details</a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
}