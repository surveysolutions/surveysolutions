@using Questionnaire.Core.Web.Helpers
@using RavenQuestionnaire.Core.Views.Question
@model CompleteQuestionView
@{
    Guid answerGuid = Model.Answers.Length > 0 ? Model.Answers[0].PublicKey : Guid.NewGuid();
    var settings = ((IDictionary<string, object>) ViewBag.EnabledRadioBoxSettings);
}
@using (Html.BeginCollectionItem("Answers", true, answerGuid))
{
    @Html.Hidden("Parent", Model.PublicKey)
    @Html.Hidden("PublicKey", answerGuid)
    @Html.Hidden("Selected", true)
    string id = ViewData.TemplateInfo.GetFullHtmlFieldId("AnswerValue");
    var requiredAttribute = string.Empty;
    if (Model.Mandatory) { requiredAttribute = "required=\"true\""; }
    @Html.IconInput("AnswerValue", Model.Answer ?? string.Empty, Model.Title, new { draw_key_board = "true", @requiredAttribute }, new { @class = "keyboard" }, new { @class = "bold" })
}