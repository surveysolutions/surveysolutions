<div data-role="panel" data-id="menu">
    <!-- Start of first page -->
    <div data-role="page" id="sidebar">
        <div data-role="header" data-theme="c">
            <a class="nav-link" data-corners="false"  data-icon="arrow-l" href="@Url.Action("Dashboard", "Survey")" rel = "external">
                Dashboard</a>
            <h3></h3>
        </div>
        <!-- /header -->
        <div data-role="content" class="with-footer" data-iscroll="">
            <ul data-role="listview" data-theme="c" data-dividertheme="d" data-counttheme="e">
                @foreach (CompleteGroupHeaders gh in Model.Groups)
                {
                    var activ = @gh.Enabled ? "" : "ui-disabled";
                    activ += gh.IsCurrent ? "ui-btn-active" : "";
                    <li class="@activ" id="@gh.PublicKey">
                       @* 
                        @if(gh.IsCurrent)
                        {
                            <a  id="ref-link-@(gh.PublicKey)" href="#screen-@gh.PublicKey" data-panel="main"> @gh.GroupText
                                  <span id="counter-@(gh.PublicKey)" class="ui-li-count current">@(gh.Totals.Answered)/@gh.Totals.Enablad</span></a>
                        }else{*@
                        
                        <a  id="ref-link-@(gh.PublicKey)" @*href="javascript:void(0)"  *@ data-panel="main" href="@Url.Action("Screen", new { Id = Model.Id, group = gh.PublicKey })" 
                            @*onclick="CheckIsCanChangePage(this)"*@> @gh.GroupText
                                  <span id="counter-@(gh.PublicKey)" class="ui-li-count current">@(gh.Totals.Answered)/@gh.Totals.Enablad</span></a>@*}*@
                            
                           
                    </li>
                }
            </ul>
        </div>
        <!-- /content -->
        <div data-role="footer" data-position="fixed" data-id="ew-footer">
            <div data-role="navbar">
                <ul>
                    <li><a data-role="button" data-corners="false" href="@Url.Action("Statistic", "Survey", new { id = Model.Id })" 
                           rel="external" data-ajax="false">Statistics</a></li>
                    <li>
                        @if (Model.Status.PublicId == SurveyStatus.Complete.PublicId)
                        {
                            <a data-corners="false" data-ajax="false" data-role="button" rel="external" href="@Url.Action("ReInit", "Survey", new { id = Model.Id })">
                                ReInit</a>
                        }
                        else
                        {
                            <a data-corners="false" href="#transparent" data-rel="popup" data-role="button" data-inline="true" id="CompleteLink" returnlink="@Url.Action("Dashboard", "Survey")" link="@Url.Action("Complete", "Survey", new { id=@Model.Id})">Complete</a>
                        }</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div data-role="panel" data-id="main" id="content_container" class='@((Model.Status.PublicId == SurveyStatus.Complete.PublicId) ? "ui-disabled" : "")'>
    @Html.Partial("_SurveyContent", Model.CurrentScreen)
</div>
<script type="text/javascript">
    $("div.ui-block-a").click(function () {
        if (jQuery(this).find("div.ui-disabled div.ui-controlgroup-controls:visible").length > 0)
            jQuery(this).find("div.ui-disabled div.ui-controlgroup-controls:visible").hide();
        else
            if (jQuery(this).find("div.ui-disabled div.ui-controlgroup-controls:hidden").length > 0)
                jQuery(this).find("div.ui-disabled div.ui-controlgroup-controls:hidden").show();
    });
</script>
