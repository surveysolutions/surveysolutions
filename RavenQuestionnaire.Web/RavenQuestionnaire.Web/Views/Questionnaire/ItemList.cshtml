@using RavenQuestionnaire.Core.Views.Questionnaire
@using RavenQuestionnaire.Web.Models
@model Main.Core.View.Questionnaire.QuestionnaireBrowseView
@{
    ViewBag.Title = "Take a new survey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>
    Take a New
</h1>
<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Creation date
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td class="buttons">
                    
                    <div class="btn-group">
    <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">Participate<span
        class="caret"></span></a>
    <ul class="dropdown-menu">
        <li><a href="@Url.Action("Participate", "CompleteQuestionnaire", new { id = item.Id, mode="" })">
            Horizontal</a></li>
        <li><a href="@Url.Action("Participate", "CompleteQuestionnaire", new { id = item.Id, mode = "V" })">
            Vertical</a></li>
        <li><a href="@Url.Action("Participate", "CompleteQuestionnaire", new { id = item.Id, mode = "C" })">
            Modal</a></li>
            <li><a href="@Url.Action("Participate", "CompleteQuestionnaire", new { id = item.Id, mode = "I" })">
            Tabbable</a></li>
            <li><a href="@Url.Action("Participate", "CompleteQuestionnaire", new { id = item.Id, mode = "Html5" })">
            Mobile</a></li>
    </ul>
</div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pagination">
    @Html.QPager(Model.PageSize, Model.Page, Model.TotalCount)
</div>
