@using RavenQuestionnaire.Core.Views.Questionnaire
@model QuestionnaireBrowseView

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Id
        </th>
        <th>
            Title
        </th>
        <th>Creation date</th>
        <th>Last edit date</th>
        <th></th>
    </tr>

@foreach (var item in Model.Items) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
          <td>
            @Html.DisplayFor(modelItem => item.LastEntryDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.Id })|

            <b>@Html.ActionLink("Participate", "Take","CompleteQuestionnaire",  new { id = item.Id }, null)</b>
        </td>
    </tr>
}

</table>
<div class="pager">
    @Html.Pager(Model.PageSize, Model.Page, Model.TotalCount)
</div>
