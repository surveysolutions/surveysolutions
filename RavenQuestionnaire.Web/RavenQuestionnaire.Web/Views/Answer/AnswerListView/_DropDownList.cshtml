@using Questionnaire.Core.Web.Helpers
@using RavenQuestionnaire.Core.Views.Answer
@model IEnumerable<CompleteAnswerView>

@{
    Guid selected = Guid.Empty;
    var answer = Model.FirstOrDefault(a => a.Selected);
    if (answer != null)
    {
        selected = answer.PublicKey;
    }
    ((IDictionary<string,object>)ViewBag.EnabledRadioBoxSettings).Add("onchange", "$(this.form).submit();");
}
  @Html.Hidden(ViewData.TemplateInfo.HtmlFieldPrefix + ".answers[0].QuestionPublicKey", Model.FirstOrDefault().QuestionId)
@Html.DropDownList(ViewData.TemplateInfo.HtmlFieldPrefix + ".answers[0].PublicKey", new SelectList(Model, "PublicKey", "AnswerText", selected), "Select answer", (IDictionary<string, object>)ViewBag.EnabledRadioBoxSettings)