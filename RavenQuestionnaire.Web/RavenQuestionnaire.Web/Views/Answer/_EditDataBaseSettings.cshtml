@using Questionnaire.Core.Web.Helpers
@using RavenQuestionnaire.Core.Views.Answer
@using RavenQuestionnaire.Web.Utils
@model AnswerView

@{ var currentRowId = "divEditAnswer" + Model.PublicKey.ToString(); }
@using (Html.BeginCollectionItem("answers"))
{
    <div id="@currentRowId">
        <div class="control-group">
            @Html.LabelFor(model => Model.NameCollection, new { @class = "control-label" })
            <div class="controls">
                @Html.DropDownListFor(model => model.NameCollection, (SelectList)ViewBag.Collection) 
                <a class="btn btn-mini btn-danger" onclick="" href="javascript:void(0)">Fill answers</a>                   
            </div>
        </div>
        @Html.HiddenFor(model => Model.PublicKey)
    </div>
}