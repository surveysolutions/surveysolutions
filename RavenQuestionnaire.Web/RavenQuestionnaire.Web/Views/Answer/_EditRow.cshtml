@using Questionnaire.Core.Web.Helpers
@using RavenQuestionnaire.Core.Views.Answer
@model AnswerView
@{ var currentRowId = "divEditAnswer" + Model.PublicKey.ToString(); }
@using (Html.BeginCollectionItem("Answers"))
{
   <div id="@currentRowId">
     <p>
        ------------------------------------------------------------</p>
   
        <div class="editor-label">
            @Html.LabelFor(model => Model.AnswerText)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => Model.AnswerText)
            @Html.ValidationMessageFor(model => Model.AnswerText)
        </div>
        <div>
            @Html.HiddenFor(model => Model.PublicKey)
        </div>
        <a href="javascript:void(0)" onclick="$('#@currentRowId').remove()">Delete</a>
    </div>
    
}