@using RavenQuestionnaire.Core.Views.CompleteQuestionnaire
@using RavenQuestionnaire.Web.Models
@model CompleteQuestionnaireBrowseView
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="bordered-table zebra-striped">
    <thead>
        <tr>
            <th>Id </th>
            <th>Title </th>
            <th>Last edit date </th>
            <th>Status </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionnaireTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastEntryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Name)
                    @Html.HiddenFor(modelItem => item.Status.Id)
                </td>
                <td class="buttons">
                    @Html.ActionLink("Details", "Result", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pagination">
    @Html.QPager(Model.PageSize, Model.Page, Model.TotalCount)
</div>
