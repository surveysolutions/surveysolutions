@using RavenQuestionnaire.Core.Views.CompleteQuestionnaire
@using RavenQuestionnaire.Web.Models
@model CompleteQuestionnaireBrowseView
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="../../Scripts/sorter.js" type="text/javascript"></script>
<script>
    $(document).ready(function() {
        $("#questionnaireTable").tablesorter({
                order: "@Model.Order",
                send: function(data) {
                    $.ajax({
                            type: "POST",
                            url: "@Url.Action("_TableIndexData", "CompleteQuestionnaire")",
                            data: JSON.stringify({ Orders: data, Page: @Model.Page , PageSize: @Model.PageSize }),
                            contentType: 'application/json, charset=utf-8',
                            statusCode: {
                                200: function(response) {
                                    $("#questionnaireTable tbody").html(response);
                                }
                            }
                        });
                }
            });
    });
</script>
<h1> All Completed </h1>
<table id="questionnaireTable" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th sorter='{"key":"Id"}'>Id</th>
            <th sorter='{"key":"Questionnaire.Title"}'>Title </th>
            <th sorter='{"key":"CreationDate"}'>Creation date</th>
            <th sorter='{"key":"LastEntryDate"}'>Last edit date</th>
            <th sorter='{"key":"Status.Name"}'>Status</th>
            <th sorter='{"disable":"true"}'>Responsible</th>
            <th sorter='{"disable":"true"}'></th>
        </tr> 
    </thead>
    <tbody>
        @Html.Partial("_TableIndex", Model)
    </tbody>
</table>
<div class="pagination">
    @Html.QPager(Model.PageSize, Model.Page, Model.TotalCount, new { order = Model.Order })
</div>
