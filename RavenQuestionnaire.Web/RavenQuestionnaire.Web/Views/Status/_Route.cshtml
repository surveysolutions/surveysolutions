@using RavenQuestionnaire.Core.Views.Status
@using RavenQuestionnaire.Web.Utils
@model StatusView

@if (Model != null)
{<table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>
                    Condition
                </th>
                <th>
                    Comment on changing
                </th>
                <th>
                    Target Status
                </th>
                <th>
                    Order
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.FlowRules != null)
            {
                foreach (var item in Model.FlowRules)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Value.ConditionExpression)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Value.ChangeComment)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Value.TargetStatus.Name)
                            @*@Html.ActionLink("Route", "Route", new { id = item.Id }, new { @class = "btn small " })*@
                        </td>
                        <td class="buttons">
                        </td> 
                        <td class="buttons">
                            <p>
                                @Ajax.ActionLink("Edit", "EditRoute", "Status",
                               new { publicId = item.Key, qId = Model.QuestionnaireId, statusId=Model.Id },
                               new AjaxOptions { UpdateTargetId = "addNewRoute", OnSuccess = "OpenModal" },        
                               new { @class = "btn" } 
                               )
                            </p>
                            @*@Html.ActionLink("Route", "Route", new { id = item.Id }, new { @class = "btn small " })*@
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}