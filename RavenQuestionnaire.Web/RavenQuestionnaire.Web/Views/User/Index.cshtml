@using RavenQuestionnaire.Core.Views.User
@model UserBrowseView
<h2>
    Users</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Login
        </th>
        <th>
            Location
        </th>
        <th>
            CreationDate
        </th>
        <th>
            IsLocked
        </th>
        <th>
            Email
        </th>
        <th>
            Supervisor
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLocked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupervisorName)
            </td>
            <td class="buttons">
                @Html.ActionLink("Edit", "Manage" , new { id = item.Id }, new { })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new {@class="delete"})
            </td>
        </tr>
    }
</table>
<div class="pager">
    @Html.Pager(Model.PageSize, Model.Page, Model.TotalCount)
</div>
